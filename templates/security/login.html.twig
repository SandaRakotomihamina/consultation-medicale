{% extends 'base.html.twig' %}

{% block title %}log in{% endblock %}

{% block body %}
	<div style="max-width:420px;margin:2rem auto;padding:1.5rem;border:1px solid #eee;border-radius:8px;">
		<h1 style="margin-top:0">log in</h1>
		<form action="{{ path('app_login') }}" method="post">
			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			<div style="margin-bottom:.75rem">
				<label for="id">Username</label><br>
				<input type="text" value="{{ last_username }}" name="username" id="inputUsername" required autofocus style="width:100%;padding:.5rem;border:1px solid #ccc;border-radius:4px" />
			</div>

			<div style="margin-bottom:.75rem">
				<label for="inputPassword">Password</label><br>
				<input type="password" name="password" id="inputPassword" autocomplete="current-password" required style="width:100%;padding:.5rem;border:1px solid #ccc;border-radius:4px" />
			</div>

			<div style="display:flex;gap:.5rem;align-items:center">
				<button type="submit" style="padding:.5rem 1rem;background:#0366d6;color:#fff;border:none;border-radius:4px;cursor:pointer">Log in</button>
			</div>
		</form>
	</div>
	{% if error %}
		<div style="padding:1rem;background:#fee;color:#c33;border:1px solid #fcc;border-radius:4px;margin-bottom:1rem">
			{{ error.messageKey|trans(error.messageData, 'security') }}
		</div>
	{% endif %}
{% endblock %}