{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
<style>
    *, *::before, *::after {
        box-sizing: border-box;
    }

    body {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background: var(--bg-body);
        font-family: 'Inter', sans-serif;
        margin: 0;
        position: relative;
        transition: background 0.3s ease;
    }

    .login-container {
        width: 100%;
        max-width: 400px;
        padding: 2rem;
        border-radius: 12px;
        background: var(--bg-primary);
        box-shadow: 0 10px 25px var(--shadow-dark);
        transition: transform 0.2s, box-shadow 0.2s, background 0.3s ease;
        overflow: hidden;
    }

    .login-container:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 30px var(--shadow-dark-hover);
    }

    .login-header {
        display: flex;
        align-items: center;
        margin-bottom: 2rem;
    }

    .login-header img {
        max-width: 50px;
        margin-right: 1rem;
    }

    .login-header h1 {
        font-size: 1.8rem;
        margin: 0;
        color: var(--accent-color);
        transition: color 0.3s ease;
    }

    .floating-group {
        position: relative;
        margin-bottom: 1.5rem;
    }

    .floating-group input {
        width: 100%;
        padding: 0.85rem 0.75rem;
        padding-right: 2.5rem;
        border: 1px solid var(--border-color);
        border-radius: 8px;
        outline: none;
        font-size: 1rem;
        transition: border 0.2s, box-shadow 0.2s, border-color 0.3s ease;
        background: var(--bg-primary);
        color: var(--text-primary);
    }

    .floating-group input:focus {
        border-color: var(--accent-color);
        box-shadow: 0 0 0 3px rgba(3,102,214,0.1);
    }

    .floating-group label {
        position: absolute;
        top: 50%;
        left: 0.75rem;
        transform: translateY(-50%);
        color: var(--text-muted);
        pointer-events: none;
        transition: 0.2s ease all, color 0.3s ease;
        background: var(--bg-primary);
        padding: 0 0.25rem;
    }

    .floating-group input:focus + label,
    .floating-group input:not(:placeholder-shown) + label {
        top: -0.6rem;
        left: 0.6rem;
        font-size: 0.75rem;
        color: var(--accent-color);
    }

    .toggle-password {
        position: absolute;
        right: 0.6rem;
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
        color: var(--text-muted);
        transition: color 0.2s;
    }

    .toggle-password:hover {
        color: var(--accent-color);
    }

    .login-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 1rem;
        margin-top: 1rem;
    }

    .button {
        flex: 1;
        padding: 0.75rem;
        font-size: 1rem;
        font-weight: 600;
        border-radius: 10px;
        cursor: pointer;
        border: none;
        color: #fff;
        transition: all 0.25s ease;
        box-shadow: 0 6px 14px rgba(0,0,0,0.18);
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 0.5rem;
    }

    .button:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 18px rgba(0,0,0,0.22);
    }

    .button:active {
        transform: translateY(2px);
        box-shadow:
            inset 3px 3px 7px rgba(255, 255, 255, 0.87),
            inset -3px -3px 7px rgba(44, 41, 41, 0.5);
    }

    .btn-login {
        background: var(--accent-color);
        transition: background 0.3s ease;
    }

    .btn-login:hover {
        background: var(--accent-hover);
    }

    .btn-reset {
        background: #9b9b9b;
    }

    .btn-reset:hover {
        background: #7d7d7d;
    }

    .loader {
        border: 3px solid var(--bg-tertiary);
        border-top: 3px solid #fff; 
        border-radius: 50%;
        width: 18px;
        height: 18px;
        animation: spin 1s linear infinite;
        display: none;
    }

    @keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }

    .error {
        width: 100%;
        max-width: 400px;
        padding: 1rem;
        background: var(--error-bg-flash);
        color: var(--error-text-flash);
        border: 1px solid var(--error-border-flash);
        border-radius: 8px;
        text-align: left;
        position: absolute;
        bottom: 3rem;
        left: 50%;
        transform: translateX(-50%);
        z-index: 1000;
        transition: background 0.3s ease, color 0.3s ease, border-color 0.3s ease;
    }

    .flash-close {
        position: absolute;
        top: 0.5rem;
        right: 0.5rem;
        background: transparent;
        border: none;
        font-size: 20px;
        line-height: 20px;
        cursor: pointer;
        color: inherit;
        opacity: 0.5;
    }

    .flash-close:hover {
        opacity: 0.8;
    }
</style>

<div class="login-container" data-aos="zoom-in" data-aos-duration="500ms">
    <div class="login-header">
        <img src="{{ asset('/images/logo.png') }}" alt="Logo">
        <h1>Se connecter</h1>
    </div>

    <form id="loginForm" action="{{ path('app_login') }}" method="post" onsubmit="showLoading()">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <div class="floating-group">
            <input type="text" name="username" id="inputUsername" placeholder=" " required>
            <label for="inputUsername">Nom d'utilisateur ou Matricule</label>
        </div>

        <div class="floating-group">
            <input type="password" name="password" id="inputPassword" placeholder=" " required>
            <label for="inputPassword">Mot de passe</label>

            <span class="toggle-password" onclick="togglePassword()">
                <svg id="eyeIcon" xmlns="http://www.w3.org/2000/svg" fill="none"
                     viewBox="0 0 24 24" stroke="currentColor" width="22" height="22">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                        d="M13.875 18.825A10.05 10.05 0 0112 19c-5.523 0-10-4-10-7 
                           0-1.21.63-2.634 1.72-3.93m3.522-2.83A9.978 9.978 0 0112 5c5.523 0 10 4 10 7 
                           0 1.387-.63 2.864-1.72 4.17M15 12a3 3 0 11-6 0 3 3 0 016 0zm5 9L4 3"/>
                </svg>
            </span>
        </div>

        <div class="login-actions">
            <button type="submit" class="button btn-login" id="btnLogin" data-loading>
                <span class="btn-text">Connexion</span>
                <span class="loader"></span>
            </button>
            <button type="reset" class="button btn-reset">Annuler</button>
        </div>
    </form>
</div>

{% if error %}
<div class="error">
    {{ error.messageKey|trans(error.messageData, 'security') }}
    <button class="flash-close" onclick="this.parentElement.remove()">Ã—</button>
</div>
{% endif %}

<script>
    function togglePassword() {
        const input = document.getElementById("inputPassword");
        const icon = document.getElementById("eyeIcon");

        if (input.type === "password") {
            input.type = "text";
            icon.innerHTML = `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M1.5 12s4-7 10.5-7 10.5 7 10.5 7-4 7-10.5 7S1.5 12 1.5 12zm10.5 3a3 3 0 100-6 3 3 0 000 6z"/>`;
        } else {
            input.type = "password";
            icon.innerHTML = `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                d="M13.875 18.825A10.05 10.05 0 0112 19c-5.523 0-10-4-10-7 
                0-1.21.63-2.634 1.72-3.93m3.522-2.83A9.978 9.978 0 0112 5c5.523 0 10 4 10 7 
                0 1.387-.63 2.864-1.72 4.17M15 12a3 3 0 11-6 0 3 3 0 016 0zm5 9L4 3"/>`;
        }
    }

    function showLoading() {
        const btn = document.getElementById('btnLogin');
        const text = btn.querySelector('.btn-text');
        const loader = btn.querySelector('.loader');

        text.style.display = 'none';
        loader.style.display = 'inline-block';
    }
    AOS.init();
</script>

{% endblock %}
