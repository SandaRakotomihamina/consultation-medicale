{% extends 'base.html.twig' %}

{% block title %}Consultation{% endblock %}

{% block body %}
    <style>
        .flash {
            animation: popupIn 0.4s ease-out forwards;
            transform-origin: center;
            border-radius: 8px;
            position: fixed;
            bottom: 20px;
            left: 10px;
            box-sizing: border-box;
            box-shadow:
                3px 3px 6px rgba(0,0,0,0.12),
                -3px -3px 6px rgba(255,255,255,1);
            font-size: 16px;
            z-index: 1100;
            text-align: center;
            max-width: 90vw;
            padding: 0.8rem 1.2rem;
        }

        .flash.fade-out {
            animation: popupOut 0.5s ease-out forwards;
        }

        @keyframes popupIn {
            from { transform: scale(0.85) translateX(-50px); opacity: 0; }
            to   { transform: scale(1) translateX(0); opacity: 1; }
        }

        @keyframes popupOut {
            from { transform: scale(1) translateX(0); opacity: 1; }
            to   { transform: scale(0.85) translateX(-50px); opacity: 0; }
        }

        .flash:hover {
            transform: translateX(0) translateY(-2px);
            transition: all .25s ease;
            box-shadow:
                3px 3px 6px rgba(0,0,0,0.12),
                -3px -3px 6px rgba(255,255,255,1);
        }
    </style>

    {% include '_partial/nav.html.twig' %}
    {% include '_partial/subNav.html.twig' %}

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="flash flash-{{ label }}">
                <span>{{ message }}</span>
            </div>
        {% endfor %}
    {% endfor %}

    {% if app.user %}
        <div data-controller="infinite-scroll">
            {% include 'main/consultations/list_consultations.html.twig' %}
        </div>        
    {% endif %}

    {% include '_partial/footer.html.twig' %}

    <script>
        (function() {
            function initFlashes() {
                const flashes = document.querySelectorAll('.flash:not([data-flash-initialized])');
                flashes.forEach(function(flash) {
                    flash.dataset.flashInitialized = 'true';

                    setTimeout(function() {
                        flash.classList.add('fade-out');

                        setTimeout(function() {
                            flash.style.display = 'none';
                        }, 500);
                    }, 5000);
                });
            }

            document.addEventListener('DOMContentLoaded', initFlashes);
            document.addEventListener('turbo:load', initFlashes);
            initFlashes();
        })();
        
        (function() {
            const feed = document.getElementById('consultations-feed');
            if (!feed) return;
            
            let lastId = parseInt(feed.dataset.lastId) || 0;
            let isPolling = true;
            let isLoading = false;
            let lastRequestTime = 0;
            let pollingInterval = null;
            const POLLING_INTERVAL_MS = 10000;
            
            // Nettoyer l'intervalle existant s'il y en a un (évite les doublons)
            if (window.consultationPollingInterval) {
                clearInterval(window.consultationPollingInterval);
            }
            
            function showFlashMessage(message, type = 'info') {
                const flash = document.createElement('div');
                flash.className = `flash flash-${type}`;
                flash.style.cssText = `
                    animation: popupIn 0.4s ease-out forwards;
                    transform-origin: center;
                    border-radius: 8px;
                    position: fixed;
                    bottom: 20px;
                    left: 10px;
                    box-sizing: border-box;
                    box-shadow: 3px 3px 6px rgba(0,0,0,0.12), -3px -3px 6px rgba(255,255,255,1);
                    font-size: 16px;
                    z-index: 1100;
                    text-align: center;
                    max-width: 90vw;
                    padding: 0.8rem 1.2rem;
                `;
                flash.innerHTML = `<span>${message}</span>`;
                document.body.appendChild(flash);
                
                setTimeout(() => {
                    flash.classList.add('fade-out');
                    setTimeout(() => flash.remove(), 500);
                }, 5000);
            }
            
            function checkNewConsultations() {
                // Ne pas exécuter si le polling est désactivé ou si une requête est déjà en cours
                if (!isPolling || isLoading) {
                    return;
                }
                
                // Vérifier qu'au moins 10 secondes se sont écoulées depuis la dernière requête
                const now = Date.now();
                const timeSinceLastRequest = now - lastRequestTime;
                
                if (timeSinceLastRequest < POLLING_INTERVAL_MS) {
                    // Attendre le temps restant avant de relancer
                    const remainingTime = POLLING_INTERVAL_MS - timeSinceLastRequest;
                    setTimeout(checkNewConsultations, remainingTime);
                    return;
                }
                
                // Marquer comme en cours de chargement
                isLoading = true;
                lastRequestTime = now;
                
                fetch(`/api/consultations/check-new?lastId=${lastId}`)
                    .then(response => response.json())
                    .then(data => {
                        if (data.new && data.count > 0) {
                            // Insérer les nouvelles consultations en haut de la liste
                            const tempDiv = document.createElement('div');
                            tempDiv.innerHTML = data.html;
                            const newCards = Array.from(tempDiv.children);
                            
                            newCards.forEach((card, index) => {
                                setTimeout(() => {
                                    feed.insertBefore(card, feed.firstChild);
                                    AOS.refresh();
                                }, index * 100);
                            });
                            
                            // Mettre à jour le lastId
                            lastId = data.lastId;
                            feed.dataset.lastId = lastId;
                        }
                    })
                    .catch(error => {
                        console.error('Erreur lors de la vérification des nouvelles consultations:', error);
                    })
                    .finally(() => {
                        // Réinitialiser le flag de chargement
                        isLoading = false;
                    });
            }
            
            // Vérifier toutes les 10 secondes
            pollingInterval = setInterval(checkNewConsultations, POLLING_INTERVAL_MS);
            window.consultationPollingInterval = pollingInterval;
            
            // Arrêter le polling quand la page n'est plus visible
            document.addEventListener('visibilitychange', () => {
                isPolling = !document.hidden;
                if (!isPolling && pollingInterval) {
                    clearInterval(pollingInterval);
                    pollingInterval = null;
                } else if (isPolling && !pollingInterval) {
                    pollingInterval = setInterval(checkNewConsultations, POLLING_INTERVAL_MS);
                    window.consultationPollingInterval = pollingInterval;
                }
            });
            
            // Nettoyer l'intervalle lors de la navigation Turbo
            document.addEventListener('turbo:before-cache', () => {
                if (pollingInterval) {
                    clearInterval(pollingInterval);
                    pollingInterval = null;
                }
            });
        })();
    </script>
{% endblock %}
