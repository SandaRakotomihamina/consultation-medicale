{% extends 'base.html.twig' %}

{% block title %}Consultation{% endblock %}

{% block body %}
    <style>
        .example-wrapper { 
            margin: 1em auto; 
            max-width: 800px; 
            width: 95%; 
            font: 18px/1.5 sans-serif; 
        }
        .example-wrapper code { 
            background: #F5F5F5; 
            padding: 2px 6px; 
        }
        .flash-close {
            background: transparent;
            border: none;
            font-size: 20px;
            line-height: 20px;
            cursor: pointer;
            color: inherit;
            opacity: 0.5;
            float:right;

        }

        .flash {
            animation: popupIn 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
            transform-origin: top center;
        }

        .flash.fade-out {
            animation: popupOut 0.5s ease-out forwards;
        }

        @keyframes popupIn {
            from {
                transform: scale(0.85) translateY(-20px);
                opacity: 0;
            }
            to {
                transform: scale(1) translateY(0);
                opacity: 1;
            }
        }

        @keyframes popupOut {
            from {
                transform: scale(1) translateY(0);
                opacity: 1;
            }
            to {
                transform: scale(0.85) translateY(-20px);
                opacity: 0;
            }
        }

        .flash:hover {
            transform: translateY(-2px);
            transition: all .25s ease;
            box-shadow:
                3px 3px 6px rgba(0,0,0,0.12),
                -3px -3px 6px rgba(255,255,255,1);
        }
        .flash-close:hover {
            opacity: 0.7;
        }
    </style>
    {% include '_partial/nav.html.twig' %}
    {% include '_partial/subNav.html.twig' %}
        
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="flash flash-{{ label }}">
                <span>{{ message }}</span>
                <button class="flash-close" onclick="this.parentElement.remove()">Ã—</button>
            </div>
        {% endfor %}
    {% endfor %}
    {% if app.user %}
        <div data-controller="infinite-scroll">
            {% include 'main/consultations/list_consultations.html.twig' %}
        </div>        
    {% endif %}
    {% include '_partial/footer.html.twig' %}

    <script>
        (function() {
            function initFlashes() {
                const flashes = document.querySelectorAll('.flash:not([data-flash-initialized])');
                flashes.forEach(function(flash) {
                    flash.dataset.flashInitialized = 'true';

                    setTimeout(function() {
                        flash.classList.add('fade-out');

                        setTimeout(function() {
                            flash.style.display = 'none';
                        }, 500);
                    }, 5000);
                });
            }

            document.addEventListener('DOMContentLoaded', initFlashes);
            document.addEventListener('turbo:load', initFlashes);
            initFlashes();
        })();
    </script>
{% endblock %}


