{% extends 'base.html.twig' %}

{% block title %}Nouvelle consultation{% endblock %}

{% block body %}
    {% include '_partial/nav.html.twig' %}
    <style>
        .consultation-container {
            max-width: 900px;
            margin: 2rem auto;
            padding: 2rem;
            background: var(--bg-primary);
            border-radius: 12px;
            box-shadow: 0 4px 20px var(--shadow-dark);
            margin-top: 140px;
            transition: .3s ease, background 0.3s ease;
        }

        .consultation-container:hover {
            box-shadow: 0 6px 28px var(--shadow-dark-hover);
        }

        .consultation-container h1 {
            margin-top: 0;
            font-size: 1.7rem;
            font-weight: 700;
            color: var(--text-primary);
            transition: color 0.3s ease;
        }

        .consultation-container p {
            color: var(--text-secondary);
            margin-bottom: 1.5rem;
            transition: color 0.3s ease;
        }

        .consultation-form {
            display: flex;
            flex-direction: column;
            gap: 1.2rem;
            width: 100%;
        }

        .consultation-form label {
            font-weight: 600;
            color: var(--text-primary);
            margin-bottom: .35rem;
            transition: color 0.3s ease;
        }

        .consultation-form input[type="text"],
        .consultation-form input[type="search"],
        .consultation-form input[type="date"],
        .consultation-form input[type="number"],
        .consultation-form textarea,
        .consultation-form select {
            padding: .75rem 1rem;
            border: 1px solid var(--border-color);
            border-radius: 8px;
            width: 100%;
            font-size: 1rem;
            background: var(--bg-tertiary);
            color: var(--text-primary);
            transition: .2s ease, background 0.3s ease, color 0.3s ease, border-color 0.3s ease;
            box-sizing: border-box;
        }

        .consultation-form input:focus,
        .consultation-form select:focus,
        .consultation-form textarea:focus {
            border-color: var(--accent-color);
            background: var(--bg-primary);
            box-shadow: 0 0 0 3px rgba(13,110,253,0.15);
            outline: none;
        }

        .consultation-form select {
            background-color: var(--bg-tertiary);
            appearance: none;
            cursor: pointer;
            background-image: url("data:image/svg+xml;charset=US-ASCII,%3Csvg%20width%3D'10'%20height%3D'10'%20viewBox%3D'0%200%2010%2010'%20xmlns%3D'http://www.w3.org/2000/svg'%3E%3Cpolygon%20points%3D'0,0%2010,0%205,5'%20fill%3D'%23666'%2F%3E%3C%2Fsvg%3E");
            background-repeat: no-repeat;
            background-position: right 0.75rem center;
            background-size: 0.65rem auto;
        }

        .form-actions {
            display: flex;
            gap: 1rem;
            margin-top: 1rem;
        }

        .btn,
        .btn--muted {
            padding: .75rem 1.4rem;
            font-size: 1rem;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            border: none;
            transition: 0.25s ease;
            display: inline-block;
            box-shadow: 0 4px 10px rgba(0,0,0,0.12);
        }

        .btn {
            background: var(--accent-color);
            color: #fff;
            box-shadow: 0 6px 18px var(--shadow-dark);
            transition: background 0.3s ease;

        }

        .btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px var(--shadow-dark-hover);
            background: var(--accent-hover);
        }

        .btn:active {
            transform: translateY(2px);
            box-shadow:
                inset 3px 3px 7px var(--shadow-light),
                inset -3px -3px 7px var(--shadow-dark);
        }

        .btn--muted {
            background: #6c757d;
            color: #fff;
            text-decoration: none;
            box-shadow: 0 6px 18px var(--shadow-dark);
        }

        .ajouter{
            background: #39721eff;
        }

        
        .btn--muted:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px var(--shadow-dark-hover);
            background: #5a6268;
        }
        
        .ajouter:hover{
                    background: #36632aff;
                }
        .btn--muted:active {
            transform: translateY(2px);
            box-shadow:
                inset 3px 3px 7px var(--shadow-light),
                inset -3px -3px 7px var(--shadow-dark);
        }

        @media (max-width: 640px) {
            .consultation-container { padding: 1rem; }
        }

        .check {
            cursor: pointer;
            position: relative;
            margin: auto;
            width: 18px;
            height: 18px;
            -webkit-tap-highlight-color: transparent;
            transform: translate3d(0, 0, 0);
        }

        .check:before {
            content: "";
            position: absolute;
            top: -15px;
            left: -15px;
            width: 48px;
            height: 48px;
            border-radius: 50%;
            opacity: 0;
            transition: opacity 0.2s ease;
        }

        .check svg {
            position: relative;
            z-index: 1;
            fill: none;
            stroke-linecap: round;
            stroke-linejoin: round;
            stroke: #c8ccd4;
            stroke-width: 1.5;
            transform: translate3d(0, 0, 0);
            transition: all 0.2s ease;
        }

        .check svg path {
            stroke-dasharray: 60;
            stroke-dashoffset: 0;
        }

        .check svg polyline {
            stroke-dasharray: 22;
            stroke-dashoffset: 66;
        }

        .check:hover:before {
            opacity: 1;
        }

        .check:hover svg {
            stroke: var(--accent-color, #3662c0ff);
        }

        #enable_repos_checkbox:checked + .check svg,
        #enable_exemption_checkbox:checked + .check svg,
        #enable_adresse_checkbox:checked + .check svg,
        #enable_patc_checkbox:checked + .check svg {
            stroke: var(--accent-color, #3662c0ff);
        }

        #enable_repos_checkbox:checked + .check svg path,
        #enable_exemption_checkbox:checked + .check svg path,
        #enable_adresse_checkbox:checked + .check svg path,
        #enable_patc_checkbox:checked + .check svg path {
            stroke-dashoffset: 60;
            transition: all 0.3s linear;
        }

        #enable_repos_checkbox:checked + .check svg polyline,
        #enable_exemption_checkbox:checked + .check svg polyline,
        #enable_adresse_checkbox:checked + .check svg polyline,
        #enable_patc_checkbox:checked + .check svg polyline {
            stroke-dashoffset: 42;
            transition: all 0.2s linear;
            transition-delay: 0.15s;
        }
    </style>

    <div class="container consultation-container" data-aos="zoom-in" data-aos-duration="500ms">
        <h1>Nouvelle consultation</h1>
        <p>Remplissez les champs ci-dessous puis cliquez sur <strong>Enregistrer</strong>.</p>

        {{ form_start(form) }}

        <div class="consultation-form" data-controller="consultation-options">
            {{ form_row(form.Matricule) }}
            {{ form_row(form.Grade) }}
            {{ form_row(form.Nom) }}
            {{ form_row(form.LIBUTE) }}
            {{ form_row(form.Motif) }}
            {{ form_row(form.DelivreurDeMotif) }}
            {{ form_row(form.Observation) }}
            {{ form_row(form.DelivreurDObservation) }}

            {# Exemption block with checkbox + select multiple + add input + dates #}
            {% set exemption_id = form.Exemption.vars.id %}
            <div class="field">
                <label style="display:flex; align-items:center; gap:0.5rem;">
                    <div class="container" style="margin-top: .1rem;">
                        <input type="checkbox" id="enable_exemption_checkbox" style="display: none;">
                        <label for="enable_exemption_checkbox" class="check">
                            <svg width="18px" height="18px" viewBox="0 0 18 18">
                                <path d="M 1 9 L 1 9 c 0 -5 3 -8 8 -8 L 9 1 C 14 1 17 5 17 9 L 17 9 c 0 4 -4 8 -8 8 L 9 17 C 5 17 1 14 1 9 L 1 9 Z"></path>
                                <polyline points="1 9 7 14 15 4"></polyline>
                            </svg>
                        </label>
                    </div>
                    <span>Exemption(s)</span>
                </label>
                <div style="margin-top:.5rem; display:flex; gap:.5rem; flex-direction:column;">
                    <div style="display:flex; gap:.5rem;">
                        <input id="exemption_new_input" type="text" placeholder="Nouvelle exemption" data-consultation-options-target="exemptionInput" style="flex:1;">
                        <button type="button" class="btn--muted ajouter" data-consultation-options-target="exemptionAddBtn" data-action="click->consultation-options#addExemption" disabled>+</button>
                    </div>
                    {{ form_widget(form.Exemption, {'attr': {'disabled': true, 'id': exemption_id, 'multiple': true, 'data-consultation-options-target': 'exemptionSelect'}}) }}
                </div>
                <div style="margin-top:.5rem; display:flex; gap:.5rem;">
                    <div style="flex:1">
                        <label>Début</label>
                        {{ form_widget(form.debutExemption, {'attr': {'disabled': true, 'data-consultation-options-target': 'debut'}}) }}
                    </div>
                    <div style="flex:1">
                        <label>Fin</label>
                        {{ form_widget(form.finExemption, {'attr': {'disabled': true, 'data-consultation-options-target': 'fin'}}) }}
                    </div>
                </div>
            </div>

            {# Adresse block #}
            {% set adresse_id = form.Adrresse.vars.id %}
            <div class="field">
                <label style="display:flex; align-items:center; gap:0.5rem;">
                    <div class="container" style="margin-top: .1rem;">
                        <input type="checkbox" id="enable_adresse_checkbox" style="display: none;">
                        <label for="enable_adresse_checkbox" class="check">
                            <svg width="18px" height="18px" viewBox="0 0 18 18">
                                <path d="M 1 9 L 1 9 c 0 -5 3 -8 8 -8 L 9 1 C 14 1 17 5 17 9 L 17 9 c 0 4 -4 8 -8 8 L 9 17 C 5 17 1 14 1 9 L 1 9 Z"></path>
                                <polyline points="1 9 7 14 15 4"></polyline>
                            </svg>
                        </label>
                    </div>
                    <span>Adressé au(x) service(x)</span>
                </label>
                <div style="margin-top:.5rem; display:flex; gap:.5rem; flex-direction:column;">
                    <div style="display:flex; gap:.5rem;">
                        <input id="adresse_new_input" type="text" placeholder="Nouvelle service" data-consultation-options-target="adresseInput" style="flex:1;">
                        <button type="button" class="btn--muted ajouter" data-consultation-options-target="adresseAddBtn" data-action="click->consultation-options#addAdresse" disabled>+</button>
                    </div>
                    {{ form_widget(form.Adrresse, {'attr': {'disabled': true, 'id': adresse_id, 'multiple': true, 'data-consultation-options-target': 'adresseSelect'}}) }}
                </div>
            </div>

            {# PATC block #}
            {% set patc_id = form.PATC.vars.id %}
            <div class="field">
                <label for="{{ patc_id }}" style="display:block;">
                    <div style="display:flex; align-items:center; gap:0.5rem;">
                        <div class="container" style="margin-top: .1rem;">
                            <input type="checkbox" id="enable_patc_checkbox" style="display: none;">
                            <label for="enable_patc_checkbox" class="check">
                                <svg width="18px" height="18px" viewBox="0 0 18 18">
                                    <path d="M 1 9 L 1 9 c 0 -5 3 -8 8 -8 L 9 1 C 14 1 17 5 17 9 L 17 9 c 0 4 -4 8 -8 8 L 9 17 C 5 17 1 14 1 9 L 1 9 Z"></path>
                                    <polyline points="1 9 7 14 15 4"></polyline>
                                </svg>
                            </label>
                        </div>
                        <span>Permission à titre convalessence (jours)</span>
                    </div>
                </label>
                <div style="margin-top:.5rem;">
                    {{ form_widget(form.PATC, {'attr': {'disabled': true, 'id': patc_id, 'min': 0, 'data-consultation-options-target': 'patc', 'class': 'form-input'}}) }}
                </div>
            </div>

            {% set repos_id = form.Repos.vars.id %}
            <div class="field">
                <label style="display:flex; align-items:center; gap:0.5rem;">
                    <div class="container" style="margin-top: .1rem;">
                        <input type="checkbox" id="enable_repos_checkbox" style="display: none;">
                        <label for="enable_repos_checkbox" class="check">
                            <svg width="18px" height="18px" viewBox="0 0 18 18">
                                <path d="M 1 9 L 1 9 c 0 -5 3 -8 8 -8 L 9 1 C 14 1 17 5 17 9 L 17 9 c 0 4 -4 8 -8 8 L 9 17 C 5 17 1 14 1 9 L 1 9 Z"></path>
                                <polyline points="1 9 7 14 15 4"></polyline>
                            </svg>
                        </label>
                    </div>
                    <span>Repos administré</span>
                </label>
                <div style="margin-top:.5rem;">
                    {{ form_widget(form.Repos, {'attr': {'disabled': true}}) }}
                    {{ form_errors(form.Repos) }}
                </div>
            </div>

            <div class="form-actions">
                <button class="btn" type="submit">Enregistrer</button>
                <a href="{{ path('app_list_demande') }}" class="btn--muted">Annuler</a>
            </div>
        </div>

        {{ form_end(form) }}

        <script>
            (function(){
                function nodesFromDataTarget(name) {
                    return Array.from(document.querySelectorAll('[data-consultation-options-target="'+name+'"]'));
                }

                function disableAndClear(el){
                    if (!el) return;
                    el.disabled = true;
                    if (el.tagName.toLowerCase() === 'select') {
                        try { el.selectedIndex = -1; } catch(e){}
                    } else if (el.type && el.type !== 'hidden') {
                        el.value = '';
                    }
                    el.required = false;
                }

                function enableAndRequire(el){
                    if (!el) return;
                    el.disabled = false;
                    el.required = true;
                    try { el.focus(); } catch(e){}
                }

                // Exemption group
                (function(){
                    const checkbox = document.getElementById('enable_exemption_checkbox');
                    const exemptionSelects = nodesFromDataTarget('exemptionSelect');
                    const debutNodes = nodesFromDataTarget('debut');
                    const finNodes = nodesFromDataTarget('fin');
                    if (!checkbox) return;

                    checkbox.checked = false;
                    exemptionSelects.concat(debutNodes).concat(finNodes).forEach(disableAndClear);

                    checkbox.addEventListener('change', function(){
                        if (this.checked) {
                            exemptionSelects.concat(debutNodes).concat(finNodes).forEach(enableAndRequire);
                        } else {
                            exemptionSelects.concat(debutNodes).concat(finNodes).forEach(disableAndClear);
                        }
                    });
                })();

                // Adresse group
                (function(){
                    const checkbox = document.getElementById('enable_adresse_checkbox');
                    const adresseSelects = nodesFromDataTarget('adresseSelect');
                    if (!checkbox) return;

                    checkbox.checked = false;
                    adresseSelects.forEach(disableAndClear);

                    checkbox.addEventListener('change', function(){
                        if (this.checked) {
                            adresseSelects.forEach(enableAndRequire);
                        } else {
                            adresseSelects.forEach(disableAndClear);
                        }
                    });
                })();

                // PATC group
                (function(){
                    const checkbox = document.getElementById('enable_patc_checkbox');
                    const patc = document.getElementById('{{ patc_id }}');
                    if (!checkbox || !patc) return;

                    checkbox.checked = false;
                    disableAndClear(patc);

                    checkbox.addEventListener('change', function(){
                        if (this.checked) {
                            enableAndRequire(patc);
                        } else {
                            disableAndClear(patc);
                        }
                    });
                })();

                // Repos group
                (function(){
                    const checkbox = document.getElementById('enable_repos_checkbox');
                    const repos = document.getElementById('{{ repos_id }}');
                    if (!checkbox || !repos) return;

                    checkbox.checked = false;
                    disableAndClear(repos);

                    checkbox.addEventListener('change', function(){
                        if (this.checked) {
                            enableAndRequire(repos);
                        } else {
                            disableAndClear(repos);
                        }
                    });
                })();

                // Link debut -> fin min value
                (function(){
                    const debut = document.querySelector('[data-consultation-options-target="debut"]');
                    const fin = document.querySelector('[data-consultation-options-target="fin"]');
                    if (!debut || !fin) return;

                    debut.addEventListener('change', function(){
                        if (this.value) {
                            fin.min = this.value;
                            if (fin.value && fin.value < this.value) {
                                fin.value = '';
                            }
                        } else {
                            fin.min = '';
                        }
                    });
                })();

            })();
            AOS.init();
        </script>
    </div>

    {% include '_partial/footer.html.twig' %}
{% endblock %}
