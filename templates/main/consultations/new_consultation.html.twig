{% extends 'base.html.twig' %}

{% block title %}Nouvelle consultation{% endblock %}

{% block body %}
    {% include '_partial/nav.html.twig' %}

    <style>
        .consultation-container {
            max-width: 900px;
            margin: 2rem auto;
            padding: 2rem;
            background: #ffffff;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.06);
            margin-top: 140px;
            transition: .3s ease;
        }

        .consultation-container:hover {
            box-shadow: 0 6px 28px rgba(0,0,0,0.10);
        }

        .consultation-container h1 {
            margin-top: 0;
            font-size: 1.7rem;
            font-weight: 700;
            color: #222;
        }

        .consultation-container p {
            color: #555;
            margin-bottom: 1.5rem;
        }

        .consultation-form {
            display: flex;
            flex-direction: column;
            gap: 1.2rem;
            width: 100%;
        }

        .consultation-form label {
            font-weight: 600;
            color: #333;
            margin-bottom: .35rem;
        }

        .consultation-form input[type="text"],
        .consultation-form input[type="search"],
        .consultation-form input[type="date"],
        .consultation-form textarea,
        .consultation-form select {
            padding: .75rem 1rem;
            border: 1px solid #d1d1d1;
            border-radius: 8px;
            width: 100%;
            font-size: 1rem;
            background: #fafafa;
            transition: .2s ease;
            box-sizing: border-box;
        }

        .consultation-form input:focus,
        .consultation-form select:focus,
        .consultation-form textarea:focus {
            border-color: #0d6efd;
            background: #fff;
            box-shadow: 0 0 0 3px rgba(13,110,253,0.15);
            outline: none;
        }

        .consultation-form select {
            background-color: #fff;
            appearance: none;
            cursor: pointer;
            background-image: url("data:image/svg+xml;charset=US-ASCII,%3Csvg%20width%3D'10'%20height%3D'10'%20viewBox%3D'0%200%2010%2010'%20xmlns%3D'http://www.w3.org/2000/svg'%3E%3Cpolygon%20points%3D'0,0%2010,0%205,5'%20fill%3D'%23666'%2F%3E%3C%2Fsvg%3E");
            background-repeat: no-repeat;
            background-position: right 0.75rem center;
            background-size: 0.65rem auto;
        }


        .form-actions {
            display: flex;
            gap: 1rem;
            margin-top: 1rem;
        }

        .btn,
        .btn--muted {
            padding: .75rem 1.4rem;
            font-size: 1rem;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            border: none;
            transition: 0.25s ease;
            display: inline-block;
            box-shadow: 0 4px 10px rgba(0,0,0,0.12);
        }

        .btn {
            background: #0d6efd;
            color: #fff;
            box-shadow: 0 6px 18px rgba(0,0,0,0.18);

        }

        .btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.22);
            background: #0b5ed7;
        }

        .btn:active {
            transform: translateY(2px);
            box-shadow:
                inset 3px 3px 7px rgba(255, 255, 255, 0.87),
                inset -3px -3px 7px rgba(44, 41, 41, 0.5);
        }

        .btn--muted {
            background: #6c757d;
            color: #fff;
            text-decoration: none;
            box-shadow: 0 6px 18px rgba(0,0,0,0.18);
        }

        .btn--muted:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.22);
            background: #5a6268;
        }

        .btn--muted:active {
            transform: translateY(2px);
            box-shadow:
                inset 3px 3px 7px rgba(255, 255, 255, 0.87),
                inset -3px -3px 7px rgba(44, 41, 41, 0.5);
        }

        @media (max-width: 640px) {
            .consultation-container { padding: 1rem; }
        }
    </style>

    <div class="container consultation-container" data-aos="zoom-in" data-aos-duration="500">
        <h1>Nouvelle consultation</h1>
        <p>Remplissez les champs ci-dessous puis cliquez sur <strong>Enregistrer</strong>.</p>

        {{ form_start(form) }}

        <div class="consultation-form">
            {{ form_row(form.Matricule) }}
            {{ form_row(form.Grade) }}
            {{ form_row(form.Nom) }}
            {{ form_row(form.Motif) }}
            {{ form_row(form.DelivreurDeMotif) }}
            {{ form_row(form.Observation) }}
            {{ form_row(form.DelivreurDObservation) }}

            {% set repos_id = form.Repos.vars.id %}
            <div class="field">
                <label style="display:flex; align-items:center; gap:0.5rem;">
                    <input type="checkbox" id="enable_repos_checkbox" />
                    <span>Repos administr√©</span>
                </label>
                <div style="margin-top:.5rem;">
                    {{ form_widget(form.Repos, {'attr': {'disabled': true}}) }}
                    {{ form_errors(form.Repos) }}
                </div>
            </div>

            <div class="form-actions">
                <button class="btn" type="submit">Enregistrer</button>
                <a href="{{ path('app_main') }}" class="btn--muted">Annuler</a>
            </div>
        </div>

        {{ form_end(form) }}

        <script>
            (function(){
                const checkbox = document.getElementById('enable_repos_checkbox');
                const repos = document.getElementById('{{ repos_id }}');
                if (!checkbox || !repos) return;

                checkbox.checked = false;
                repos.disabled = true;

                checkbox.addEventListener('change', function(){
                    repos.disabled = !this.checked;
                    if (!this.checked) {
                        if (repos.tagName.toLowerCase() === 'select') {
                            repos.selectedIndex = -1;
                        } else {
                            repos.value = '';
                        }
                    } else {
                        repos.focus();
                    }
                });
            })();
            AOS.init();
        </script>
    </div>

    {% include '_partial/footer.html.twig' %}
{% endblock %}
