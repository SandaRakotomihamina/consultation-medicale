{% extends 'base.html.twig' %}

{% block title %}Modifier consultation{% endblock %}

{% block body %}
    {% include '_partial/nav.html.twig' %}

    <style>
        .consultation-container {
            max-width: 900px;
            margin: 2rem auto;
            padding: 2rem;
            background: #ffffff;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.06);
            margin-top: 140px;
            transition: .3s ease;
        }

        .consultation-container:hover {
            box-shadow: 0 6px 28px rgba(0,0,0,0.10);
        }

        .consultation-container h1 {
            margin-top: 0;
            font-size: 1.7rem;
            font-weight: 700;
            color: #222;
        }

        .consultation-container p {
            color: #555;
            margin-bottom: 1.5rem;
        }

        .consultation-form {
            display: flex;
            flex-direction: column;
            gap: 1.2rem;
            width: 100%;
        }

        .consultation-form label {
            font-weight: 600;
            color: #333;
            margin-bottom: .35rem;
        }

        .consultation-form input[type="text"],
        .consultation-form textarea {
            padding: .75rem 1rem;
            border: 1px solid #d1d1d1;
            border-radius: 8px;
            width: 100%;
            font-size: 1rem;
            background: #fafafa;
            box-sizing: border-box;
            transition: .2s ease;
        }

        .consultation-form input:focus,
        .consultation-form textarea:focus {
            border-color: #0d6efd;
            background: #fff;
            box-shadow: 0 0 0 3px rgba(13,110,253,0.15);
            outline: none;
        }

        .consultation-form select {
            padding: .75rem 1rem;
            border: 1px solid #d1d1d1;
            border-radius: 8px;
            width: 100%;
            font-size: 1rem;
            background-color: #fff;
            color: #333;
            appearance: none;
            cursor: pointer;
            background-image: url("data:image/svg+xml;charset=US-ASCII,%3Csvg%20width%3D'10'%20height%3D'10'%20viewBox%3D'0%200%2010%2010'%20xmlns%3D'http://www.w3.org/2000/svg'%3E%3Cpolygon%20points%3D'0,0%2010,0%205,5'%20fill%3D'%23666'%2F%3E%3C%2Fsvg%3E");
            background-repeat: no-repeat;
            background-position: right 0.75rem center;
            background-size: 0.65rem auto;
            transition: .2s ease;
        }

        .consultation-form select:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 3px rgba(13,110,253,0.15);
        }


        .form-actions {
            display: flex;
            gap: 1rem;
            margin-top: 1rem;
        }

        .btn,
        .btn--muted {
            padding: .75rem 1.4rem;
            font-size: 1rem;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            border: none;
            transition: 0.25s ease;
            display: inline-block;
            box-shadow: 0 4px 10px rgba(0,0,0,0.12);
        }

        .btn {
            background: #0d6efd;
            color: #fff;
        }

        .btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 16px rgba(0,0,0,0.18);
            background: #0b5ed7;
        }

        .btn:active {
            transform: translateY(2px);
            box-shadow:
                inset 3px 3px 7px rgba(255, 255, 255, 0.87),
                inset -3px -3px 7px rgba(41, 43, 44, 0.5);
        }

        .btn--muted {
            background: #6c757d;
            color: #fff;
            text-decoration: none;
            text-align: center;
        }

        .btn--muted:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 16px rgba(0,0,0,0.18);
            background: #5a6268;
        }

        .btn--muted:active {
            transform: translateY(2px);
            box-shadow:
                inset 3px 3px 7px rgba(255, 255, 255, 0.87),
                inset -3px -3px 7px rgba(41, 43, 44, 0.5);
        }

        @media (max-width: 640px) {
            .consultation-container { padding: 1rem; }
        }
    </style>

    <div class="container consultation-container">
        <h1>Modifier consultation</h1>
        <p>Modifiez les champs ci-dessous puis cliquez sur <strong>Enregistrer</strong>.</p>

        <form method="post" action="">
            <div class="consultation-form">
                <div class="form-row">
                    <label for="matricule">Matricule</label>
                    <input type="text" id="matricule" name="matricule" value="{{ consultation.Matricule }}" readonly>
                </div>

                <div class="form-row">
                    <label for="grade">Grade</label>
                    <input type="text" id="grade" name="grade" value="{{ consultation.Grade }}" readonly>
                </div>

                <div class="form-row">
                    <label for="nom">Nom</label>
                    <input type="text" id="nom" name="nom" value="{{ consultation.Nom }}" readonly>
                </div>

                <div class="form-row">
                    <label for="motif">Motif</label>
                    <textarea id="motif" name="motif">{{ consultation.Motif }}</textarea>
                </div>

                <div class="form-row">
                    <label for="delivreur_de_motif">Délivreur de motif</label>
                    <input type="text" id="delivreur_de_motif" name="delivreur_de_motif" value="{{ consultation.DelivreurDeMotif }}" readonly>
                </div>

                <div class="form-row">
                    <label for="observation">Observation</label>
                    <textarea id="observation" name="observation">{{ consultation.Observation }}</textarea>
                </div>

                <div class="form-row">
                    <label for="delivreur_d_observation">Délivreur d'observation</label>
                    <input type="text" id="delivreur_d_observation" name="delivreur_d_observation"
                           value="{{ consultation.DelivreurDObservation }}" readonly>
                </div>

                <div class="form-row">
                    <label for="repos">Repos administré</label>
                    <select id="repos" name="repos">
                        <option value="" {% if consultation.Repos is empty %}selected{% endif %}>Aucun</option>
                        <option value="24h" {% if consultation.Repos == '24h' %}selected{% endif %}>24h</option>
                        <option value="48h" {% if consultation.Repos == '48h' %}selected{% endif %}>48h</option>
                        <option value="72h" {% if consultation.Repos == '72h' %}selected{% endif %}>72h</option>
                    </select>
                </div>

                <div class="form-actions">
                    <button class="btn" type="submit">Enregistrer</button>
                    <a href="{{ path('app_main') }}" class="btn--muted">Annuler</a>
                </div>
            </div>
        </form>
    </div>

    {% include '_partial/footer.html.twig' %}
{% endblock %}
