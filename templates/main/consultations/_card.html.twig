<div class="card">
    <!-- Header -->
    <div class="card-header">
        <div class="user-info">
            <div class="avatar">
                <!-- icon avatar -->
                <svg fill="#000000" width="50px" height="50px" viewBox="0 0 32 32" id="icon" xmlns="http://www.w3.org/2000/svg">
                    <path d="M16,8a5,5,0,1,0,5,5A5,5,0,0,0,16,8Zm0,8a3,3,0,1,1,3-3A3.0034,3.0034,0,0,1,16,16Z"/>
                    <path d="M16,2A14,14,0,1,0,30,16,14.0158,14.0158,0,0,0,16,2ZM10,26.3765V25a3.0033,3.0033,0,0,1,3-3h6a3.0033,3.0033,0,0,1,3,3v1.3765a11.8989,11.8989,0,0,1-12,0Zm13.9925-1.4507A5.0016,5.0016,0,0,0,19,20H13a5.0016,5.0016,0,0,0-4.9925,4.9258,12,12,0,1,1,15.985,0Z"/>
                    <rect id="_Transparent_Rectangle_" data-name="&lt;Transparent Rectangle&gt;" style="fill:none;" class="cls-1" width="32" height="32"/>
                </svg>
            </div>
            <div class="name-grade">
                <div style="display: flex; align-items: center; gap: 0.3rem;">
                    <span class="grade" title="Grade: {{consultation.Grade}}">{{ consultation.Grade }}</span>
                    <span class="name" title="Nom: {{consultation.Nom}}">{{ consultation.Nom }}</span>
                </div>
                <span class="matricule" title="Matricule: {{consultation.Matricule}}">{{ consultation.Matricule }}</span>
            </div>
        </div>

        <div style="display: flex; align-items:center; gap:10px;">
            <div class="date">
                {{ consultation.Date ? consultation.Date|date('d/m/Y') : '' }}
            </div>

            <a 
                href="{{ app.user and 'ROLE_SUPER_ADMIN' in app.user.roles ? path('app_consultation_edit', {'id': consultation.id}) : '#' }}" 
                title="{{ app.user and 'ROLE_SUPER_ADMIN' in app.user.roles ? 'Éditer la consultation' : 'Accès réservé au super admin' }}"
                style="{{ app.user and 'ROLE_SUPER_ADMIN' in app.user.roles ? '' : 'pointer-events: none; opacity: 0.5; cursor: not-allowed;' }}"
            >
                <svg class="edit-btn" width="30px" height="30px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M21.2799 6.40005L11.7399 15.94C10.7899 16.89 7.96987 17.33 7.33987 16.7C6.70987 16.07 7.13987 13.25 8.08987 12.3L17.6399 2.75002C17.8754 2.49308 18.1605 2.28654 18.4781 2.14284C18.7956 1.99914 19.139 1.92124 19.4875 1.9139C19.8359 1.90657 20.1823 1.96991 20.5056 2.10012C20.8289 2.23033 21.1225 2.42473 21.3686 2.67153C21.6147 2.91833 21.8083 3.21243 21.9376 3.53609C22.0669 3.85976 22.1294 4.20626 22.1211 4.55471C22.1128 4.90316 22.0339 5.24635 21.8894 5.5635C21.7448 5.88065 21.5375 6.16524 21.2799 6.40005V6.40005Z" stroke="#000000" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M11 4H6C4.93913 4 3.92178 4.42142 3.17163 5.17157C2.42149 5.92172 2 6.93913 2 8V18C2 19.0609 2.42149 20.0783 3.17163 20.8284C3.92178 21.5786 4.93913 22 6 22H17C19.21 22 20 20.2 20 18V13" stroke="#000000" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
            </a>

        </div>
        
    </div>

    <!-- Body -->
    <div class="card-body">
        <div class="flex-container">
            <div class="info-block">
                <div class="label">Motif</div>
                <div class="content">{{ consultation.Motif }}</div>
                <div class="delivreur">{{ consultation.DelivreurDeMotif }}</div>
            </div>
            <div class="info-block">
                <div class="label">Observation</div>
                <div class="content">{{ consultation.Observation }}</div>

                <div class="obs-footer">
                    <span>{{ consultation.DelivreurDObservation }}</span>

                    <span style="font-weight: bold;">
                        {% if consultation.Repos %}
                            <span style="color:#d9534f">Repos administré: {{ consultation.Repos }}</span>
                        {% else %}
                            <span style="color:#28a745">Aucun repos administré</span>
                        {% endif %}
                    </span>
                </div>
            </div>

        </div>
    </div>
</div>
