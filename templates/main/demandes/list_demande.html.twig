{% extends 'base.html.twig' %}

{% block title %}Liste des demandes de consultation{% endblock %}

{% block body %}
{% include '_partial/nav.html.twig' %}
{% include '_partial/subNav.html.twig' with {'search_type': 'demandes'} %}
<style>
    @keyframes popupIn {
        from { transform: scale(0.85) translateX(-50px); opacity: 0; }
        to   { transform: scale(1) translateX(0); opacity: 1; }
    }

    @keyframes popupOut {
        from { transform: scale(1) translateX(0); opacity: 1; }
        to   { transform: scale(0.85) translateX(-50px); opacity: 0; }
    }

    .flash-info {
        background: var(--info-bg);
        color: var(--info-text);
        border: 1px solid var(--info-border);
        transition: background 0.3s ease, color 0.3s ease, border-color 0.3s ease;
    }

    .flash.fade-out {
            animation: popupOut 0.5s ease-out forwards;
        }

    @media (max-width: 1000px) {
        h1.page-title {
            margin-top: 18rem !important;
        }
    }

    @media (max-width: 480px) {
        h1.page-title {
            font-size: 1.5rem !important;
        }
    }
    @media (max-width: 450px) {
        h1.page-title {
            margin-top: 15rem !important;
        }
    }

</style>

<h1 class="page-title" style="text-align:left; margin:13rem 0 2rem 0; font-size:1.8rem; transition:.3s ease-in-out; color: var(--text-primary);">
    Liste des consultations en attente
</h1>   

<div class="feed" id="demandes-feed" data-last-id="{{ Demandes|length > 0 ? Demandes|first.id : 0 }}">
    {% for demande in Demandes %}
        {% include 'main/demandes/_card.html.twig' %}
    {% else %}
        <svg 
            width="60px" 
            height="60px" 
            viewBox="0 0 24 24" 
            fill="none" 
            xmlns="http://www.w3.org/2000/svg"
            style="position: relative; left: 50%; transform: translateX(-50%);"
        >
            <path 
                fill-rule="evenodd" 
                clip-rule="evenodd" d="M9.29289 1.29289C9.48043 1.10536 9.73478 1 10 1H18C19.6569 1 21 2.34315 21 4V20C21 21.6569 19.6569 23 18 23H6C4.34315 23 3 21.6569 3 20V8C3 7.73478 3.10536 7.48043 3.29289 7.29289L9.29289 1.29289ZM18 3H11V8C11 8.55228 10.5523 9 10 9H5V20C5 20.5523 5.44772 21 6 21H18C18.5523 21 19 20.5523 19 20V4C19 3.44772 18.5523 3 18 3ZM6.41421 7H9V4.41421L6.41421 7ZM7 13C7 12.4477 7.44772 12 8 12H16C16.5523 12 17 12.4477 17 13C17 13.5523 16.5523 14 16 14H8C7.44772 14 7 13.5523 7 13ZM7 17C7 16.4477 7.44772 16 8 16H16C16.5523 16 17 16.4477 17 17C17 17.5523 16.5523 18 16 18H8C7.44772 18 7 17.5523 7 17Z" 
                fill="#000000 " 
                stroke-width="1.5" 
                stroke-linecap="round" 
                stroke-linejoin="round"
            />
        </svg>
        <p style="text-align:center; color: var(--text-primary);">Aucune demande de consultation pour l'instant.</p>
    {% endfor %}
</div>
<script>
    AOS.init();
</script>
{% if is_granted('ROLE_ADMIN') %}
    <script>
        // Système de polling pour les nouvelles demandes
        (function() {
            const feed = document.getElementById('demandes-feed');
            if (!feed) return;
            
            let lastId = parseInt(feed.dataset.lastId) || 0;
            let isPolling = true;
            let isCheckingNow = false; // Éviter les appels concurrents
            let processedIds = new Set(); // Tracker des demandes déjà traitées
            
            // Initialiser avec les IDs des demandes existantes
            const existingCards = feed.querySelectorAll('[data-demande-id]');
            existingCards.forEach(card => {
                const id = card.dataset.demandeId;
                if (id) processedIds.add(parseInt(id));
            });
            
            function showFlashMessage(message, type = 'info') {
                const flash = document.createElement('div');
                flash.className = `flash flash-${type}`;
                flash.style.cssText = `
                    animation: popupIn 0.4s ease-out forwards;
                    transform-origin: center;
                    border-radius: 8px;
                    position: fixed;
                    bottom: 20px;
                    left: 10px;
                    box-sizing: border-box;
                    box-shadow: 3px 3px 6px rgba(0,0,0,0.12), -3px -3px 6px rgba(255,255,255,1);
                    font-size: 16px;
                    z-index: 1100;
                    text-align: center;
                    max-width: 90vw;
                    padding: 0.8rem 1.2rem;
                `;
                flash.innerHTML = `<span>${message}</span>`;
                document.body.appendChild(flash);
                
                setTimeout(() => {
                    flash.classList.add('fade-out');
                    setTimeout(() => flash.remove(), 500);
                }, 5000);
            }
            
            function checkNewDemandes() {
                if (!isPolling || isCheckingNow) return;
                
                isCheckingNow = true;
                
                fetch(`/api/demandes/check-new?lastId=${lastId}`)
                    .then(response => response.json())
                    .then(data => {
                        if (data.new && data.count > 0) {
                            // Insérer les nouvelles demandes en haut de la liste
                            const tempDiv = document.createElement('div');
                            tempDiv.innerHTML = data.html;
                            const newCards = Array.from(tempDiv.children);
                            
                            let addedCount = 0;
                            newCards.forEach((card, index) => {
                                const cardId = card.dataset.demandeId;
                                
                                // Vérifier si la carte n'a pas déjà été ajoutée
                                if (cardId && !processedIds.has(parseInt(cardId))) {
                                    processedIds.add(parseInt(cardId));
                                    addedCount++;
                                    
                                    setTimeout(() => {
                                        feed.insertBefore(card, feed.firstChild);
                                        AOS.refresh();
                                    }, index * 100);
                                }
                            });
                            
                            // Mettre à jour le lastId
                            lastId = data.lastId;
                            feed.dataset.lastId = lastId;
                            
                            // Afficher le message flash uniquement si des cartes ont été ajoutées
                            if (addedCount > 0) {
                                const message = addedCount === 1 
                                    ? 'Nouvelle demande de consultation reçue' 
                                    : `${addedCount} Nouvelles demandes de consultation reçues`;
                                showFlashMessage(message, 'info');
                            }
                        }
                    })
                    .catch(error => {
                        console.error('Erreur lors de la vérification des nouvelles demandes:', error);
                    })
                    .finally(() => {
                        isCheckingNow = false;
                    });
            }
            
            // Vérifier toutes les 10 secondes
            setInterval(checkNewDemandes, 10000);
            
            // Arrêter le polling quand la page n'est plus visible
            document.addEventListener('visibilitychange', () => {
                isPolling = !document.hidden;
            });
        })();
    </script>
{% endif %}

{% include '_partial/footer.html.twig' %}
{% endblock %}
