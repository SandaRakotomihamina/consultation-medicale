{% extends 'base.html.twig' %}

{% block title %}Liste des demandes de consultation{% endblock %}

{% block body %}
{% include '_partial/nav.html.twig' %}
{% include '_partial/subNav.html.twig' with {'search_type': 'demandes'} %}
<style>
    @keyframes popupIn {
        from { transform: scale(0.85) translateX(-50px); opacity: 0; }
        to   { transform: scale(1) translateX(0); opacity: 1; }
    }

    @keyframes popupOut {
        from { transform: scale(1) translateX(0); opacity: 1; }
        to   { transform: scale(0.85) translateX(-50px); opacity: 0; }
    }

    .flash-info {
        background: var(--info-bg);
        color: var(--info-text);
        border: 1px solid var(--info-border);
        transition: background 0.3s ease, color 0.3s ease, border-color 0.3s ease;
    }

    .flash.fade-out {
            animation: popupOut 0.5s ease-out forwards;
        }
    .feed {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        margin: 0 auto;
    }

    .card {
        background-color: var(--bg-primary);
        border-radius: 12px;
        box-shadow: 0 4px 12px var(--shadow-dark);
        overflow: hidden;
        transition: transform 0.2s, box-shadow 0.2s, background-color 0.2s;
        border: 1px solid var(--border-color);
    }

    .card:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 20px var(--shadow-dark-hover);
    }
    .card:has(.btn-image:hover),
    .card:has(.btn-image:hover) .label,
    .card:has(.btn-image:hover) .info-block{
        background-color: rgba(140, 230, 160, 0.29);
        transition: background-color 0.5s ease;
    }

    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem;
        border-bottom: 1px solid var(--border-color);
        transition: border-color 0.3s ease;
    }

    .user-info {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .avatar img {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        object-fit: cover;
    }

    .name-grade {
        cursor: pointer;
        display: flex;
        flex-direction: column;
    }

    .name-grade .grade {
        font-weight: bold;
        color: #4267B2;
        margin-right: 0.3rem;
    }

    .name-grade .name {
        font-weight: 600;
        color: var(--text-primary);
        transition: color 0.3s ease;
    }

    .name-grade .matricule {
        font-size: 0.85rem;
        color: var(--text-tertiary);
        transition: color 0.3s ease;
    }

    .date {
        font-size: 0.85rem;
        color: var(--text-muted);
        transition: color 0.3s ease;
    }

    .card-body {
        padding: 1rem;
    }

    .flex-container {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .info-block {
        flex: 1;
        min-width: 200px;
        border: 1px solid var(--border-color);
        border-radius: 8px;
        position: relative;
        padding: 1.5rem 1rem 1rem 1rem;
        background-color: var(--bg-tertiary);
        transition: border-color 0.3s ease, background-color 0.3s ease;
    }

    .info-block .label {
        position: absolute;
        top: -0.8rem;
        left: 1rem;
        background-color: var(--bg-tertiary);
        padding: 0 0.5rem;
        font-weight: bold;
        font-size: 0.85rem;
        color: var(--text-primary);
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    .info-block .content {
        margin-bottom: 0.8rem;
        white-space: pre-wrap;
        color: var(--text-primary);
        transition: color 0.3s ease;
    }

    .info-block .delivreur {
        font-size: 0.85rem;
        color: var(--text-secondary);
        border-top: 1px solid var(--border-color);
        padding-top: 0.3rem;
        transition: color 0.3s ease, border-color 0.3s ease;
    }

    .btn-image {
        display: inline-block;
        cursor: pointer;
        transition: transform 0.2s ease;
    }

    .btn-image:hover {
        transform: scale(1.1);
    }

    @media (max-width: 1000px) {
        h1.page-title {
            margin-top: 4.3em !important;
        }
    }

    @media (max-width: 500px) {
        h1.page-title {
            font-size: 1.5rem !important;
        }
    }
    @media (max-width: 450px) {
        h1.page-title {
            margin-top: 5em !important;
        }
    }

</style>

<h1 class="page-title" style="text-align:left; margin:10rem 0 2rem 0; font-size:1.8rem; transition:.3s ease-in-out; color: var(--text-primary);">
    Liste des consultations en attente
</h1>   

<div class="feed" id="demandes-feed" data-last-id="{{ Demandes|length > 0 ? Demandes|first.id : 0 }}">
    {% for demande in Demandes %}
        {% include 'main/demandes/_card.html.twig' %}
    {% else %}
        <p style="text-align:center; color: var(--text-primary);">Aucune demande de consultation pour l'instant.</p>
    {% endfor %}
</div>
<script>
    AOS.init();
</script>
{% if is_granted('ROLE_ADMIN') %}
    <script>
        // Système de polling pour les nouvelles demandes
        (function() {
            const feed = document.getElementById('demandes-feed');
            if (!feed) return;
            
            let lastId = parseInt(feed.dataset.lastId) || 0;
            let isPolling = true;
            
            function showFlashMessage(message, type = 'info') {
                const flash = document.createElement('div');
                flash.className = `flash flash-${type}`;
                flash.style.cssText = `
                    animation: popupIn 0.4s ease-out forwards;
                    transform-origin: center;
                    border-radius: 8px;
                    position: fixed;
                    bottom: 20px;
                    left: 10px;
                    box-sizing: border-box;
                    box-shadow: 3px 3px 6px rgba(0,0,0,0.12), -3px -3px 6px rgba(255,255,255,1);
                    font-size: 16px;
                    z-index: 1100;
                    text-align: center;
                    max-width: 90vw;
                    padding: 0.8rem 1.2rem;
                `;
                flash.innerHTML = `<span>${message}</span>`;
                document.body.appendChild(flash);
                
                setTimeout(() => {
                    flash.classList.add('fade-out');
                    setTimeout(() => flash.remove(), 500);
                }, 5000);
            }
            
            function checkNewDemandes() {
                if (!isPolling) return;
                
                fetch(`/api/demandes/check-new?lastId=${lastId}`)
                    .then(response => response.json())
                    .then(data => {
                        if (data.new && data.count > 0) {
                            // Insérer les nouvelles demandes en haut de la liste
                            const tempDiv = document.createElement('div');
                            tempDiv.innerHTML = data.html;
                            const newCards = Array.from(tempDiv.children);
                            
                            newCards.forEach((card, index) => {
                                setTimeout(() => {
                                    feed.insertBefore(card, feed.firstChild);
                                    AOS.refresh();
                                }, index * 100);
                            });
                            
                            // Mettre à jour le lastId
                            lastId = data.lastId;
                            feed.dataset.lastId = lastId;
                            
                            // Afficher le message flash
                            const message = data.count === 1 
                                ? 'Nouvelle demande de consultation reçue' 
                                : `${data.count} Nouvelles demandes de consultation reçues`;
                            showFlashMessage(message, 'info');
                        }
                    })
                    .catch(error => {
                        console.error('Erreur lors de la vérification des nouvelles demandes:', error);
                    });
            }
            
            // Vérifier toutes les 10 secondes
            setInterval(checkNewDemandes, 10000);
            
            // Arrêter le polling quand la page n'est plus visible
            document.addEventListener('visibilitychange', () => {
                isPolling = !document.hidden;
            });
        })();
    </script>
{% endif %}

{% include '_partial/footer.html.twig' %}
{% endblock %}
