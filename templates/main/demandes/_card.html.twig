<style>
    .feed {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        margin: 0 auto;
    }

    .card {
        background-color: var(--bg-primary);
        border-radius: 12px;
        box-shadow: 0 4px 12px var(--shadow-dark);
        overflow: hidden;
        transition: transform 0.2s, box-shadow 0.2s, background-color 0.2s;
        border: 1px solid var(--border-color);
    }

    .card:hover {
        transform: translateY(-3px) !important;
        box-shadow: 0 8px 20px var(--shadow-dark-hover);
    }
    
    .card:has(.btn-image:hover),
    .card:has(.btn-image:hover) .label,
    .card:has(.btn-image:hover) .info-block{
        background-color: rgba(140, 230, 160, 0.29);
        transition: background-color 0.5s ease;
    }

    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem;
        border-bottom: 1px solid var(--border-color);
        transition: border-color 0.3s ease;
    }

    .user-info {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .avatar img {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        object-fit: cover;
    }

    .name-grade {
        cursor: pointer;
        display: flex;
        flex-direction: column;
    }

    .name-grade .grade {
        font-weight: bold;
        color: #4267B2;
        margin-right: 0.3rem;
    }

    .name-grade .name {
        font-weight: 600;
        color: var(--text-primary);
        transition: color 0.3s ease;
    }

    .name-grade .matricule {
        font-size: 0.85rem;
        color: var(--text-tertiary);
        transition: color 0.3s ease;
    }

    .date {
        font-size: 0.85rem;
        color: var(--text-muted);
        transition: color 0.3s ease;
    }

    .card-body {
        padding: 1rem;
    }

    .flex-container {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .info-block {
        flex: 1;
        min-width: 200px;
        border: 1px solid var(--border-color);
        border-radius: 8px;
        position: relative;
        padding: 1.5rem 1rem 1rem 1rem;
        background-color: var(--bg-tertiary);
        transition: border-color 0.3s ease, background-color 0.3s ease;
    }

    .info-block .label {
        position: absolute;
        top: -0.8rem;
        left: 1rem;
        background-color: var(--bg-tertiary);
        padding: 0 0.5rem;
        font-weight: bold;
        font-size: 0.85rem;
        color: var(--text-primary);
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    .info-block .content {
        margin-bottom: 0.8rem;
        white-space: pre-wrap;
        color: var(--text-primary);
        transition: color 0.3s ease;
    }

    .info-block .delivreur {
        font-size: 0.85rem;
        color: var(--text-secondary);
        border-top: 1px solid var(--border-color);
        padding-top: 0.3rem;
        transition: color 0.3s ease, border-color 0.3s ease;
    }

    .btn-image {
        display: inline-block;
        cursor: pointer;
        transition: transform 0.2s ease;
    }

    .btn-image:hover {
        transform: scale(1.1);
    }
</style>

