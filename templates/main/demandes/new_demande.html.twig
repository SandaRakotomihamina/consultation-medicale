{% extends 'base.html.twig' %}

{% block title %}Nouvelle demande{% endblock %}

{% block body %}
    {% include '_partial/nav.html.twig' %}

    <style>
        .consultation-container {
            max-width: 900px;
            margin: 2rem auto;
            padding: 2rem;
            background: #ffffff;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.06);
            margin-top: 140px;
            transition: .3s ease;
        }

        .consultation-container:hover {
            box-shadow: 0 6px 28px rgba(0,0,0,0.10);
        }

        .consultation-container h1 {
            margin-top: 0;
            font-size: 1.7rem;
            font-weight: 700;
            color: #222;
        }

        .consultation-container p {
            color: #555;
            margin-bottom: 1.5rem;
        }

        .consultation-form {
            display: flex;
            flex-direction: column;
            gap: 1.2rem;
            width: 100%;
        }

        .consultation-form label {
            font-weight: 600;
            color: #333;
            margin-bottom: .35rem;
        }

        .consultation-form input[type="text"],
        .consultation-form textarea,
        .consultation-form select {
            padding: .75rem 1rem;
            border: 1px solid #d1d1d1;
            border-radius: 8px;
            width: 100%;
            font-size: 1rem;
            background: #fafafa;
            transition: .2s ease;
            box-sizing: border-box;
        }

        .consultation-form input:focus,
        .consultation-form textarea:focus,
        .consultation-form select:focus {
            border-color: #0d6efd;
            background: #fff;
            box-shadow: 0 0 0 3px rgba(13,110,253,0.15);
            outline: none;
        }

        .consultation-form .form-row {
            width: 100%;
        }

        .form-actions {
            display: flex;
            gap: 1rem;
            margin-top: 1rem;
        }

        .btn,
        .btn--muted {
            padding: .75rem 1.4rem;
            font-size: 1rem;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            border: none;
            display: inline-block;
            transition: 0.25s ease;
            box-shadow: 0 6px 18px rgba(0,0,0,0.18);
        }

        .btn {
            background: #0d6efd;
            color: #fff;
        }

        .btn:hover {
            background: #0b5ed7;
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.22);
        }

        .btn:active {
            transform: translateY(2px);
            box-shadow:
                inset 3px 3px 7px rgba(255, 255, 255, 0.87),
                inset -3px -3px 7px rgba(41, 43, 44, 0.5);
        }

        .btn--muted {
            background: #6c757d;
            color: #fff;
            text-decoration: none;
        }

        .btn--muted:hover {
            background: #5a6268;
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.22);
        }
        .btn--muted:active {
        transform: translateY(2px);
        box-shadow:
            inset 3px 3px 7px rgba(255, 255, 255, 0.87),
            inset -3px -3px 7px rgba(41, 43, 44, 0.5);
    }

    .error-message {
        display: none;
        color: #dc3545;
        font-size: 0.8rem;
        margin-top: 0.1rem;
        padding: 0.5rem 0.2rem;
        background-color: transparent;
        border: none;
        border-radius: 4px;
    }

    .consultation-form input[style*="border-color: rgb(220, 53, 69)"] {
        border-color: #dc3545 !important;
        background-color: #fff5f5 !important;
    }

    @media (max-width: 640px) {
            .consultation-container { padding: 1rem; }
        }
    </style>

    <div class="container consultation-container">
        <h1>Nouvelle consultation</h1>
        <p>Remplissez les champs ci-dessous puis cliquez sur <strong>Enregistrer</strong>.</p>

        {{ form_start(form) }}

        <div class="consultation-form" data-controller="personnel-lookup" data-personnel-lookup-check-user-exists-value="false">
            <div>
                {{ form_label(form.Matricule) }}
                {{ form_widget(form.Matricule, {
                    'attr': {
                        'data-personnel-lookup-target': 'matricule',
                        'data-action': 'input->personnel-lookup#searchPersonnel',
                        'id': 'demande_matricule'
                    }
                }) }}
                <div class="error-message" data-personnel-lookup-target="errorMessage"></div>
            </div>
            
            <div>
                {{ form_label(form.Grade) }}
                {{ form_widget(form.Grade, {
                    'attr': {
                        'data-personnel-lookup-target': 'grade',
                        'readonly': 'readonly'
                    }
                }) }}
            </div>
            
            <div>
                {{ form_label(form.Nom) }}
                {{ form_widget(form.Nom, {
                    'attr': {
                        'data-personnel-lookup-target': 'nom',
                        'readonly': 'readonly'
                    }
                }) }}
            </div>
            
            {{ form_row(form.Motif) }}
            {{ form_row(form.DelivreurDeMotif) }}

            <div class="form-actions">
                <button class="btn" type="submit">Enregistrer</button>
                <a href="{{ path('app_main') }}" class="btn--muted">Annuler</a>
            </div>
        </div>

        {{ form_end(form) }}
    </div>

    {% include '_partial/footer.html.twig' %}
{% endblock %}
