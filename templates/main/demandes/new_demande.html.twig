{% extends 'base.html.twig' %}

{% block title %}Nouvelle demande{% endblock %}

{% block body %}
    {% include '_partial/nav.html.twig' %}

    <style>
        .consultation-container {
            max-width: 900px;
            margin: 2rem auto;
            padding: 2rem;
            background: var(--bg-primary);
            border-radius: 12px;
            box-shadow: 0 4px 20px var(--shadow-dark);
            margin-top: 140px;
            transition: .3s ease, background 0.3s ease;
        }

        .consultation-container:hover {
            box-shadow: 0 6px 28px var(--shadow-dark-hover);
        }

        .consultation-container h1 {
            margin-top: 0;
            font-size: 1.7rem;
            font-weight: 700;
            color: var(--text-primary);
            transition: color 0.3s ease;
        }

        .consultation-container p {
            color: var(--text-secondary);
            margin-bottom: 1.5rem;
            transition: color 0.3s ease;
        }

        .consultation-form {
            display: flex;
            flex-direction: column;
            gap: 1.2rem;
            width: 100%;
        }

        .consultation-form label {
            font-weight: 600;
            color: var(--text-primary);
            margin-bottom: .35rem;
            transition: color 0.3s ease;
        }

        .consultation-form input[type="text"],
        .consultation-form textarea,
        .consultation-form select {
            padding: .75rem 1rem;
            border: 1px solid var(--border-color);
            border-radius: 8px;
            width: 100%;
            font-size: 1rem;
            background: var(--bg-tertiary);
            color: var(--text-primary);
            transition: .2s ease, background 0.3s ease, color 0.3s ease, border-color 0.3s ease;
            box-sizing: border-box;
        }

        .consultation-form input:focus,
        .consultation-form textarea:focus,
        .consultation-form select:focus {
            border-color: var(--accent-color);
            background: var(--bg-primary);
            box-shadow: 0 0 0 3px rgba(13,110,253,0.15);
            outline: none;
        }

        .consultation-form .form-row {
            width: 100%;
        }

        .form-actions {
            display: flex;
            gap: 1rem;
            margin-top: 1rem;
        }

        .btn,
        .btn--muted {
            padding: .75rem 1.4rem;
            font-size: 1rem;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            border: none;
            display: inline-block;
            transition: 0.25s ease;
            box-shadow: 0 6px 18px rgba(0,0,0,0.18);
        }

        .btn {
            background: var(--accent-color);
            color: #fff;
            transition: background 0.3s ease;
        }

        .btn:hover {
            background: var(--accent-hover);
            transform: translateY(-3px);
            box-shadow: 0 10px 25px var(--shadow-dark-hover);
        }

        .btn:active {
            transform: translateY(2px);
            box-shadow:
                inset 3px 3px 7px var(--shadow-light),
                inset -3px -3px 7px var(--shadow-dark);
        }

        .btn--muted {
            background: #6c757d;
            color: #fff;
            text-decoration: none;
        }

        .btn--muted:hover {
            background: #5a6268;
            transform: translateY(-3px);
            box-shadow: 0 10px 25px var(--shadow-dark-hover);
        }
        .btn--muted:active {
        transform: translateY(2px);
        box-shadow:
            inset 3px 3px 7px var(--shadow-light),
            inset -3px -3px 7px var(--shadow-dark);
        }

        .error-message {
            display: none;
            color: var(--error-color);
            font-size: 0.8rem;
            margin-top: 0.1rem;
            padding: 0.5rem 0.2rem;
            background-color: transparent;
            border: none;
            border-radius: 4px;
            transition: color 0.3s ease;
        }

        .consultation-form input[style*="border-color: rgb(220, 53, 69)"] {
            border-color: var(--error-color) !important;
            background-color: var(--error-bg) !important;
        }

        @media (max-width: 640px) {
                .consultation-container { padding: 1rem; }
        }
    </style>

    <div class="container consultation-container" data-aos="zoom-in" data-aos-duration="500ms">
        <h1>Nouvelle demande de consultation</h1>
        <p>Remplissez les champs ci-dessous puis cliquez sur <strong>Enregistrer</strong>.</p>

        {{ form_start(form) }}

        <div class="consultation-form" data-controller="personnel-lookup" data-personnel-lookup-check-user-exists-value="false" data-personnel-lookup-user-libute-value="{{ app.user.libute }}">
            <div>
                {{ form_label(form.Matricule) }}
                {{ form_widget(form.Matricule, {
                    'attr': {
                        'data-personnel-lookup-target': 'matricule',
                        'data-action': 'input->personnel-lookup#searchPersonnel',
                        'id': 'demande_matricule'
                    }
                }) }}
                <div class="error-message" data-personnel-lookup-target="errorMessage"></div>
            </div>
            
            <div>
                {{ form_label(form.Grade) }}
                {{ form_widget(form.Grade, {
                    'attr': {
                        'data-personnel-lookup-target': 'grade',
                        'readonly': 'readonly'
                    }
                }) }}
            </div>
            
            <div>
                {{ form_label(form.Nom) }}
                {{ form_widget(form.Nom, {
                    'attr': {
                        'data-personnel-lookup-target': 'nom',
                        'readonly': 'readonly'
                    }
                }) }}
            </div>

            <div>
                {{ form_label(form.LIBUTE) }}
                {{ form_widget(form.LIBUTE, {
                    'attr': {
                        'data-personnel-lookup-target': 'libute',
                        'readonly': 'readonly'
                    }
                }) }}
            </div>
            
            {{ form_row(form.Motif) }}
            {{ form_row(form.DelivreurDeMotif, {
                'attr': {
                    'readonly': 'readonly',
                    'value': app.user.libute
                }
            }) }}

            <div class="form-actions">
                <button class="btn" type="submit">Enregistrer</button>
                <a href="{{ path('app_main') }}" class="btn--muted">Annuler</a>
            </div>
        </div>

        {{ form_end(form) }}
    </div>
    <script>
        AOS.init();
    </script>

    {% include '_partial/footer.html.twig' %}
{% endblock %}
