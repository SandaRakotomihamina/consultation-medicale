{% extends 'base.html.twig' %}

{% block title %}Résultats de la recherche{% endblock %}

{% block body %}
    <style>
        .feed {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
            margin: 0 auto;
        }

        .card {
            background-color: var(--bg-primary);
            border-radius: 12px;
            box-shadow: 0 4px 12px var(--shadow-dark);
            overflow: hidden;
            transition: transform 0.2s, box-shadow 0.2s, background-color 0.2s;
            border: 1px solid var(--border-color);
        }

        .card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px var(--shadow-dark-hover);
        }

        .card-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem;
            border-bottom: 1px solid var(--border-color);
            transition: border-color 0.3s ease;
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .name-grade {
            cursor: pointer;
            display: flex;
            flex-direction: column;
        }

        .name-grade .grade {
            font-weight: bold;
            color: #4267B2;
            margin-right: 0.3rem;
        }

        .name-grade .name {
            font-weight: 600;
            color: var(--text-primary);
            transition: color 0.3s ease;
        }

        .name-grade .matricule {
            font-size: 0.85rem;
            color: var(--text-tertiary);
            transition: color 0.3s ease;
        }

        .date {
            font-size: 0.85rem;
            color: var(--text-muted);
            transition: color 0.3s ease;
        }

        .card-body {
            padding: 1rem;
        }

        .flex-container {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
        }

        .info-block {
            flex: 1;
            min-width: 200px;
            border: 1px solid var(--border-color);
            border-radius: 8px;
            position: relative;
            padding: 1.5rem 1rem 1rem 1rem;
            background-color: var(--bg-tertiary);
            transition: border-color 0.3s ease, background-color 0.3s ease;
        }

        .info-block .label {
            position: absolute;
            top: -0.8rem;
            left: 1rem;
            background-color: var(--bg-tertiary);
            padding: 0 0.5rem;
            font-weight: bold;
            font-size: 0.85rem;
            color: var(--text-primary);
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        .info-block .content {
            margin-bottom: 0.8rem;
            white-space: pre-wrap;
            color: var(--text-primary);
            transition: color 0.3s ease;
        }

        .info-block .delivreur {
            font-size: 0.85rem;
            color: var(--text-secondary);
            border-top: 1px solid var(--border-color);
            padding-top: 0.3rem;
            transition: color 0.3s ease, border-color 0.3s ease;
        }

        .btn-image {
            display: inline-block;
            cursor: pointer;
            transition: transform 0.2s ease;
        }

        .btn-image:hover {
            transform: scale(1.1);
        }

        @media (max-width: 1000px) {
            h1.page-title {
                margin-top: 18rem !important;
            }
        }

        @media (max-width: 480px) {
            h1.page-title {
                font-size: 1.5rem !important;
            }
        }
        @media (max-width: 450px) {
            h1.page-title {
                margin-top: 15rem !important;
            }
        }
    </style>

    {% include '_partial/nav.html.twig' %}
    {% include '_partial/subNav.html.twig' with {'search_type': 'demandes'} %}

    <h1 class="page-title" style="text-align:left; margin:13rem 0 2rem 0; transition:.3s ease-in-out; color: var(--text-primary);">
        Résultats pour : "<span style="font-style: italic;">{{ query }}"</span>
    </h1>

    <div data-controller="infinite-scroll">
        <div class="feed" id="demandes-feed" data-page="1" data-search-query="{{ query }}" data-search-type="demandes">
            {% if results %}
                {% for demande in results %}
                    {% include 'main/demandes/_card.html.twig' %}
                {% endfor %}
            {% else %}
                <svg 
                    width="60px" 
                    height="60px" 
                    viewBox="0 0 24 24" 
                    fill="none" 
                    xmlns="http://www.w3.org/2000/svg"
                    style="position: relative; left: 50%; transform: translateX(-50%); color: var(--text-primary);"
                >
                    <path 
                        fill-rule="evenodd" 
                        clip-rule="evenodd" d="M9.29289 1.29289C9.48043 1.10536 9.73478 1 10 1H18C19.6569 1 21 2.34315 21 4V20C21 21.6569 19.6569 23 18 23H6C4.34315 23 3 21.6569 3 20V8C3 7.73478 3.10536 7.48043 3.29289 7.29289L9.29289 1.29289ZM18 3H11V8C11 8.55228 10.5523 9 10 9H5V20C5 20.5523 5.44772 21 6 21H18C18.5523 21 19 20.5523 19 20V4C19 3.44772 18.5523 3 18 3ZM6.41421 7H9V4.41421L6.41421 7ZM7 13C7 12.4477 7.44772 12 8 12H16C16.5523 12 17 12.4477 17 13C17 13.5523 16.5523 14 16 14H8C7.44772 14 7 13.5523 7 13ZM7 17C7 16.4477 7.44772 16 8 16H16C16.5523 16 17 16.4477 17 17C17 17.5523 16.5523 18 16 18H8C7.44772 18 7 17.5523 7 17Z" 
                        fill="currentColor" 
                        stroke-width="1" 
                        stroke-linecap="round" 
                        stroke-linejoin="round"
                    />
                </svg>
                <p style="text-align:center; color: var(--text-primary);">Aucune demande trouvée.</p>
            {% endif %}
        </div>

        <div id="loading-indicator" style="display: none; padding-top: 2rem;">
            {% include '_partial/animations/card_loading_animation.html.twig' %}
        </div>
    </div>

    {% include '_partial/footer.html.twig' %}
{% endblock %}

