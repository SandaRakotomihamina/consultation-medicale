{% extends 'base.html.twig' %}

{% block title %}Nouvel utilisateur{% endblock %}

{% block body %}
    {% include '_partial/nav.html.twig' %}

    <style>
        .consultation-container {
            max-width: 900px;
            margin: 2rem auto;
            padding: 2rem;
            background: #ffffff;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.06);
            margin-top: 140px;
            transition: .3s ease;
        }

        .consultation-container:hover {
            box-shadow: 0 6px 28px rgba(0,0,0,0.10);
        }

        .consultation-container h1 {
            margin-top: 0;
            font-size: 1.7rem;
            font-weight: 700;
            color: #222;
        }

        .consultation-container p {
            color: #555;
            margin-bottom: 1.5rem;
        }

        .consultation-form {
            display: flex;
            flex-direction: column;
            gap: 1.2rem;
            width: 100%;
        }

        .consultation-form label {
            font-weight: 600;
            color: #333;
            margin-bottom: .35rem;
        }

        .consultation-form input[type="text"],
        .consultation-form input[type="email"],
        .consultation-form input[type="password"],
        .consultation-form textarea {
            padding: .75rem 1rem;
            border: 1px solid #d1d1d1;
            border-radius: 8px;
            width: 100%;
            font-size: 1rem;
            background: #fafafa;
            box-sizing: border-box;
            transition: .2s ease;
        }

        .consultation-form input:focus,
        .consultation-form textarea:focus {
            border-color: #0d6efd;
            background: #fff;
            box-shadow: 0 0 0 3px rgba(13,110,253,0.15);
            outline: none;
        }

        .consultation-form select.form-select-custom {
            padding: .75rem 1rem;
            border: 1px solid #d1d1d1;
            border-radius: 8px;
            width: 100%;
            font-size: 1rem;
            background: #fafafa;
            color: #333;
            appearance: none;
            background-repeat: no-repeat;
            background-position: right 0.75rem center;
            background-size: 0.65rem auto;
            transition: .2s ease;
        }

        .consultation-form select:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 3px rgba(13,110,253,0.15);
            outline: none;
        }


        .form-actions {
            display: flex;
            gap: 1rem;
            margin-top: 1rem;
        }

        .btn,
        .btn--muted {
            padding: .75rem 1.4rem;
            font-size: 1rem;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            border: none;
            transition: 0.25s ease;
            display: inline-block;
            box-shadow: 0 4px 10px rgba(0,0,0,0.12);
        }

        .btn {
            background: #0d6efd;
            color: #fff;
        }

        .btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 16px rgba(0,0,0,0.18);
            background: #0b5ed7;
        }

        .btn:active {
            transform: translateY(2px);
            box-shadow:
                inset 3px 3px 7px rgba(255, 255, 255, 0.87),
                inset -3px -3px 7px rgba(44, 41, 41, 0.5);
        }

        .btn--muted {
            background: #6c757d;
            color: #fff;
            text-decoration: none;
        }

        .btn--muted:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 16px rgba(0,0,0,0.18);
            background: #5a6268;
        }

        .btn--muted:active {
            transform: translateY(2px);
            box-shadow:
                inset 3px 3px 7px rgba(255, 255, 255, 0.87),
                inset -3px -3px 7px rgba(44, 41, 41, 0.5);
        }

        .error-message {
            display: none;
            color: #dc3545;
            font-size: 0.8rem;
            margin-top: 0.1rem;
            padding: 0.5rem 0.2rem;
            background-color: transparent;
            border: none;
            border-radius: 4px;
        }

        .consultation-form input[style*="border-color: rgb(220, 53, 69)"] {
            border-color: #dc3545 !important;
            background-color: #fff5f5 !important;
        }

        .toggle-password {
            position: absolute;
            right: 0.6rem;
            top: 70%;
            transform: translateY(-50%);
            cursor: pointer;
            color: #777;
            transition: color 0.2s;
        }

        .toggle-password:hover {
            color: #0366d6;
        }

        @media (max-width: 640px) {
            .consultation-container { padding: 1rem; }
        }
    </style>

        <div class="container consultation-container" data-aos="zoom-in" data-aos-duration="500ms">
        <h1>Nouvel utilisateur</h1>
        <p>Remplissez les champs ci-dessous puis cliquez sur <strong>Créer</strong>.</p>

        {{ form_start(form) }}

        <div class="consultation-form" data-controller="personnel-lookup" data-personnel-lookup-check-user-exists-value="true">
            <div>
                {{ form_label(form.matricule) }}
                {{ form_widget(form.matricule, {
                    'attr': {
                        'data-personnel-lookup-target': 'matricule',
                        'data-action': 'input->personnel-lookup#searchPersonnel',
                        'id': 'user_matricule'
                    }
                }) }}
                <div class="error-message" id="matricule-error" data-personnel-lookup-target="errorMessage"></div>
            </div>

            <div>
                {{ form_label(form.title) }}
                {{ form_widget(form.title, {
                    'attr': {
                        'data-personnel-lookup-target': 'grade',
                        'readonly': 'readonly'
                    }
                }) }}
            </div>

            <div>
                {{ form_label(form.name) }}
                {{ form_widget(form.name, {
                    'attr': {
                        'data-personnel-lookup-target': 'nom',
                        'readonly': 'readonly'
                    }
                }) }}
            </div>

            <div>
                {{ form_label(form.username) }}
                {{ form_widget(form.username, {
                    'attr': {
                        'id': 'user_username'
                    }
                }) }}
                <div class="error-message" id="username-error"></div>
            </div>

            <div style="position: relative;">
                {{ form_label(form.plainPassword) }}
                {{ form_widget(form.plainPassword, {
                    'attr': {
                        'id': 'user_plainPassword',
                        'autocomplete': 'new-password',
                        'style': 'padding-right: 2.5rem;'
                    }
                }) }}
                <span class="toggle-password" onclick="togglePassword()">
                    <svg id="eyeIcon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="22" height="22">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                            d="M13.875 18.825A10.05 10.05 0 0112 19c-5.523 0-10-4-10-7 
                               0-1.21.63-2.634 1.72-3.93m3.522-2.83A9.978 9.978 0 0112 5c5.523 0 10 4 10 7 
                               0 1.387-.63 2.864-1.72 4.17M15 12a3 3 0 11-6 0 3 3 0 016 0zm5 9L4 3"/>
                    </svg>
                </span>
            </div>
            {{ form_row(form.roles) }}

            <div class="form-actions">
                <button class="btn" type="submit">Créer</button>
                <a href="{{ path('app_main') }}" class="btn--muted">Annuler</a>
            </div>
        </div>

        {{ form_end(form) }}
    </div>

    {% include '_partial/footer.html.twig' %}

    <script>
        function togglePassword() {
            const input = document.getElementById("user_plainPassword");
            const icon = document.getElementById("eyeIcon");
            if (!input || !icon) return;
            if (input.type === "password") {
                input.type = "text";
                icon.innerHTML = `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M1.5 12s4-7 10.5-7 10.5 7 10.5 7-4 7-10.5 7S1.5 12 1.5 12zm10.5 3a3 3 0 100-6 3 3 0 000 6z"/>`;
            } else {
                input.type = "password";
                icon.innerHTML = `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                    d="M13.875 18.825A10.05 10.05 0 0112 19c-5.523 0-10-4-10-7 
                    0-1.21.63-2.634 1.72-3.93m3.522-2.83A9.978 9.978 0 0112 5c5.523 0 10 4 10 7 
                    0 1.387-.63 2.864-1.72 4.17M15 12a3 3 0 11-6 0 3 3 0 016 0zm5 9L4 3"/>`;
            }
        }

        (function() {
            const matriculeInput = document.getElementById('user_matricule');
            const usernameInput = document.getElementById('user_username');
            const matriculeError = document.getElementById('matricule-error');
            const usernameError = document.getElementById('username-error');
            const form = document.querySelector('form');

            let debounceTimer;

            function checkUserExists() {
                const matricule = matriculeInput ? matriculeInput.value.trim() : '';
                const username = usernameInput ? usernameInput.value.trim() : '';

                // Clear previous messages
                if (matriculeError) matriculeError.style.display = 'none';
                if (usernameError) usernameError.style.display = 'none';

                // Only check if at least one field has content
                if (!matricule && !username) return;

                fetch('/api/check-user-exists', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        matricule: matricule,
                        username: username
                    })
                })
                .then(response => response.json())
                .then(data => {
                    // Display matricule error if exists
                    if (data.errors.matricule && matriculeError) {
                        matriculeError.textContent = data.errors.matricule;
                        matriculeError.style.display = 'block';
                        if (matriculeInput) {
                            matriculeInput.style.borderColor = '#dc3545';
                            matriculeInput.style.backgroundColor = '#fff5f5';
                        }
                    } else if (matriculeInput && !data.errors.matricule) {
                        matriculeInput.style.borderColor = '#d1d1d1';
                        matriculeInput.style.backgroundColor = '#fafafa';
                    }

                    // Display username error if exists
                    if (data.errors.username && usernameError) {
                        usernameError.textContent = data.errors.username;
                        usernameError.style.display = 'block';
                        if (usernameInput) {
                            usernameInput.style.borderColor = '#dc3545';
                            usernameInput.style.backgroundColor = '#fff5f5';
                        }
                    } else if (usernameInput && !data.errors.username) {
                        usernameInput.style.borderColor = '#d1d1d1';
                        usernameInput.style.backgroundColor = '#fafafa';
                    }
                })
                .catch(error => console.error('Erreur lors de la vérification:', error));
            }

            // Add event listeners with debounce for username check
            if (usernameInput) {
                usernameInput.addEventListener('input', function() {
                    clearTimeout(debounceTimer);
                    debounceTimer = setTimeout(checkUserExists, 500);
                });
            }

            // Prevent form submission if there are errors
            if (form) {
                form.addEventListener('submit', function(e) {
                    if ((matriculeError && matriculeError.style.display === 'block') ||
                        (usernameError && usernameError.style.display === 'block')) {
                        e.preventDefault();
                        alert('Veuillez corriger les erreurs affichées avant de soumettre le formulaire.');
                        document.location.reload(true);
                    }
                });
            }
        })();
        AOS.init();
    </script>
{% endblock %}
