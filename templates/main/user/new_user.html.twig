{% extends 'base.html.twig' %}

{% block title %}Nouvel utilisateur{% endblock %}

{% block body %}
    {% include '_partial/nav.html.twig' %}

    <style>
        .consultation-container {
            max-width: 900px;
            margin: 2rem auto;
            padding: 2rem;
            background: #ffffff;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.06);
            margin-top: 140px;
            transition: .3s ease;
        }

        .consultation-container:hover {
            box-shadow: 0 6px 28px rgba(0,0,0,0.10);
        }

        .consultation-container h1 {
            margin-top: 0;
            font-size: 1.7rem;
            font-weight: 700;
            color: #222;
        }

        .consultation-container p {
            color: #555;
            margin-bottom: 1.5rem;
        }

        .consultation-form {
            display: flex;
            flex-direction: column;
            gap: 1.2rem;
            width: 100%;
        }

        .consultation-form label {
            font-weight: 600;
            color: #333;
            margin-bottom: .35rem;
        }

        .consultation-form input[type="text"],
        .consultation-form input[type="email"],
        .consultation-form input[type="password"],
        .consultation-form textarea {
            padding: .75rem 1rem;
            border: 1px solid #d1d1d1;
            border-radius: 8px;
            width: 100%;
            font-size: 1rem;
            background: #fafafa;
            box-sizing: border-box;
            transition: .2s ease;
        }

        .consultation-form input:focus,
        .consultation-form textarea:focus {
            border-color: #0d6efd;
            background: #fff;
            box-shadow: 0 0 0 3px rgba(13,110,253,0.15);
            outline: none;
        }

        .consultation-form select.form-select-custom {
            padding: .75rem 1rem;
            border: 1px solid #d1d1d1;
            border-radius: 8px;
            width: 100%;
            font-size: 1rem;
            background-color: #fff;
            color: #333;
            appearance: none;
            background-image: url("data:image/svg+xml;charset=US-ASCII,%3Csvg%20width%3D'10'%20height%3D'10'%20viewBox%3D'0%200%2010%2010'%20xmlns%3D'http://www.w3.org/2000/svg'%3E%3Cpolygon%20points%3D'0,0%2010,0%205,5'%20fill%3D'%23666'%2F%3E%3C%2Fsvg%3E");
            background-repeat: no-repeat;
            background-position: right 0.75rem center;
            background-size: 0.65rem auto;
            transition: .2s ease;
        }

        .consultation-form select:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 3px rgba(13,110,253,0.15);
            outline: none;
        }


        .form-actions {
            display: flex;
            gap: 1rem;
            margin-top: 1rem;
        }

        .btn,
        .btn--muted {
            padding: .75rem 1.4rem;
            font-size: 1rem;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            border: none;
            transition: 0.25s ease;
            display: inline-block;
            box-shadow: 0 4px 10px rgba(0,0,0,0.12);
        }

        .btn {
            background: #0d6efd;
            color: #fff;
        }

        .btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 16px rgba(0,0,0,0.18);
            background: #0b5ed7;
        }

        .btn:active {
            transform: translateY(2px);
            box-shadow:
                inset 3px 3px 7px rgba(255, 255, 255, 0.87),
                inset -3px -3px 7px rgba(44, 41, 41, 0.5);
        }

        .btn--muted {
            background: #6c757d;
            color: #fff;
            text-decoration: none;
        }

        .btn--muted:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 16px rgba(0,0,0,0.18);
            background: #5a6268;
        }

        .btn--muted:active {
            transform: translateY(2px);
            box-shadow:
                inset 3px 3px 7px rgba(255, 255, 255, 0.87),
                inset -3px -3px 7px rgba(44, 41, 41, 0.5);
        }

        .error-message {
            display: none;
            color: #dc3545;
            font-size: 0.875rem;
            margin-top: 0.35rem;
            padding: 0.5rem 0.75rem;
            background-color: #f8d7da;
            border: 1px solid #f5c6cb;
            border-radius: 4px;
        }

        .consultation-form input[style*="border-color: rgb(220, 53, 69)"] {
            border-color: #dc3545 !important;
            background-color: #fff5f5 !important;
        }

        @media (max-width: 640px) {
            .consultation-container { padding: 1rem; }
        }
    </style>

        <div class="container consultation-container">
        <h1>Nouvel utilisateur</h1>
        <p>Remplissez les champs ci-dessous puis cliquez sur <strong>Créer</strong>.</p>

        {{ form_start(form) }}

        <div class="consultation-form" data-controller="personnel-lookup">
            <div>
                {{ form_label(form.matricule) }}
                {{ form_widget(form.matricule, {
                    'attr': {
                        'data-personnel-lookup-target': 'matricule',
                        'data-action': 'input->personnel-lookup#searchPersonnel'
                    }
                }) }}
                <div class="error-message" data-personnel-lookup-target="errorMessage"></div>
            </div>

            <div>
                {{ form_label(form.title) }}
                {{ form_widget(form.title, {
                    'attr': {
                        'data-personnel-lookup-target': 'grade',
                        'readonly': 'readonly'
                    }
                }) }}
            </div>

            <div>
                {{ form_label(form.name) }}
                {{ form_widget(form.name, {
                    'attr': {
                        'data-personnel-lookup-target': 'nom',
                        'readonly': 'readonly'
                    }
                }) }}
            </div>

            {{ form_row(form.username) }}
            {{ form_row(form.plainPassword) }}
            {{ form_row(form.roles) }}

            <div class="form-actions">
                <button class="btn" type="submit">Créer</button>
                <a href="{{ path('app_main') }}" class="btn--muted">Annuler</a>
            </div>
        </div>

        {{ form_end(form) }}
    </div>

    {% include '_partial/footer.html.twig' %}
{% endblock %}
