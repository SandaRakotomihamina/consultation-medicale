<style>
    .card {
        position: relative;
        display: inline-block;
        width: 400px;
        background-color: var(--bg-primary);
        border-radius: 12px;
        box-shadow: 0 4px 12px var(--shadow-dark);
        overflow: hidden;
        transition: transform 0.2s, box-shadow 0.2s, background-color 0.2s;
        border: 0px solid var(--border-color);
        margin: 1rem;
        vertical-align: top;
        box-sizing: border-box;
    }

    .card:hover {
        transform: translateY(-3px) !important;
        box-shadow: 0 8px 20px var(--shadow-dark-hover);
    }

    .card:has(.delete-btn:hover) {
        background-color: rgba(253, 135, 135, 0.28) !important;
        transition: background-color 0.5s ease;
    }

    .card:has(.delete-btn:hover) .card-body,
    .card:has(.delete-btn:hover) .card-footer {
        background-color: rgba(241, 178, 178, 0.19) !important;
        transition: background-color 0.2s ease-in-out;
    }

    .card:has(.edit-btn:hover) {
        background-color: rgba(135, 176, 253, 0.28) !important;
        transition: background-color 0.5s ease;
    }
    
    .card:has(.edit-btn:hover) .card-body,
    .card:has(.edit-btn:hover) .card-footer {
        background-color: rgba(178, 203, 241, 0.19) !important;
        transition: background-color 0.2s ease-in-out;
    }

    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.8rem;
        border-bottom: 1px solid var(--border-color);
        min-height: 70px;
        box-sizing: border-box;
        transition: border-color 0.3s ease;
    }

    .user-info {
        display: flex;
        align-items: center;
        gap: 0.8rem;
        overflow: hidden;
    }

    .name-grade {
        display: flex;
        flex-direction: column;
        overflow: hidden;
        max-width: 350px;
        cursor: pointer;
    }

    .name-grade div,
    .name-grade span {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 400px;
        display: block;
    }

    .matricule{
        font-size: 0.85rem;
        color: var(--text-tertiary);
        transition: color 0.3s ease;
    }

    .grade {
        font-weight: bold;
        color: #4267B2;
    }

    .card-body {
        padding: 1rem;
        font-size: 0.9rem;
        text-align: left;
        overflow: hidden;
        height: 170px;
        box-sizing: border-box;
        background-color: var(--bg-secondary);
        transition: background-color 0.3s ease;
    }

    .card-body p {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        margin-bottom: 6px;
        color: var(--text-primary);
        transition: color 0.3s ease;
    }

    .roles-wrapper {
        margin-top: 6px;
        display: flex;
        align-items: center;
        gap: 8px;
        overflow: hidden;
    }

    .roles-label {
        font-weight: bold;
        white-space: nowrap;
    }

    .roles-container {
        display: flex;
        flex-wrap: wrap;
        gap: 4px;
    }

    .role-badge {
        background: #4267B2;
        color: white;
        padding: 3px 7px;
        border-radius: 6px;
        font-size: 0.75rem;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .card-footer {
        height: 40px;
        display: flex;
        justify-content: flex-end;
        align-items: center;
        padding: 0.5rem 0.8rem;
        box-sizing: border-box;
        background-color: var(--bg-secondary);
        gap: 1em;
        transition: background-color 0.3s ease;
    }

    .delete-btn {
        margin-top: 4px;
        margin-bottom: 30px;
        cursor: pointer;
        opacity: 0.8;
        transition: opacity 0.2s, transform 0.2s;
    }

    .delete-btn:hover {
        opacity: 1;
        transform: scale(1.1);
    }

    .edit-btn {
        margin-top: 4px;
        margin-bottom: 30px;
        cursor: pointer;
        opacity: 0.8;
        transition: opacity 0.2s, transform 0.2s;
    }

    .edit-btn:hover {
        opacity: 1;
        transform: scale(1.1);
    }
</style>

<div class="card" data-aos="zoom-in" data-aos-duration="300ms">

    <!-- Header -->
    <div class="card-header">
        <div class="user-info">
            <div class="avatar">
                <!-- icon avatar -->
                <svg fill="currentColor" width="50px" height="50px" viewBox="0 0 32 32" id="icon" xmlns="http://www.w3.org/2000/svg" style="color: var(--text-primary);">
                    <path d="M16,8a5,5,0,1,0,5,5A5,5,0,0,0,16,8Zm0,8a3,3,0,1,1,3-3A3.0034,3.0034,0,0,1,16,16Z"/>
                    <path d="M16,2A14,14,0,1,0,30,16,14.0158,14.0158,0,0,0,16,2ZM10,26.3765V25a3.0033,3.0033,0,0,1,3-3h6a3.0033,3.0033,0,0,1,3,3v1.3765a11.8989,11.8989,0,0,1-12,0Zm13.9925-1.4507A5.0016,5.0016,0,0,0,19,20H13a5.0016,5.0016,0,0,0-4.9925,4.9258,12,12,0,1,1,15.985,0Z"/>
                    <rect id="_Transparent_Rectangle_" data-name="&lt;Transparent Rectangle&gt;" style="fill:none;" class="cls-1" width="32" height="32"/>
                </svg>
            </div>
            <div class="name-grade">
                <div style="display: flex; gap: .2rem;">
                    
                    {% if 'ROLE_USER' in user.roles %}
                        <span class="grade" title="Libelé unité: {{user.libute}}">{{ user.libute }}</span>
                        <span class="name" style="margin-left: 0.5rem;" title="Localisation: {{user.local}}">{{ user.local }}</span>
                    {% else %}
                        <span class="grade" title="{{user.title}}">{{ user.title }}</span>
                        <span class="name" style="margin-left: 0.5rem;" title="Nom: {{user.name}}">{{ user.name }}</span>
                    {% endif %}
                    
                </div>

                {% if 'ROLE_USER' in user.roles %}
                    <span class="matricule" title="Code unité: {{user.codute}}">{{ user.codute }}</span>
                {% else %}
                    <span class="matricule" title="Matricule: {{user.matricule}}">{{ user.matricule }}</span>
                {% endif %}
            </div>
        </div>
    </div>

    <!-- Body -->
    <div class="card-body" id="card-body">
        <p><strong>nom d'utilisateur :</strong> {{ user.username }}</p>

        <p><strong>Identifiant du compte :</strong> {{ user.id }}</p>

        {% set roleLabels = {
            'ROLE_SUPER_ADMIN': 'Superviseur du site',
            'ROLE_ADMIN': 'Medecin',
            'ROLE_USER': 'Compte d\'unité'
        } %}

        <div class="roles-wrapper">
            <span class="roles-label">Rôles :</span>
            <div class="roles-container">
                {% for role in user.roles %}
                    <span class="role-badge">
                        {{ roleLabels[role] ?? role }}
                    </span>
                {% endfor %}
            </div>
        </div>
    </div>

    <!-- Footer avec bouton suppression -->
    <div class="card-footer">
        <a href="{{ path('app_user_edit', {id: user.id}) }}"
            {% if app.user and 'ROLE_SUPER_ADMIN' not in app.user.roles %}
                style="pointer-events: none; opacity: 0.5; cursor: default;"
            {% endif %} 
           >
            <svg class="edit-btn" width="30px" height="30px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" style="color: var(--accent-color);">
                <path d="M21.2799 6.40005L11.7399 15.94C10.7899 16.89 7.96987 17.33 7.33987 16.7C6.70987 16.07 7.13987 13.25 8.08987 12.3L17.6399 2.75002C17.8754 2.49308 18.1605 2.28654 18.4781 2.14284C18.7956 1.99914 19.139 1.92124 19.4875 1.9139C19.8359 1.90657 20.1823 1.96991 20.5056 2.10012C20.8289 2.23033 21.1225 2.42473 21.3686 2.67153C21.6147 2.91833 21.8083 3.21243 21.9376 3.53609C22.0669 3.85976 22.1294 4.20626 22.1211 4.55471C22.1128 4.90316 22.0339 5.24635 21.8894 5.5635C21.7448 5.88065 21.5375 6.16524 21.2799 6.40005V6.40005Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M11 4H6C4.93913 4 3.92178 4.42142 3.17163 5.17157C2.42149 5.92172 2 6.93913 2 8V18C2 19.0609 2.42149 20.0783 3.17163 20.8284C3.92178 21.5786 4.93913 22 6 22H17C19.21 22 20 20.2 20 18V13" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            
        </a>

        <a href="{{ path('app_user_delete', {id: user.id}) }}"
           onclick="return confirm('Voulez-vous vraiment supprimer cet utilisateur ?');"
            {% if app.user and 'ROLE_SUPER_ADMIN' not in app.user.roles %}
                style="pointer-events: none; opacity: 0.5; cursor: default;"
            {% endif %} 
           >
            <svg class="delete-btn" id="delete-btn" width="40px" height="40px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" style="color: var(--error-color);">
                <path d="M10 12V17" stroke="currentColor" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M14 12V17" stroke="currentColor" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M4 7H20" stroke="currentColor" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M6 10V18C6 19.6569 7.34315 21 9 21H15C16.6569 21 18 19.6569 18 18V10" stroke="currentColor" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M9 5C9 3.89543 9.89543 3 11 3H13C14.1046 3 15 3.89543 15 5V7H9V5Z" stroke="currentColor" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
        </a>
    </div>

</div>

