{% extends 'base.html.twig' %}

{% block title %}Résultats de la recherche{% endblock %}

{% block body %}
    {% include "_partial/nav.html.twig" %}
    {% include '_partial/subNav.html.twig' with {'search_type': 'users'} %}
    
    <style>
        .feed {
            display: block;
            margin-top: 2rem;
            text-align: left;
        }

        .card {
            position: relative;
            display: inline-block;
            width: 400px;
            background-color: var(--bg-primary);
            border-radius: 12px;
            box-shadow: 0 4px 12px var(--shadow-dark);
            overflow: hidden;
            transition: transform 0.2s, box-shadow 0.2s, background-color 0.2s;
            border: 0px solid var(--border-color);
            margin: 1rem;
            vertical-align: top;
            box-sizing: border-box;
        }

        .card:hover {
            transform: translateY(-3px) !important;
            box-shadow: 0 8px 20px var(--shadow-dark-hover);
        }

        .card-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0.8rem;
            border-bottom: 1px solid var(--border-color);
            min-height: 70px;
            box-sizing: border-box;
            transition: border-color 0.3s ease;
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 0.8rem;
            overflow: hidden;
        }

        .name-grade {
            display: flex;
            flex-direction: column;
            overflow: hidden;
            max-width: 350px;
            cursor: pointer;
        }

        .matricule{
            font-size: 0.85rem;
            color: var(--text-tertiary);
            transition: color 0.3s ease;
        }

        .grade {
            font-weight: bold;
            color: #4267B2;
        }

        .card-body {
            padding: 1rem;
            font-size: 0.9rem;
            text-align: left;
            overflow: hidden;
            height: 170px;
            box-sizing: border-box;
            background-color: var(--bg-secondary);
            transition: background-color 0.3s ease;
        }

        .card-body p {
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            margin-bottom: 6px;
            color: var(--text-primary);
            transition: color 0.3s ease;
        }

        .roles-wrapper {
            margin-top: 6px;
            display: flex;
            align-items: center;
            gap: 8px;
            overflow: hidden;
        }

        .roles-label {
            font-weight: bold;
            white-space: nowrap;
        }

        .roles-container {
            display: flex;
            flex-wrap: wrap;
            gap: 4px;
        }

        .role-badge {
            background: #4267B2;
            color: white;
            padding: 3px 7px;
            border-radius: 6px;
            font-size: 0.75rem;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .card-footer {
            height: 40px;
            display: flex;
            justify-content: flex-end;
            align-items: center;
            padding: 0.5rem 0.8rem;
            box-sizing: border-box;
            background-color: var(--bg-secondary);
            gap: 1em;
            transition: background-color 0.3s ease;
        }

        .delete-btn, .edit-btn {
            margin-top: 4px;
            margin-bottom: 30px;
            cursor: pointer;
            opacity: 0.8;
            transition: opacity 0.2s, transform 0.2s;
        }

        .delete-btn:hover, .edit-btn:hover {
            opacity: 1;
            transform: scale(1.1);
        }

        @media (max-width: 1000px) {
            h1.page-title {
                margin-top: 18rem !important;
            }
        }

        @media (max-width: 480px) {
            h1.page-title {
                font-size: 1.5rem !important;
            }
        }
        @media (max-width: 450px) {
            h1.page-title {
                margin-top: 15rem !important;
            }
        }
    </style>

    <h1 class="page-title" style="text-align:left; margin:13rem 0 2rem 0; font-size:1.8rem; transition:.3s ease-in-out; color: var(--text-primary);">
        Résultats pour : "<span style="font-style: italic;">{{ query }}"</span>
    </h1>

    <div data-controller="infinite-scroll">
        <div class="feed" id="users-feed" data-page="1" data-search-query="{{ query }}" data-search-type="users">
            {% if results %}
                {% for user in results %}
                    {% include 'main/user/_card.html.twig' %}
                {% endfor %}
            {% else %}
                <svg 
                    width="60px" 
                    height="60px" 
                    viewBox="0 0 24 24" 
                    fill="none" 
                    xmlns="http://www.w3.org/2000/svg"
                    style="position: relative; left: 50%; transform: translateX(-50%);"
                >
                    <path 
                        fill-rule="evenodd" 
                        clip-rule="evenodd" d="M9.29289 1.29289C9.48043 1.10536 9.73478 1 10 1H18C19.6569 1 21 2.34315 21 4V20C21 21.6569 19.6569 23 18 23H6C4.34315 23 3 21.6569 3 20V8C3 7.73478 3.10536 7.48043 3.29289 7.29289L9.29289 1.29289ZM18 3H11V8C11 8.55228 10.5523 9 10 9H5V20C5 20.5523 5.44772 21 6 21H18C18.5523 21 19 20.5523 19 20V4C19 3.44772 18.5523 3 18 3ZM6.41421 7H9V4.41421L6.41421 7ZM7 13C7 12.4477 7.44772 12 8 12H16C16.5523 12 17 12.4477 17 13C17 13.5523 16.5523 14 16 14H8C7.44772 14 7 13.5523 7 13ZM7 17C7 16.4477 7.44772 16 8 16H16C16.5523 16 17 16.4477 17 17C17 17.5523 16.5523 18 16 18H8C7.44772 18 7 17.5523 7 17Z" 
                        fill="#000000 " 
                        stroke-width="1.5" 
                        stroke-linecap="round" 
                        stroke-linejoin="round"
                    />
                </svg>
                <p style="text-align:center; color: var(--text-primary);">Aucun utilisateur trouvé.</p>
            {% endif %}
        </div>

        <div id="loading-indicator" style="display: none; padding-top: 2rem;">
            {% include '_partial/animations/card_loading_animation.html.twig' %}
        </div>
    </div>

    {% include '_partial/footer.html.twig' %}
{% endblock %}

