{% extends 'base.html.twig' %}

{% block title %}Résultats de la recherche{% endblock %}

{% block body %}
    {% include "_partial/nav.html.twig" %}
    {% include '_partial/subNav.html.twig' with {'search_type': 'users'} %}
    
    <style>
        .feed {
            display: block;
            margin-top: 2rem;
            text-align: left;
        }

        .card {
            position: relative;
            display: inline-block;
            width: 400px;
            background-color: var(--bg-primary);
            border-radius: 12px;
            box-shadow: 0 4px 12px var(--shadow-dark);
            overflow: hidden;
            transition: transform 0.2s, box-shadow 0.2s, background-color 0.2s;
            border: 0px solid var(--border-color);
            margin: 1rem;
            vertical-align: top;
            box-sizing: border-box;
        }

        .card:hover {
            transform: translateY(-3px) !important;
            box-shadow: 0 8px 20px var(--shadow-dark-hover);
        }

        .card-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0.8rem;
            border-bottom: 1px solid var(--border-color);
            min-height: 70px;
            box-sizing: border-box;
            transition: border-color 0.3s ease;
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 0.8rem;
            overflow: hidden;
        }

        .name-grade {
            display: flex;
            flex-direction: column;
            overflow: hidden;
            max-width: 350px;
            cursor: pointer;
        }

        .matricule{
            font-size: 0.85rem;
            color: var(--text-tertiary);
            transition: color 0.3s ease;
        }

        .grade {
            font-weight: bold;
            color: #4267B2;
        }

        .card-body {
            padding: 1rem;
            font-size: 0.9rem;
            text-align: left;
            overflow: hidden;
            height: 170px;
            box-sizing: border-box;
            background-color: var(--bg-secondary);
            transition: background-color 0.3s ease;
        }

        .card-body p {
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            margin-bottom: 6px;
            color: var(--text-primary);
            transition: color 0.3s ease;
        }

        .roles-wrapper {
            margin-top: 6px;
            display: flex;
            align-items: center;
            gap: 8px;
            overflow: hidden;
        }

        .roles-label {
            font-weight: bold;
            white-space: nowrap;
        }

        .roles-container {
            display: flex;
            flex-wrap: wrap;
            gap: 4px;
        }

        .role-badge {
            background: #4267B2;
            color: white;
            padding: 3px 7px;
            border-radius: 6px;
            font-size: 0.75rem;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .card-footer {
            height: 40px;
            display: flex;
            justify-content: flex-end;
            align-items: center;
            padding: 0.5rem 0.8rem;
            box-sizing: border-box;
            background-color: var(--bg-secondary);
            gap: 1em;
            transition: background-color 0.3s ease;
        }

        .delete-btn, .edit-btn {
            margin-top: 4px;
            margin-bottom: 30px;
            cursor: pointer;
            opacity: 0.8;
            transition: opacity 0.2s, transform 0.2s;
        }

        .delete-btn:hover, .edit-btn:hover {
            opacity: 1;
            transform: scale(1.1);
        }
    </style>

    <h1 class="page-title" style="text-align:left; margin:10rem 0 2rem 0; font-size:1.8rem; transition:.3s ease-in-out; color: var(--text-primary);">
        Résultats pour : "<span style="font-style: italic;">{{ query }}"</span>
    </h1>

    <div data-controller="infinite-scroll">
        <div class="feed" id="users-feed" data-page="1" data-search-query="{{ query }}" data-search-type="users">
            {% if results %}
                {% for user in results %}
                    {% include 'main/user/_user_card.html.twig' %}
                {% endfor %}
            {% else %}
                <p style="text-align:center; color: var(--text-primary);">Aucun utilisateur trouvé.</p>
            {% endif %}
        </div>

        <div id="loading-indicator" style="display: none; padding-top: 2rem;">
            {% include '_partial/animations/card_loading_animation.html.twig' %}
        </div>
    </div>

    {% include '_partial/footer.html.twig' %}
{% endblock %}

