{% extends 'base.html.twig' %}

{% block title %}Modifier un utilisateur{% endblock %}

{% block body %}
    {% include '_partial/nav.html.twig' %}

    <style>
        .consultation-container {
            max-width: 900px;
            margin: 2rem auto;
            padding: 2rem;
            background: var(--bg-primary);
            border-radius: 12px;
            box-shadow: 0 4px 20px var(--shadow-dark);
            margin-top: 140px;
            transition: .3s ease, background 0.3s ease;
        }

        .consultation-container:hover {
            box-shadow: 0 6px 28px var(--shadow-dark-hover);
        }

        .consultation-container h1 {
            margin-top: 0;
            font-size: 1.7rem;
            font-weight: 700;
            color: var(--text-primary);
            transition: color 0.3s ease;
        }

        .consultation-container p {
            color: var(--text-secondary);
            margin-bottom: 1.5rem;
            transition: color 0.3s ease;
        }

        .consultation-form {
            display: flex;
            flex-direction: column;
            gap: 1.2rem;
            width: 100%;
        }

        .consultation-form label {
            font-weight: 600;
            color: var(--text-primary);
            margin-bottom: .35rem;
            transition: color 0.3s ease;
        }

        .consultation-form input[type="text"],
        .consultation-form input[type="email"],
        .consultation-form input[type="password"],
        .consultation-form textarea {
            padding: .75rem 1rem;
            border: 1px solid var(--border-color);
            border-radius: 8px;
            width: 100%;
            font-size: 1rem;
            background: var(--bg-tertiary);
            color: var(--text-primary);
            box-sizing: border-box;
            transition: .2s ease, background 0.3s ease, color 0.3s ease, border-color 0.3s ease;
        }

        .consultation-form input:focus,
        .consultation-form textarea:focus {
            border-color: var(--accent-color);
            background: var(--bg-primary);
            box-shadow: 0 0 0 3px rgba(13,110,253,0.15);
            outline: none;
        }

        .consultation-form select.form-select-custom {
            padding: .75rem 1rem;
            border: 1px solid var(--border-color);
            border-radius: 8px;
            width: 100%;
            font-size: 1rem;
            background: var(--bg-tertiary);
            color: var(--text-primary);
            appearance: none;
            background-repeat: no-repeat;
            background-position: right 0.75rem center;
            background-size: 0.65rem auto;
            transition: .2s ease, background 0.3s ease, color 0.3s ease, border-color 0.3s ease;
        }

        .consultation-form select:focus {
            border-color: var(--accent-color);
            box-shadow: 0 0 0 3px rgba(13,110,253,0.15);
            outline: none;
        }

        .form-actions {
            display: flex;
            gap: 1rem;
            margin-top: 1rem;
        }

        .btn,
        .btn--muted {
            padding: .75rem 1.4rem;
            font-size: 1rem;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            border: none;
            transition: 0.25s ease;
            display: inline-block;
            box-shadow: 0 4px 10px rgba(0,0,0,0.12);
        }

        .btn {
            background: var(--accent-color);
            color: #fff;
            transition: background 0.3s ease;
        }

        .btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 16px var(--shadow-dark-hover);
            background: var(--accent-hover);
        }

        .btn:active {
            transform: translateY(2px);
            box-shadow:
                inset 3px 3px 7px var(--shadow-light),
                inset -3px -3px 7px var(--shadow-dark);
        }

        .btn--muted {
            background: #6c757d;
            color: #fff;
            text-decoration: none;
        }

        .btn--muted:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 16px var(--shadow-dark-hover);
            background: #5a6268;
        }

        .btn--muted:active {
            transform: translateY(2px);
            box-shadow:
                inset 3px 3px 7px var(--shadow-light),
                inset -3px -3px 7px var(--shadow-dark);
        }

        .error-message {
            display: none;
            color: var(--error-color);
            font-size: 0.8rem;
            margin-top: 0.1rem;
            padding: 0.5rem 0.2rem;
            background-color: transparent;
            border: none;
            border-radius: 4px;
            transition: color 0.3s ease;
        }

        .consultation-form input[style*="border-color: rgb(220, 53, 69)"] {
            border-color: var(--error-color) !important;
            background-color: var(--error-bg) !important;
        }

        .password-field-wrapper {
            position: relative;
            display: flex;
            align-items: center;
        }

        .password-field-wrapper input {
            flex: 1;
        }

        .toggle-password {
            position: absolute;
            right: 0.6rem;
            cursor: pointer;
            color: var(--text-muted);
            transition: color 0.2s;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .toggle-password:hover {
            color: var(--accent-color);
        }

        .toggle-password svg {
            display: block;
            width: 22px;
            height: 22px;
            line-height: 1;
        }

        .password-strength-container {
            margin-top: 0.5rem;
            margin-bottom: 1rem;
        }

        .password-strength-bar {
            height: 6px;
            background-color: #e0e0e0;
            border-radius: 3px;
            overflow: hidden;
            margin-bottom: 0.3rem;
        }

        .password-strength-fill {
            height: 100%;
            width: 0%;
            transition: width 0.3s ease, background-color 0.3s ease;
            background-color: #dc3545;
        }

        .password-strength-text {
            font-size: 0.85rem;
            font-weight: 500;
            color: #666;
            transition: color 0.3s ease;
        }

        @media (max-width: 640px) {
            .consultation-container { padding: 1rem; }
        }

        .check {
            cursor: pointer;
            position: relative;
            margin: auto;
            width: 18px;
            height: 18px;
            -webkit-tap-highlight-color: transparent;
            transform: translate3d(0, 0, 0);
        }

        .check:before {
            content: "";
            position: absolute;
            top: -15px;
            left: -15px;
            width: 48px;
            height: 48px;
            border-radius: 50%;
            opacity: 0;
            transition: opacity 0.2s ease;
        }

        .check svg {
            position: relative;
            z-index: 1;
            fill: none;
            stroke-linecap: round;
            stroke-linejoin: round;
            stroke: #c8ccd4;
            stroke-width: 1.5;
            transform: translate3d(0, 0, 0);
            transition: all 0.2s ease;
        }

        .check svg path {
            stroke-dasharray: 60;
            stroke-dashoffset: 0;
        }

        .check svg polyline {
            stroke-dasharray: 22;
            stroke-dashoffset: 66;
        }

        .check:hover:before {
            opacity: 1;
        }

        .check:hover svg {
            stroke: var(--accent-color, #3662c0ff);
        }

        #enable_password_checkbox:checked + .check svg {
            stroke: var(--accent-color, #3662c0ff);
        }

        #enable_password_checkbox:checked + .check svg path {
            stroke-dashoffset: 60;
            transition: all 0.3s linear;
        }

        #enable_password_checkbox:checked + .check svg polyline {
            stroke-dashoffset: 42;
            transition: all 0.2s linear;
            transition-delay: 0.15s;
        }
    </style>

<div class="container consultation-container" data-aos="zoom-in" data-aos-duration="500ms">
        <h1>Modifier un utilisateur</h1>
        <p>Modifiez les champs ci-dessous puis cliquez sur <strong>Enregistrer</strong>.</p>

        {{ form_start(form) }}
            <div class="consultation-form">
                <div 
                    {% if 'ROLE_USER' not in user.roles %}
                        style="display: none;"
                    {% endif %}
                > 
                    <div>
                        {{ form_label(form.CODUTE) }}
                        {{ form_widget(form.CODUTE, {
                            'attr': {
                                'id': 'user_matricule',
                                'readonly': 'readonly'
                            }
                        }) }}
                    </div>

                    <div>
                        {{ form_label(form.LIBUTE) }}
                        {{ form_widget(form.LIBUTE, {
                            'attr': {
                                'readonly': 'readonly'
                            }
                        }) }}
                    </div>

                    <div>
                        {{ form_label(form.LOCAL) }}
                        {{ form_widget(form.LOCAL, {
                            'attr': {
                                'readonly': 'readonly'
                            }
                        }) }}
                    </div>
                </div>
                <div
                    {% if 'ROLE_USER' in user.roles %}
                        style="display: none;"
                    {% endif %}
                >
                    <div>
                        {{ form_label(form.matricule) }}
                        {{ form_widget(form.matricule, {
                            'attr': {
                                'id': 'user_matricule',
                                'readonly': 'readonly'
                            }
                        }) }}
                    </div>
                
                    <div>
                        {{ form_label(form.title) }}
                        {{ form_widget(form.title, {
                            'attr': {
                                'readonly': 'readonly'
                            }
                        }) }}
                    </div>

                    <div>
                        {{ form_label(form.name) }}
                        {{ form_widget(form.name, {
                            'attr': {
                                'readonly': 'readonly'
                            }
                        }) }}
                    </div>
                </div>
                
                <div>
                    {{ form_label(form.username) }}
                    {{ form_widget(form.username, {
                        'attr': {
                            'id': 'user_username'
                        }
                    }) }}
                </div>
                
                <div>
                    <div style="display:flex; align-items:center; gap:0.5rem;">
                        <div class="container" style="margin-top: .1rem;">
                            <input type="checkbox" id="enable_password_checkbox" style="display: none;">
                            <label for="enable_password_checkbox" class="check">
                                <svg width="18px" height="18px" viewBox="0 0 18 18">
                                    <path d="M 1 9 L 1 9 c 0 -5 3 -8 8 -8 L 9 1 C 14 1 17 5 17 9 L 17 9 c 0 4 -4 8 -8 8 L 9 17 C 5 17 1 14 1 9 L 1 9 Z"></path>
                                    <polyline points="1 9 7 14 15 4"></polyline>
                                </svg>
                            </label>
                        </div>
                        {{ form_label(form.plainPassword) }}
                    </div>
                    
                    <div class="password-field-wrapper">
                        {{ form_widget(form.plainPassword, {
                            'attr': {
                                'id': 'user_plainPassword',
                                'autocomplete': 'new-password',
                                'style': 'padding-right: 2.5rem;'
                            }
                        }) }}
                        <span class="toggle-password" onclick="togglePassword()" id="togglePassword">
                            <svg id="eyeIcon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="22" height="22">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                    d="M13.875 18.825A10.05 10.05 0 0112 19c-5.523 0-10-4-10-7 
                                    0-1.21.63-2.634 1.72-3.93m3.522-2.83A9.978 9.978 0 0112 5c5.523 0 10 4 10 7 
                                    0 1.387-.63 2.864-1.72 4.17M15 12a3 3 0 11-6 0 3 3 0 016 0zm5 9L4 3"/>
                            </svg>
                        </span>
                    </div>
                    <div class="password-strength-container">
                        <div class="password-strength-bar">
                            <div class="password-strength-fill" id="passwordStrengthFill"></div>
                        </div>
                        <div class="password-strength-text" id="passwordStrengthText"></div>
                    </div>
                </div>
                {{ form_row(form.roles, {
                    'attr': {
                        'title':'Le rôle d\'un utilisateur ne peut être changé'
                    }
                }) }}

                <div class="form-actions">
                    <button class="btn" type="submit">Enregistrer</button>
                    <a href="{{ path('app_list_user') }}" class="btn--muted">Annuler</a>
                </div>
            </div>

        {{ form_end(form) }}
    </div>

    {% include '_partial/footer.html.twig' %}

<script>
    function calculatePasswordStrength(password) {
        let strength = 0;
        const checks = {
            length: password.length >= 8,
            uppercase: /[A-Z]/.test(password),
            lowercase: /[a-z]/.test(password),
            numbers: /[0-9]/.test(password),
            special: /[!@#$%^&*()_+\-=\[\]{};':"\\|,.<>\/?]/.test(password)
        };

        Object.values(checks).forEach(check => {
            if (check) strength += 20;
        });

        if (password.length >= 12) strength = Math.min(100, strength + 10);
        if (password.length >= 16) strength = Math.min(100, strength + 10);

        return { strength, checks };
    }

    function updatePasswordStrength() {
        const passwordInput = document.getElementById('user_plainPassword');
        if (!passwordInput) return;

        const password = passwordInput.value;
        const { strength } = calculatePasswordStrength(password);
        const fill = document.getElementById('passwordStrengthFill');
        const text = document.getElementById('passwordStrengthText');

        if (!fill || !text) return;

        fill.style.width = strength + '%';

        const labels = {
            0: '',
            20: 'Très faible',
            40: 'Faible',
            60: 'Moyen',
            80: 'Fort',
            100: 'Très fort'
        };

        const colors = {
            0: '#e0e0e0',
            20: '#dc3545',
            40: '#fd7e14',
            60: '#ffc107',
            80: '#28a745',
            100: '#20c997'
        };

        let labelKey = 0;
        if (strength > 0) labelKey = Math.ceil(strength / 20) * 20;

        text.textContent = labels[labelKey];
        fill.style.backgroundColor = colors[labelKey];
        text.style.color = colors[labelKey];
    }

    function togglePassword() {
        const input = document.getElementById("user_plainPassword");
        const icon = document.getElementById("eyeIcon");
        if (!input || !icon) return;

        input.type = input.type === "password" ? "text" : "password";
    }

    function initPasswordFeature() {
        const checkbox = document.getElementById('enable_password_checkbox');
        const passwordInput = document.getElementById('user_plainPassword');
        const toggleIcon = document.getElementById('togglePassword');

        if (!checkbox || !passwordInput || !toggleIcon) return;

        passwordInput.disabled = !checkbox.checked;
        toggleIcon.style.display = checkbox.checked ? 'block' : 'none';

        if (!checkbox.checked) {
            passwordInput.value = '';
            passwordInput.type = 'password';
            document.getElementById('passwordStrengthFill').style.width = '0%';
            document.getElementById('passwordStrengthText').textContent = '';
        }

        checkbox.onchange = function () {
            if (this.checked) {
                passwordInput.disabled = false;
                passwordInput.focus();
                toggleIcon.style.display = 'block';
                updatePasswordStrength();
            } else {
                passwordInput.disabled = true;
                passwordInput.value = '';
                passwordInput.type = 'password';
                toggleIcon.style.display = 'none';
                document.getElementById('passwordStrengthFill').style.width = '0%';
                document.getElementById('passwordStrengthText').textContent = '';
            }
        };

        passwordInput.oninput = updatePasswordStrength;
    }

    document.addEventListener('DOMContentLoaded', initPasswordFeature);
    document.addEventListener('turbo:load', initPasswordFeature);

    AOS.init();
</script>

{% endblock %}
