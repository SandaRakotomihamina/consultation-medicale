{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
    {% include "_partial/nav.html.twig" %}
    {% include '_partial/subNav.html.twig' with {'search_type': 'users'} %}

<style>
    .feed {
        display: block;
        margin-top: 2rem;
        text-align: left;
    }

    .flash {
        animation: popupIn 0.4s ease-out forwards;
        transform-origin: center;
        border-radius: 8px;
        position: fixed;
        bottom: 20px;
        left: 10px;
        box-sizing: border-box;
        box-shadow:
            3px 3px 6px var(--shadow-dark),
            -3px -3px 6px var(--shadow-light);
        font-size: 16px;
        z-index: 1100;
        text-align: center;
        max-width: 90vw;
        padding: 0.8rem 1.2rem;
        transition: box-shadow 0.3s ease;
    }

    .flash.fade-out {
        animation: popupOut 0.5s ease-out forwards;
    }

    @keyframes popupIn {
        from { transform: scale(0.85) translateX(-50px); opacity: 0; }
        to   { transform: scale(1) translateX(0); opacity: 1; }
    }

    @keyframes popupOut {
        from { transform: scale(1) translateX(0); opacity: 1; }
        to   { transform: scale(0.85) translateX(-50px); opacity: 0; }
    }

    .flash:hover {
        transform: translateX(0) translateY(-2px);
        transition: all .25s ease;
        box-shadow:
            3px 3px 6px var(--shadow-dark),
            -3px -3px 6px var(--shadow-light);
    }


    @media (max-width: 1000px) {
        h1.page-title {
            margin-top: 18rem !important;
        }
    }

    @media (max-width: 480px) {
        h1.page-title {
            font-size: 1.5rem !important;
        }
    }
    @media (max-width: 450px) {
        h1.page-title {
            margin-top: 15rem !important;
        }
    }
</style>


{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="flash flash-{{ label }}">
            <span>{{ message }}</span>
        </div>
    {% endfor %}
{% endfor %}


<h1 class="page-title" style="text-align:left; margin:13rem 0 2rem 0; font-size:1.8rem; transition:.3s ease-in-out; color: var(--text-primary);">Liste des utilisateurs</h1>

<div class="feed">
    {% for user in users %}
        {{ include('main/user/_card.html.twig') }}
