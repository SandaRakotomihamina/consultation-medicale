{% extends 'base.html.twig' %}

{% block title %}Erreur {{ status_code }}{% endblock %}

{% block body %}
{% include '_partial/nav.html.twig' %}
<div style="text-align: center; padding: 50px; margin-top: 120px;">
    <h1>Erreur {{ status_code }}</h1>
    {% if status_code == 404 %}
        <p>La page que vous cherchez n’existe pas.</p>
    {% elseif status_code == 403 %}
        <p>Vous n’avez pas la permission d’accéder à cette page.</p>
    {% else %}
        <p>Une erreur est survenue.</p>
    {% endif %}
    <a href="{{ path('app_home') }}">Retour à l'accueil</a>
</div>
{% include '_partial/footer.html.twig' %}
{% endblock %}
