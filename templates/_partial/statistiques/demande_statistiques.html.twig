        width: 16px;
        height: 16px;
    }

    @media (max-width: 480px) {
        .demande-stat-card {
            padding: 1.25rem;
            flex-direction: column;
            align-items: flex-start;
        }
        .demande-stats-grid {
            grid-template-columns: 1fr;
        }
    }
