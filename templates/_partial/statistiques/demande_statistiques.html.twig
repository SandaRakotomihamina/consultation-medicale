<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jspdf@2.5.1/dist/jspdf.umd.min.js"></script>
<script>
    (function () {
        const textColor = getComputedStyle(document.documentElement).getPropertyValue('--text-secondary') || '#888';

        function attachSavePdf() {
            const buttons = document.querySelectorAll('.save-pdf-btn');
            buttons.forEach((btn) => {
                if (btn.dataset.pdfBound === 'true') return;
                btn.addEventListener('click', () => {
                    const targetId = btn.dataset.target;
                    const title = btn.dataset.title || 'Graphique';
                    const canvas = document.getElementById(targetId);
                    if (!canvas || !window.jspdf) return;

                    const imgData = canvas.toDataURL('image/png', 1.0);
                    const orientation = canvas.width >= canvas.height ? 'l' : 'p';
                    const margin = 15; // mm
                    const pdf = new window.jspdf.jsPDF({
                        orientation,
                        unit: 'mm',
                        format: 'a4'
                    });

                    const pageWidth = pdf.internal.pageSize.getWidth();
                    const pageHeight = pdf.internal.pageSize.getHeight();
                    pdf.setFontSize(16);
                    pdf.text(title, margin, margin + 2);

                    const imgProps = pdf.getImageProperties(imgData);
                    const maxWidth = pageWidth - margin * 2;
                    const maxHeight = pageHeight - (margin * 3);
                    const ratio = Math.min(maxWidth / imgProps.width, maxHeight / imgProps.height);
                    const imgWidth = imgProps.width * ratio;
                    const imgHeight = imgProps.height * ratio;
                    const x = (pageWidth - imgWidth) / 2;
                    const y = margin + 8;
                    pdf.addImage(imgData, 'PNG', x, y, imgWidth, imgHeight);

                    const defaultName = (title || 'statistiques') + '.pdf';
                    const fileName = prompt('Nom du fichier PDF ?', defaultName) || defaultName;
                    pdf.save(fileName.endsWith('.pdf') ? fileName : fileName + '.pdf');
                });
                btn.dataset.pdfBound = 'true';
            });
        }

        const ctx = document.getElementById('demandesChart');
        if (!ctx) return;

        const labels = {{ demandesChartLabels|default([])|json_encode|raw }};
        const data = {{ demandesChartData|default([])|json_encode|raw }};
        const demandesChartKeys = {{ demandesChartKeys|default([])|json_encode|raw }};

        // helper modal & fetch (same as consultations page)
        function createConsultationsModal(title, items) {
            const existing = document.getElementById('consultations-modal');
            if (existing) existing.remove();
            const overlay = document.createElement('div');
            overlay.id = 'consultations-modal';
            overlay.style.position = 'fixed'; overlay.style.inset = '0'; overlay.style.background = 'rgba(0,0,0,0.45)'; overlay.style.display = 'flex'; overlay.style.alignItems = 'center'; overlay.style.justifyContent = 'center'; overlay.style.zIndex = '9999';
            overlay.addEventListener('click', (e) => { if (e.target === overlay) overlay.remove(); });
            const panel = document.createElement('div');
            (function applySafeColors(p) {
                const bgRaw = getComputedStyle(document.documentElement).getPropertyValue('--bg-tertiary') || '#fff';
                const bg = bgRaw.trim() || '#fff';
                const parse = (c) => {
                    c = c.trim();
                    if (!c) return null;
                    if (c.startsWith('rgb')) {
                        const nums = c.match(/rgba?\(([^)]+)\)/)[1].split(',').map(s=>parseFloat(s));
                        return {r: nums[0], g: nums[1], b: nums[2]};
                    }
                    if (c[0] === '#') {
                        const hex = c.slice(1);
                        if (hex.length === 3) {
                            return {r: parseInt(hex[0]+hex[0],16), g: parseInt(hex[1]+hex[1],16), b: parseInt(hex[2]+hex[2],16)};
                        }
                        return {r: parseInt(hex.slice(0,2),16), g: parseInt(hex.slice(2,4),16), b: parseInt(hex.slice(4,6),16)};
                    }
                    return null;
                };
                const rgb = parse(bg);
                let finalText = (getComputedStyle(document.documentElement).getPropertyValue('--text-primary') || '#000').trim() || '#000';
                if (rgb) {
                    const r = rgb.r/255, g = rgb.g/255, b = rgb.b/255;
                    const L = 0.2126*(r<=0.03928 ? r/12.92 : Math.pow((r+0.055)/1.055,2.4))
                            + 0.7152*(g<=0.03928 ? g/12.92 : Math.pow((g+0.055)/1.055,2.4))
                            + 0.0722*(b<=0.03928 ? b/12.92 : Math.pow((b+0.055)/1.055,2.4));
                    finalText = (L > 0.6) ? '#111' : '#fff';
                }
                p.style.background = bg;
                p.style.color = finalText;
            })(panel);
            panel.style.borderRadius = '12px'; panel.style.padding = '1rem'; panel.style.maxWidth = '900px'; panel.style.width = 'calc(100% - 40px)'; panel.style.maxHeight = '80vh'; panel.style.overflow = 'auto'; panel.style.position = 'relative';
            const h = document.createElement('h3'); h.textContent = title || 'Demandes'; h.style.marginTop = '0'; panel.appendChild(h);
            const close = document.createElement('button'); close.textContent = '✕'; close.style.position = 'absolute'; close.style.top = '10px'; close.style.right = '12px'; close.style.border = 'none'; close.style.background = 'transparent'; close.style.fontSize = '1.2rem'; close.style.cursor = 'pointer'; close.addEventListener('click', () => overlay.remove()); panel.appendChild(close);
            if (!items || !items.length) { const p = document.createElement('p'); p.textContent = 'Aucune consultation trouvée.'; panel.appendChild(p); } else {
                const table = document.createElement('table'); table.style.width = '100%'; table.style.borderCollapse = 'collapse'; table.style.marginTop = '0.5rem';
                const thead = document.createElement('thead'); thead.innerHTML = '<tr style="text-align:left; border-bottom:1px solid rgba(0,0,0,0.06);">\n<th>Date</th><th>Nom</th><th>Grade</th><th>Matricule</th><th>Motif</th><th>Repos</th>\n</tr>'; table.appendChild(thead);
                const tbody = document.createElement('tbody'); items.forEach(it => { const tr = document.createElement('tr'); tr.style.borderBottom = '1px solid rgba(0,0,0,0.04)'; tr.innerHTML = `<td style="padding:.45rem .5rem">${it.date||''}</td><td style="padding:.45rem .5rem">${it.nom||''}</td><td style="padding:.45rem .5rem">${it.grade||''}</td><td style="padding:.45rem .5rem">${it.matricule||''}</td><td style="padding:.45rem .5rem">${(it.motif||'').slice(0,80)}</td><td style="padding:.45rem .5rem">${it.repos||''}</td>`; tbody.appendChild(tr); }); table.appendChild(tbody); panel.appendChild(table);
            }
            overlay.appendChild(panel); document.body.appendChild(overlay);
            const escHandler = (e) => { if (e.key === 'Escape') { overlay.remove(); document.removeEventListener('keydown', escHandler); } };
            document.addEventListener('keydown', escHandler);
        }

        function createConsultationsHtmlModal(title, html) {
            const existing = document.getElementById('consultations-modal'); if (existing) existing.remove();
            const overlay = document.createElement('div'); overlay.id = 'consultations-modal'; overlay.style.position = 'fixed'; overlay.style.inset = '0'; overlay.style.background = 'rgba(0,0,0,0.45)'; overlay.style.display = 'flex'; overlay.style.alignItems = 'center'; overlay.style.justifyContent = 'center'; overlay.style.zIndex = '9999'; overlay.addEventListener('click', (e) => { if (e.target === overlay) overlay.remove(); });
            const panel = document.createElement('div');
            (function applySafeColors(p) {
                const bgRaw = getComputedStyle(document.documentElement).getPropertyValue('--bg-tertiary') || '#fff';
                const bg = bgRaw.trim() || '#fff';
                const parse = (c) => {
                    c = c.trim();
                    if (!c) return null;
                    if (c.startsWith('rgb')) {
                        const nums = c.match(/rgba?\(([^)]+)\)/)[1].split(',').map(s=>parseFloat(s));
                        return {r: nums[0], g: nums[1], b: nums[2]};
                    }
                    if (c[0] === '#') {
                        const hex = c.slice(1);
                        if (hex.length === 3) {
                            return {r: parseInt(hex[0]+hex[0],16), g: parseInt(hex[1]+hex[1],16), b: parseInt(hex[2]+hex[2],16)};
                        }
                        return {r: parseInt(hex.slice(0,2),16), g: parseInt(hex.slice(2,4),16), b: parseInt(hex.slice(4,6),16)};
                    }
                    return null;
                };
                const rgb = parse(bg);
                let finalText = (getComputedStyle(document.documentElement).getPropertyValue('--text-primary') || '#000').trim() || '#000';
                if (rgb) {
                    const r = rgb.r/255, g = rgb.g/255, b = rgb.b/255;
                    const L = 0.2126*(r<=0.03928 ? r/12.92 : Math.pow((r+0.055)/1.055,2.4))
                            + 0.7152*(g<=0.03928 ? g/12.92 : Math.pow((g+0.055)/1.055,2.4))
                            + 0.0722*(b<=0.03928 ? b/12.92 : Math.pow((b+0.055)/1.055,2.4));
                    finalText = (L > 0.6) ? '#111' : '#fff';
                }
                p.style.background = bg;
                p.style.color = finalText;
            })(panel);
            panel.style.borderRadius = '12px'; panel.style.padding = '1rem'; panel.style.maxWidth = '1100px'; panel.style.width = 'calc(100% - 80px)'; panel.style.maxHeight = '80vh'; panel.style.overflow = 'auto'; panel.style.position = 'relative';
            const header = document.createElement('div');
            header.style.display = 'flex'; header.style.justifyContent = 'space-between'; header.style.alignItems = 'center';
            header.style.position = 'sticky'; header.style.top = '0'; header.style.zIndex = '12';
            header.style.background = getComputedStyle(document.documentElement).getPropertyValue('--bg-tertiary') || '#fff';
            header.style.padding = '0.45rem 0.5rem'; header.style.borderBottom = '1px solid rgba(0,0,0,0.06)';

            const h = document.createElement('h3'); h.textContent = title || 'Demandes'; h.style.marginTop = '0'; header.appendChild(h);
            const close = document.createElement('button'); close.textContent = '✕'; close.style.border = 'none'; close.style.background = 'transparent'; close.style.fontSize = '1.2rem'; close.style.cursor = 'pointer'; close.addEventListener('click', () => overlay.remove()); header.appendChild(close);
            panel.appendChild(header);
            const contentWrapper = document.createElement('div'); contentWrapper.innerHTML = html; contentWrapper.style.marginTop = '0.5rem'; panel.appendChild(contentWrapper);
            overlay.appendChild(panel); document.body.appendChild(overlay); const escHandler = (e) => { if (e.key === 'Escape') { overlay.remove(); document.removeEventListener('keydown', escHandler); } }; document.addEventListener('keydown', escHandler);
        }
        function fetchAndShow(type, value, title) {
            const fragUrl = '/statistique/demandes/fragment?type=' + encodeURIComponent(type) + '&value=' + encodeURIComponent(value);
            fetch(fragUrl, { credentials: 'same-origin' })
                .then(r => { if (!r.ok) throw new Error('No HTML'); return r.text(); })
                .then(html => { createConsultationsHtmlModal(title, html); })
                .catch(() => {
                    // fallback
                    const url = '/statistique/demandes/json?type=' + encodeURIComponent(type) + '&value=' + encodeURIComponent(value);
                    fetch(url, { credentials: 'same-origin' }).then(r => r.json()).then(json => { if (!json || !json.success) { alert('Erreur lors de la récupération des demandes.'); return; } createConsultationsModal(title, json.data); }).catch(err => { console.error(err); alert('Erreur lors de la récupération des demandes.'); });
                });
        }

        if (!labels.length) {
            ctx.insertAdjacentHTML('beforebegin',
                '<p style="color: ' + textColor + '; font-size: .9rem;">Aucune donnée disponible pour les 30 derniers jours.</p>'
            );
            ctx.style.display = 'none';
            return;
        }

        const chartDemandes = new Chart(ctx, {
            type: 'line',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Demandes par jour',
                    data: data,
                    borderColor: '#f1c40f',
                    backgroundColor: 'rgba(241, 196, 15, 0.15)',
                    tension: 0.3,
                    fill: true,
                    pointRadius: 3,
                    pointHoverRadius: 5,
                    borderWidth: 2
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    x: {
                        ticks: {
                            color: textColor
                        },
                        grid: {
                            display: false
                        }
                    },
                    y: {
                        beginAtZero: true,
                        ticks: {
                            stepSize: 1,
                            color: textColor
                        },
                        grid: {
                            color: 'rgba(0,0,0,0.05)'
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        backgroundColor: 'rgba(0,0,0,0.8)'
                    }
                }
            }
        });

        ctx.addEventListener('click', function (evt) {
            const points = chartDemandes.getElementsAtEventForMode(evt, 'nearest', { intersect: true }, true);
            if (!points || !points.length) return;
            const idx = points[0].index;
            const key = (demandesChartKeys || [])[idx];
            if (key) fetchAndShow('day', key, 'Demandes du ' + key);
        });
        attachSavePdf();
        AOS.init();
    })();
</script>
