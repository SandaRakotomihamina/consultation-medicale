<script>
    (function () {
        const textColor = getComputedStyle(document.documentElement).getPropertyValue('--text-secondary') || '#888';
        const primaryColor = getComputedStyle(document.documentElement).getPropertyValue('--text-primary') || '#333';

        function attachSavePdf() {
            const buttons = document.querySelectorAll('.save-pdf-btn');
            buttons.forEach((btn) => {
                if (btn.dataset.pdfBound === 'true') return;
                btn.addEventListener('click', () => {
                    const targetId = btn.dataset.target;
                    const title = btn.dataset.title || 'Graphique';
                    const canvas = document.getElementById(targetId);
                    if (!canvas || !window.jspdf) return;

                    const imgData = canvas.toDataURL('image/png', 1.0);
                    const orientation = canvas.width >= canvas.height ? 'l' : 'p';
                    const margin = 15; // en mm
                    const pdf = new window.jspdf.jsPDF({
                        orientation,
                        unit: 'mm',
                        format: 'a4'
                    });

                    const pageWidth = pdf.internal.pageSize.getWidth();
                    const pageHeight = pdf.internal.pageSize.getHeight();
                    pdf.setFontSize(16);
                    pdf.text(title, margin, margin + 2);

                    const imgProps = pdf.getImageProperties(imgData);
                    const maxWidth = pageWidth - margin * 2;
                    const maxHeight = pageHeight - (margin * 3); // garder de l'espace sous le titre
                    const ratio = Math.min(maxWidth / imgProps.width, maxHeight / imgProps.height);
                    const imgWidth = imgProps.width * ratio;
                    const imgHeight = imgProps.height * ratio;
                    const x = (pageWidth - imgWidth) / 2;
                    const y = margin + 8;
                    pdf.addImage(imgData, 'PNG', x, y, imgWidth, imgHeight);

                    const defaultName = (title || 'statistiques') + '.pdf';
                    const fileName = prompt('Nom du fichier PDF ?', defaultName) || defaultName;
                    pdf.save(fileName.endsWith('.pdf') ? fileName : fileName + '.pdf');
                });
                btn.dataset.pdfBound = 'true';
            });
        }

        // ========== GRAPHIQUE 30 JOURS ==========
        const ctx30 = document.getElementById('consultationsChart');
        if (ctx30) {
            const labels = {{ consultationsChartLabels|default([])|json_encode|raw }};
            const data = {{ consultationsChartData|default([])|json_encode|raw }};

            if (labels.length) {
                new Chart(ctx30, {
                    type: 'line',
                    data: {
                        labels: labels,
                        datasets: [{
                            label: 'Consultations par jour',
                            data: data,
                            borderColor: '#3498db',
                            backgroundColor: 'rgba(52, 152, 219, 0.15)',
                            tension: 0.3,
                            fill: true,
                            pointRadius: 3,
                            pointHoverRadius: 5,
                            borderWidth: 2
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            x: {
                                ticks: { color: textColor },
                                grid: { display: false }
                            },
                            y: {
                                beginAtZero: true,
                                ticks: { stepSize: 1, color: textColor },
                                grid: { color: 'rgba(0,0,0,0.05)' }
                            }
                        },
                        plugins: {
                            legend: { display: false },
                            tooltip: { backgroundColor: 'rgba(0,0,0,0.8)' }
                        }
                    }
                });
            } else {
                ctx30.insertAdjacentHTML('beforebegin',
                    '<p style="color: ' + textColor + '; font-size: .9rem;">Aucune donnée disponible pour les 30 derniers jours.</p>'
                );
                ctx30.style.display = 'none';
            }
        }

        // ========== GRAPHIQUE MENSUEL ==========
        const ctxMonth = document.getElementById('monthlyChart');
        if (ctxMonth) {
            const monthLabels = {{ monthLabels|default([])|json_encode|raw }};
            const monthData = {{ monthData|default([])|json_encode|raw }};

            if (monthLabels.length) {
                new Chart(ctxMonth, {
                    type: 'bar',
                    data: {
                        labels: monthLabels,
                        datasets: [{
                            label: 'Consultations',
                            data: monthData,
                            backgroundColor: 'rgba(52, 152, 219, 0.6)',
                            borderColor: '#3498db',
                            borderWidth: 1
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            x: {
                                ticks: { color: textColor },
                                grid: { display: false }
                            },
                            y: {
                                beginAtZero: true,
                                ticks: { stepSize: 1, color: textColor },
                                grid: { color: 'rgba(0,0,0,0.05)' }
                            }
                        },
                        plugins: {
                            legend: { display: false },
                            tooltip: { backgroundColor: 'rgba(0,0,0,0.8)' }
                        }
                    }
                });
            }
        }

        // ========== GRAPHIQUE REPOS (CAMEMBERT) ==========
        const ctxRepos = document.getElementById('reposChart');
        if (ctxRepos) {
            const repos24h = {{ repos24h ?? 0 }};
            const repos48h = {{ repos48h ?? 0 }};
            const repos72h = {{ repos72h ?? 0 }};

            if (repos24h > 0 || repos48h > 0 || repos72h > 0) {
                new Chart(ctxRepos, {
                    type: 'doughnut',
                    data: {
                        labels: ['24h', '48h', '72h'],
                        datasets: [{
                            data: [repos24h, repos48h, repos72h],
                            backgroundColor: [
                                'rgba(241, 196, 15, 0.8)',
                                'rgba(230, 126, 34, 0.8)',
                                'rgba(231, 76, 60, 0.8)'
                            ],
                            borderColor: [
                                '#f1c40f',
                                '#e67e22',
                                '#e74c3c'
                            ],
                            borderWidth: 2
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                position: 'bottom',
                                labels: { color: textColor, padding: 15 }
                            },
                            tooltip: { backgroundColor: 'rgba(0,0,0,0.8)' }
                        }
                    }
                });
            }
        }

        // ========== GRAPHIQUE PAR GRADE ==========
        const ctxGrades = document.getElementById('gradesChart');
        if (ctxGrades) {
            const gradesLabels = {{ gradesLabels|default([])|json_encode|raw }};
            const gradesData = {{ gradesData|default([])|json_encode|raw }};

            if (gradesLabels.length) {
                new Chart(ctxGrades, {
                    type: 'bar',
                    data: {
                        labels: gradesLabels,
                        datasets: [{
                            label: 'Consultations',
                            data: gradesData,
                            backgroundColor: 'rgba(155, 89, 182, 0.6)',
                            borderColor: '#9b59b6',
                            borderWidth: 1
                        }]
                    },
                    options: {
                        indexAxis: 'y',
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            x: {
                                beginAtZero: true,
                                ticks: { stepSize: 1, color: textColor },
                                grid: { color: 'rgba(0,0,0,0.05)' }
                            },
                            y: {
                                ticks: { color: textColor },
                                grid: { display: false }
                            }
                        },
                        plugins: {
                            legend: { display: false },
                            tooltip: { backgroundColor: 'rgba(0,0,0,0.8)' }
                        }
                    }
                });
            }
        }

        // ========== GRAPHIQUE HEBDOMADAIRE ==========
        const ctxWeekday = document.getElementById('weekdayChart');
        if (ctxWeekday) {
            const weekdayLabels = {{ weekdayLabels|default([])|json_encode|raw }};
            const weekdayData = {{ weekdayData|default([])|json_encode|raw }};

            if (weekdayLabels.length) {
                new Chart(ctxWeekday, {
                    type: 'bar',
                    data: {
                        labels: weekdayLabels,
                        datasets: [{
                            label: 'Consultations',
                            data: weekdayData,
                            backgroundColor: 'rgba(46, 204, 113, 0.6)',
                            borderColor: '#2ecc71',
                            borderWidth: 1
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            x: {
                                ticks: { color: textColor },
                                grid: { display: false }
                            },
                            y: {
                                beginAtZero: true,
                                ticks: { stepSize: 1, color: textColor },
                                grid: { color: 'rgba(0,0,0,0.05)' }
                            }
                        },
                        plugins: {
                            legend: { display: false },
                            tooltip: { backgroundColor: 'rgba(0,0,0,0.8)' }
                        }
                    }
                });
            }
        }

        // ========== GRAPHIQUE AVEC/SANS REPOS ==========
        const ctxReposRepartition = document.getElementById('reposRepartitionChart');
        if (ctxReposRepartition) {
            const avecRepos = {{ totalAvecRepos ?? 0 }};
            const sansRepos = {{ totalSansRepos ?? 0 }};

            if (avecRepos > 0 || sansRepos > 0) {
                new Chart(ctxReposRepartition, {
                    type: 'pie',
                    data: {
                        labels: ['Avec repos', 'Sans repos'],
                        datasets: [{
                            data: [avecRepos, sansRepos],
                            backgroundColor: [
                                'rgba(231, 76, 60, 0.8)',
                                'rgba(52, 152, 219, 0.8)'
                            ],
                            borderColor: [
                                '#e74c3c',
                                '#3498db'
                            ],
                            borderWidth: 2
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                position: 'bottom',
                                labels: { color: textColor, padding: 15 }
                            },
                            tooltip: {
                                backgroundColor: 'rgba(0,0,0,0.8)',
                                callbacks: {
                                    label: function(context) {
                                        const label = context.label || '';
                                        const value = context.parsed || 0;
                                        const total = context.dataset.data.reduce((a, b) => a + b, 0);
                                        const percentage = total > 0 ? ((value / total) * 100).toFixed(1) : 0;
                                        return label + ': ' + value + ' (' + percentage + '%)';
                                    }
                                }
                            }
                        }
                    }
                });
            }
        }

        // ========== NOUVEAUX GRAPHIQUES: ADRESSE, PATC, EXEMPTIONS ACTIVES ==========
        const ctxAdresse = document.getElementById('adresseChart');
        if (ctxAdresse) {
            const adresseLabels = {{ adresseLabels|default([])|json_encode|raw }};
            const adresseData = {{ adresseData|default([])|json_encode|raw }};

            // palette de couleurs réutilisable
            const palette = ['#3498db', '#e74c3c', '#f1c40f', '#9b59b6', '#2ecc71', '#e67e22', '#1abc9c', '#34495e', '#7f8c8d'];
            function hexToRgba(hex, alpha) {
                const m = hex.replace('#','');
                const bigint = parseInt(m, 16);
                const r = (bigint >> 16) & 255;
                const g = (bigint >> 8) & 255;
                const b = bigint & 255;
                return `rgba(${r}, ${g}, ${b}, ${alpha})`;
            }

            if (adresseLabels.length) {
                const bgColors = adresseLabels.map((_, i) => hexToRgba(palette[i % palette.length], 0.6));
