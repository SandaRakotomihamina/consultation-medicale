                contentWrapper.id = 'consultations-modal-content';
                contentWrapper.innerHTML = html;
                contentWrapper.style.marginTop = '0.5rem';
                panel.appendChild(contentWrapper);

                // Ajouter indicateur de chargement
                const loadingIndicator = document.createElement('div');
                loadingIndicator.id = 'consultations-modal-loading';
                loadingIndicator.style.display = 'none';
                loadingIndicator.style.textAlign = 'center';
                loadingIndicator.style.padding = '1rem';
                loadingIndicator.style.color = 'var(--text-secondary)';
