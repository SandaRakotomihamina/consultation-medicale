                    .then(r => { if (!r.ok) throw new Error('No HTML'); return r.text(); })
                    .then(html => { createConsultationsHtmlModal(title, html); })
                    .catch(() => {
                        const url = '/statistique/consultations/json?type=' + encodeURIComponent(type) + '&value=' + encodeURIComponent(value);
