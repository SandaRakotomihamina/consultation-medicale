    <div class="user-stat-card">
        <div class="user-stat-label">Nombre total d'utilisateurs</div>
        <div class="user-stat-value total-users">{{ totalUsers ?? 0 }}</div>
    </div>

    <div class="user-stat-card">
        <div class="user-stat-label">Super administrateurs</div>
        <div class="user-stat-value">
            {{ rolesCount.ROLE_SUPER_ADMIN ?? 0 }}
