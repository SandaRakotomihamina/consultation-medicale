<style>
    .user-stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 1.5rem;
        margin-bottom: 3rem;
    }

    .user-stat-card {
        background: var(--bg-tertiary);
        border-radius: 16px;
        padding: 1.25rem 1.5rem;
        box-shadow:
            4px 4px 12px var(--shadow-dark),
            -4px -4px 12px var(--shadow-light);
        color: var(--text-primary);
        transition: transform .2s ease, box-shadow .2s ease, background 0.3s ease, color 0.3s ease;
    }

    .user-stat-card:hover {
        transform: translateY(-4px);
        box-shadow:
            6px 6px 14px var(--shadow-dark-hover),
            -6px -6px 14px var(--shadow-light);
    }

    .user-stat-label {
        font-size: .9rem;
        color: var(--text-secondary);
        margin-bottom: .35rem;
    }

    .user-stat-value {
        font-size: 1.6rem;
        font-weight: 700;
    }

    .total-users {
        font-size: 4rem;
        font-weight: 1000;
        color: var(--accent-color);
    }

    .role-pill {
        display: inline-block;
        margin-top: .35rem;
        padding: .1rem .6rem;
        border-radius: 999px;
        font-size: .75rem;
        font-weight: 600;
        text-transform: uppercase;
    }

    .role-super-admin {
        background: rgba(231, 76, 60, 0.08);
        color: #e74c3c;
    }

    .role-admin {
        background: rgba(52, 152, 219, 0.08);
        color: #3498db;
    }

    .role-user {
        background: rgba(46, 204, 113, 0.08);
        color: #2ecc71;
    }

    .chart-actions {
        display: flex;
        justify-content: flex-end;
        margin-bottom: .5rem;
    }

    .save-pdf-btn {
        padding: 0.45rem 0.9rem;
        border: none;
        border-radius: 12px;
        background: var(--bg-tertiary);
        color: var(--text-primary);
        box-shadow:
            3px 3px 7px var(--shadow-dark),
            -3px -3px 7px var(--shadow-light);
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: .5rem;
        font-weight: 600;
        transition: transform .2s ease, box-shadow .2s ease, background 0.3s ease, color 0.3s ease;
    }

    .save-pdf-btn:hover {
        transform: translateY(-3px);
        box-shadow:
            5px 5px 10px var(--shadow-dark),
            -5px -5px 10px var(--shadow-light);
    }

    .save-pdf-btn svg {
        width: 16px;
        height: 16px;
    }

    .chart-card {
        margin-top: 1.5rem;
        padding: 1.5rem;
        border-radius: 16px;
        background: var(--bg-tertiary);
        box-shadow:
            4px 4px 12px var(--shadow-dark),
            -4px -4px 12px var(--shadow-light);
        transition: transform .2s ease, box-shadow .2s ease, background 0.3s ease, color 0.3s ease;
    }

    .chart-card:hover {
        transform: translateY(-4px);
        box-shadow:
            6px 6px 14px var(--shadow-dark-hover),
            -6px -6px 14px var(--shadow-light);
    }

    .chart-title {
        margin-bottom: 1rem;
        font-size: 1.15rem;
        font-weight: 700;
        color: var(--text-primary);
    }

    @media (max-width: 600px) {
        .chart-card {
            padding: 1rem;
        }
    }
</style>
<h1  style="text-align:left; margin:3rem 0 1.5rem 0; font-size:1.6rem; transition:.3s ease-in-out; color: var(--text-primary);">
    Statistiques des Utilisateurs
</h1>

<div class="user-stats-grid" data-aos="fade-up" data-aos-duration="400" data-aos-anchor-placement="top-bottom">
    <div class="user-stat-card">
        <div class="user-stat-label">Nombre total d'utilisateurs</div>
        <div class="user-stat-value total-users">{{ totalUsers ?? 0 }}</div>
    </div>

    <div class="user-stat-card">
        <div class="user-stat-label">Super administrateurs</div>
        <div class="user-stat-value">
            {{ rolesCount.ROLE_SUPER_ADMIN ?? 0 }}
        </div>
        <span class="role-pill role-super-admin">SUPERVISEURS DU SITE</span>
    </div>

    <div class="user-stat-card">
        <div class="user-stat-label">Administrateurs</div>
        <div class="user-stat-value">
            {{ rolesCount.ROLE_ADMIN ?? 0 }}
        </div>
        <span class="role-pill role-admin">MEDECINS</span>
    </div>

    <div class="user-stat-card">
        <div class="user-stat-label">Utilisateurs simples</div>
        <div class="user-stat-value">
            {{ rolesCount.ROLE_USER ?? 0 }}
        </div>
        <span class="role-pill role-user">COMPTES D'UNITÉ</span>
    </div>
</div>

<div class="chart-card" data-aos="fade-up" data-aos-duration="400" data-aos-delay="50" data-aos-anchor-placement="top-bottom">
    <div class="chart-title">Top 5 des médecins par nombre de consultations délivrées</div>
    <div class="chart-actions">
        <button class="save-pdf-btn" data-target="medecinsChart" data-title="Top 5 des médecins par nombre de consultations délivrées">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M17 3H7a2 2 0 0 0-2 2v14l5-3 5 3V5a2 2 0 0 0-2-2Z"/>
                <path d="M9 9h6"/>
            </svg>
            Enregistrer en PDF
        </button>
    </div>
    <canvas id="medecinsChart" style="width: 100%; max-height: 350px;"></canvas>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jspdf@2.5.1/dist/jspdf.umd.min.js"></script>
<script>
    (function () {
        const textColor = getComputedStyle(document.documentElement).getPropertyValue('--text-secondary') || '#888';

        function attachSavePdf() {
            const buttons = document.querySelectorAll('.save-pdf-btn');
            buttons.forEach((btn) => {
                if (btn.dataset.pdfBound === 'true') return;
                btn.addEventListener('click', () => {
                    const targetId = btn.dataset.target;
                    const title = btn.dataset.title || 'Graphique';
                    const canvas = document.getElementById(targetId);
                    if (!canvas || !window.jspdf) return;

                    const imgData = canvas.toDataURL('image/png', 1.0);
                    const orientation = canvas.width >= canvas.height ? 'l' : 'p';
                    const margin = 15; // mm
                    const pdf = new window.jspdf.jsPDF({
                        orientation,
                        unit: 'mm',
                        format: 'a4'
                    });

                    const pageWidth = pdf.internal.pageSize.getWidth();
                    const pageHeight = pdf.internal.pageSize.getHeight();
                    pdf.setFontSize(16);
                    pdf.text(title, margin, margin + 2);

                    const imgProps = pdf.getImageProperties(imgData);
                    const maxWidth = pageWidth - margin * 2;
                    const maxHeight = pageHeight - (margin * 3);
                    const ratio = Math.min(maxWidth / imgProps.width, maxHeight / imgProps.height);
                    const imgWidth = imgProps.width * ratio;
                    const imgHeight = imgProps.height * ratio;
                    const x = (pageWidth - imgWidth) / 2;
                    const y = margin + 8;
                    pdf.addImage(imgData, 'PNG', x, y, imgWidth, imgHeight);

                    const defaultName = (title || 'statistiques') + '.pdf';
                    const fileName = prompt('Nom du fichier PDF ?', defaultName) || defaultName;
                    pdf.save(fileName.endsWith('.pdf') ? fileName : fileName + '.pdf');
                });
                btn.dataset.pdfBound = 'true';
            });
        }

        const ctx = document.getElementById('medecinsChart');
        if (!ctx) return;

        const labels = {{ medecinsLabels|default([])|json_encode|raw }};
        const data = {{ medecinsData|default([])|json_encode|raw }};

        if (!labels.length) {
            ctx.insertAdjacentHTML('beforebegin',
                '<p style="color: ' + textColor + '; font-size: .9rem;">Aucune donnée disponible pour les médecins.</p>'
            );
            ctx.style.display = 'none';
            return;
        }

        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Consultations',
                    data: data,
                    backgroundColor: 'rgba(52, 152, 219, 0.6)',
                    borderColor: '#3498db',
                    borderWidth: 1
                }]
            },
            options: {
                indexAxis: 'y',
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    x: {
                        beginAtZero: true,
                        ticks: {
                            stepSize: 1,
                            color: textColor
                        },
                        grid: {
                            color: 'rgba(0,0,0,0.05)'
                        }
                    },
                    y: {
                        ticks: {
                            color: textColor
                        },
                        grid: {
                            display: false
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        backgroundColor: 'rgba(0,0,0,0.8)'
                    }
                }
            }
        });
        attachSavePdf();
        AOS.init();
    })();
</script>

