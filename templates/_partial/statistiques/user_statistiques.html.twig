<style>
    .user-stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 1.5rem;
        margin-bottom: 3rem;
    }

    .user-stat-card {
        background: var(--bg-tertiary);
        border-radius: 16px;
        padding: 1.25rem 1.5rem;
        box-shadow:
            4px 4px 12px var(--shadow-dark),
            -4px -4px 12px var(--shadow-light);
        color: var(--text-primary);
        transition: transform .2s ease, box-shadow .2s ease, background 0.3s ease, color 0.3s ease;
    }

    .user-stat-card:hover {
        transform: translateY(-4px);
        box-shadow:
            6px 6px 14px var(--shadow-dark-hover),
            -6px -6px 14px var(--shadow-light);
    }

    .user-stat-label {
        font-size: .9rem;
        color: var(--text-secondary);
        margin-bottom: .35rem;
    }

    .user-stat-value {
        font-size: 1.6rem;
        font-weight: 700;
    }

    .total-users {
        font-size: 4rem;
        font-weight: 1000;
        color: var(--accent-color);
    }

    .role-pill {
        display: inline-block;
        margin-top: .35rem;
        padding: .1rem .6rem;
        border-radius: 999px;
        font-size: .75rem;
        font-weight: 600;
        text-transform: uppercase;
    }

    .role-super-admin {
        background: rgba(231, 76, 60, 0.08);
        color: #e74c3c;
    }

    .role-admin {
        background: rgba(52, 152, 219, 0.08);
        color: #3498db;
    }

    .role-user {
        background: rgba(46, 204, 113, 0.08);
        color: #2ecc71;
    }

    .chart-actions {
        display: flex;
        justify-content: flex-end;
        margin-bottom: .5rem;
    }

    .save-pdf-btn {
        padding: 0.45rem 0.9rem;
        border: none;
        border-radius: 12px;
        background: var(--bg-tertiary);
        color: var(--text-primary);
        box-shadow:
            3px 3px 7px var(--shadow-dark),
            -3px -3px 7px var(--shadow-light);
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: .5rem;
        font-weight: 600;
        transition: transform .2s ease, box-shadow .2s ease, background 0.3s ease, color 0.3s ease;
    }

    .save-pdf-btn:hover {
        transform: translateY(-3px);
        box-shadow:
            5px 5px 10px var(--shadow-dark),
            -5px -5px 10px var(--shadow-light);
    }

    .save-pdf-btn svg {
        width: 16px;
        height: 16px;
    }

    .chart-card {
        margin-top: 1.5rem;
        padding: 1.5rem;
        border-radius: 16px;
        background: var(--bg-tertiary);
        box-shadow:
            4px 4px 12px var(--shadow-dark),
            -4px -4px 12px var(--shadow-light);
        transition: transform .2s ease, box-shadow .2s ease, background 0.3s ease, color 0.3s ease;
    }

    .chart-card:hover {
        transform: translateY(-4px);
        box-shadow:
            6px 6px 14px var(--shadow-dark-hover),
            -6px -6px 14px var(--shadow-light);
    }

    .chart-title {
        margin-bottom: 1rem;
        font-size: 1.15rem;
        font-weight: 700;
        color: var(--text-primary);
    }

    @media (max-width: 600px) {
        .chart-card {
            padding: 1rem;
        }
    }
