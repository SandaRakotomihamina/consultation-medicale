<style>
.navbar { 
    position: fixed;
    top: .5rem;
    left: .5rem;
    right: .5rem;

    background: #ffffffff;
    padding: 0.75rem 1rem;
    border-radius: 16px;

    margin-bottom: 1rem;
    z-index: 1000;
    box-sizing: border-box;

    box-shadow:
        8px 8px 16px rgba(0,0,0,0.15),
        -8px -8px 16px rgba(255,255,255,1);
    transition: all .25s ease;
}

.navbar:hover {
    transform: translateY(-3px);
    box-shadow:
        5px 5px 10px rgba(0,0,0,0.12),
        -5px -5px 10px rgba(255,255,255,1);
}

.navbar .container { 
    display:flex; 
    justify-content:space-between; 
    align-items:center; 
}

.navbar .brand { 
    color: #0366d6;
    text-decoration:none;
    font-weight:1000;
    font-size:1.5rem;
}

.navbar-left{
    display:flex;
    align-items: center;
    gap:0.75rem;
}

.brand{
    vertical-align: middle;
}

.navbar-right { 
    display:flex;
    gap:0.75rem;
    align-items:center;
    position: relative;
}

.navbar-right span { 
    color:#333;
    cursor: pointer;
    position: relative;
}

.btn-logout { 
    color:#444;
    background:#f0f0f0;
    padding:0.45rem 0.9rem;
    border-radius:10px;
    text-decoration:none;
    
    box-shadow:
        6px 6px 14px rgba(0,0,0,0.15),
        -6px -6px 14px rgba(255,255,255,1);
    transition: .2s;
}

.btn-logout:hover { 
    color:#222;
}

.btn-logout:active {
    box-shadow:
        inset 4px 4px 10px rgba(0,0,0,0.18),
        inset -4px -4px 10px rgba(255,255,255,1);
    transform: translateY(2px);
}

.user-card {
    display: none;
    position: absolute;
    top: 110%;
    right: 0;
    width: 280px;

    background-color: #f0f0f0;
    border-radius: 18px;

    box-shadow:
        10px 10px 18px rgba(0,0,0,0.15),
        -10px -10px 18px rgba(255,255,255,1);

    z-index: 1001;
    overflow: hidden;
    transition: transform 0.2s, box-shadow 0.2s;
}

.navbar-right span:hover .user-card {
    display: block;
}

.user-card-header {
    display: flex;
    align-items: center;
    gap: 0.6rem;
    padding: 0.8rem;
    background-color: #fafafa;
}

.user-card-header .avatar img {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    object-fit: cover;

    box-shadow:
        4px 4px 8px rgba(0,0,0,0.15),
        -4px -4px 8px rgba(255,255,255,1);
}

.user-card-header .name-grade {
    display: flex;
    flex-direction: column;
    overflow: hidden;
}

.user-card-header .name-grade span {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.matricule{
    font-size: 0.85rem;
    color: #666;
}

.user-card-body {
    padding: 0.8rem 1rem;
    font-size: 0.85rem;
}

.user-card-body strong {
    color: #333;
}

.user-card-body .role-badge {
    background: #4267B2;
    color: white;
    padding: 2px 6px;
    border-radius: 6px;
    font-size: 0.7rem;

    box-shadow:
        2px 2px 5px rgba(0,0,0,0.15),
        -2px -2px 5px rgba(255,255,255,1);
}

@media (max-width: 800px) {
    .navbar-right span {
        display: none;
    }
}
</style>

<nav class="navbar">
    <div class="container">
        <div class="navbar-left">
            <a href="{{ path('app_main') }}">
                <img src="{{ asset('images/logo.png') }}" alt="Logo de la gendarmerie" style="width: 60px; height: 80px"/>
            </a>
            <a href="{{ path('app_main') }}" class="brand">Consultation Médicale</a>
        </div>
        <div class="navbar-right">
            {% if app.user %}
                <span>
                    Connecté en tant que <strong>"{{ app.user.username }}"</strong>

                    <!-- Card miniature -->
                    <div class="user-card">
                        <div class="user-card-header">
                            <div class="avatar">
                                <img src="{{ asset('images/avatar.png') }}" alt="Avatar">
                            </div>
                            <div class="name-grade">
                                <div style="display: flex; gap: .2rem;">
                                    <span class="grade" title="{{app.user.title}}">{{ app.user.title }}</span>
                                    <span class="name" title="{{app.user.name}}">{{ app.user.name }}</span>
                                </div>
                                <span class="matricule">{{ app.user.Matricule }}</span>
                            </div>
                        </div>
                        <div class="user-card-body">
                            <div><strong>Nom d'utilisateur :</strong> {{ app.user.username }}</div>
                            <div><strong>ID :</strong> {{ app.user.id }}</div>
                            <div><strong>Rôles :</strong>
                                {% set roleLabels = {
                                    'ROLE_SUPER_ADMIN': 'Super administrateur',
                                    'ROLE_ADMIN': 'Administrateur',
                                    'ROLE_USER': 'Utilisateur simple'
                                } %}
                                {% for role in app.user.roles %}
                                    <span class="role-badge">{{ roleLabels[role] ?? role }}</span>
                                {% endfor %}
                            </div>
                        </div>
                    </div>

                </span>

                <a href="{{ path('app_logout') }}"
                   class="btn-logout"
                   onclick="return confirm('Voulez-vous vraiment vous déconnecter ?');"
                   title="Déconnexion de ce compte">
                    Déconnexion
                </a>

            {% else %}
                <a href="{{ path('app_login') }}" class="btn-logout">Se connecter</a>
            {% endif %}
        </div>
    </div>
</nav>
