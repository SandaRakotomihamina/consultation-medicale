<style>
    .navbar { 
        position: fixed;
        top: .5rem;
        left: .5rem;
        right: .5rem;

        background: var(--bg-primary);
        padding: 0.75rem 1rem;
        border-radius: 16px;

        margin-bottom: 1rem;
        z-index: 1000;
        box-sizing: border-box;

        box-shadow:
            5px 5px 10px var(--shadow-dark),
            -5px -5px 10px var(--shadow-light);
        transition: all .25s ease, background 0.3s ease;
    }

    .navbar:hover {
        transform: translateY(-3px);
        box-shadow:
        8px 8px 16px var(--shadow-dark-hover),
        -8px -8px 16px var(--shadow-light);
            
    }

    .navbar .container { 
        display:flex; 
        justify-content:space-between; 
        align-items:center; 
    }

    .navbar .brand { 
        color: var(--accent-color);
        text-decoration:none;
        font-weight:1000;
        font-size:1.5rem;
        transition: color 0.3s ease;
    }

    .navbar-left{
        display:flex;
        align-items: center;
        gap:0.75rem;
    }

    .brand{
        vertical-align: middle;
        transition: font-size .25s ease;
    }

    .navbar-right { 
        display:flex;
        gap:0.75rem;
        align-items:center;
        position: relative;
    }

    .navbar-right span { 
        color: var(--text-primary);
        cursor: pointer;
        position: relative;
        transition: color 0.3s ease;
    }

    .btn-theme-toggle {
        background: var(--bg-secondary);
        border: none;
        padding: 0.5rem;
        border-radius: 10px;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        color: var(--text-primary);
        transition: all 0.3s ease;
        box-shadow:
            3px 3px 7px var(--shadow-dark),
            -3px -3px 7px var(--shadow-light);
    }

    .btn-theme-toggle:hover {
        transform: translateY(-2px);
        box-shadow:
            5px 5px 10px var(--shadow-dark-hover),
            -5px -5px 10px var(--shadow-light);
    }

    .btn-theme-toggle:active {
        transform: translateY(1px);
        box-shadow:
            inset 3px 3px 7px var(--shadow-dark),
            inset -3px -3px 7px var(--shadow-light);
    }

    .btn-theme-toggle svg {
        width: 20px;
        height: 20px;
        stroke: currentColor;
        fill: none;
    }

    .btn-logout {
        color: var(--text-secondary);
        background: var(--bg-secondary);
        padding:0.45rem 0.9rem;
        border-radius:10px;
        text-decoration:none;
        
        box-shadow:
            6px 6px 14px var(--shadow-dark),
            -6px -6px 14px var(--shadow-light);
        transition: .2s, background 0.3s ease, color 0.3s ease;
    }

    .btn-logout:hover { 
        color: var(--text-primary);
    }

    .btn-logout:active {
        box-shadow:
            inset 4px 4px 10px var(--shadow-dark),
            inset -4px -4px 10px var(--shadow-light);
        transform: translateY(2px);
    }

    .btn-logout svg {
        animation: moveUpDown 0.6s ease-in-out infinite;
    }

    @keyframes moveUpDown {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-4px); }
    }


    .user-card {
        display: none;
        position: absolute;
        top: 110%;
        right: 0;
        width: 280px;

        background-color: var(--bg-secondary);
        border-radius: 18px;

        box-shadow:
            10px 10px 18px var(--shadow-dark),
            -10px -10px 18px var(--shadow-light);

        z-index: 1001;
        overflow: hidden;
        transition: transform 0.2s, box-shadow 0.2s, background 0.3s ease;
    }

    .navbar-right span:hover .user-card {
        display: block;
    }

    .user-card-header {
        display: flex;
        align-items: center;
        gap: 0.6rem;
        padding: 0.8rem;
        background-color: var(--bg-tertiary);
        transition: background 0.3s ease;
    }

    .user-card-header .avatar img {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        object-fit: cover;

        box-shadow:
            4px 4px 8px var(--shadow-dark),
            -4px -4px 8px var(--shadow-light);
    }

    .user-card-header .name-grade {
        display: flex;
        flex-direction: column;
        overflow: hidden;
    }

    .user-card-header .name-grade span {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .matricule{
        font-size: 0.85rem;
        color: var(--text-tertiary);
        transition: color 0.3s ease;
    }

    .user-card-body {
        padding: 0.8rem 1rem;
        font-size: 0.85rem;
    }

    .user-card-body strong {
        color: var(--text-primary);
        transition: color 0.3s ease;
    }

    .user-card-body .role-badge {
        background: #4267B2;
        color: white;
        padding: 2px 6px;
        border-radius: 6px;
        font-size: 0.7rem;

        box-shadow:
            2px 2px 5px var(--shadow-dark),
            -2px -2px 5px var(--shadow-light);
    }

    @media (max-width: 960px) {
        .navbar-right span:not(.theme-icon) {
            display: none;
        }
        .icon-user {
            display: block !important;
        }
    }
    @media (max-width: 870px) {
        .navbar-left span {
            display: none;
        }
    }
    @media (max-width: 600px) {
        .icon {
            width: 40px !important;
            height: 60px !important;
            transition: font-size .25s ease;
        }
        .brand {
            font-size: 1rem !important;
            transition: font-size .25s ease;
        }
    }

    .icon {
        width: 60px; 
        height: 80px;
        transition: font-size .25s ease;
    }
</style>

<nav class="navbar">
    <div class="container">
        <div class="navbar-left">
            <a href="{{ path('app_main') }}">
                <img src="{{ asset('images/logo.png') }}" alt="Logo de la gendarmerie" class="icon"/>
            </a>
            <a href="{{ path('app_main') }}" class="brand">Consultation Médicale</a>
            <span>{{ include('_partial/animations/animation_nav.html.twig') }}</span>
        </div>
        <div class="navbar-right">
            {% if app.user %}
                <span>
                    Connecté en tant que <strong>"{{ app.user.username }}"</strong>

                    <!-- Card miniature -->
                    <div class="user-card">
                        <div class="user-card-header">
                            <div class="avatar">
                                <!-- icon avatar -->
                                <svg fill="currentColor" width="50px" height="50px" viewBox="0 0 32 32" id="icon" xmlns="http://www.w3.org/2000/svg" style="color: var(--text-primary);">
                                    <path d="M16,8a5,5,0,1,0,5,5A5,5,0,0,0,16,8Zm0,8a3,3,0,1,1,3-3A3.0034,3.0034,0,0,1,16,16Z"/>
                                    <path d="M16,2A14,14,0,1,0,30,16,14.0158,14.0158,0,0,0,16,2ZM10,26.3765V25a3.0033,3.0033,0,0,1,3-3h6a3.0033,3.0033,0,0,1,3,3v1.3765a11.8989,11.8989,0,0,1-12,0Zm13.9925-1.4507A5.0016,5.0016,0,0,0,19,20H13a5.0016,5.0016,0,0,0-4.9925,4.9258,12,12,0,1,1,15.985,0Z"/>
                                    <rect id="_Transparent_Rectangle_" data-name="&lt;Transparent Rectangle&gt;" style="fill:none;" class="cls-1" width="32" height="32"/>
                                </svg>
                            </div>
                            <div class="name-grade">
                                <div style="display: flex; gap: .2rem;">
                                    {% if "ROLE_USER" in app.user.roles %}
                                        <span class="grade" style="color: #4267B2;" title="libelé unité: {{app.user.libute}}">{{ app.user.libute }}</span>
                                        <span class="name" style="margin-left: 0.5rem;" title="Localisation: {{app.user.local}}">{{ app.user.local }}</span>
                                    {% else %}
                                        <span class="grade" style="color: #4267B2;" title="Titre: {{app.user.title}}">{{ app.user.title }}</span>
                                        <span class="name" style="margin-left: 0.5rem;" title="Nom: {{app.user.name}}">{{ app.user.name }}</span>
                                    {% endif %}
                                    
                                </div>
                                {% if "ROLE_USER" in app.user.roles %}
                                    <span class="matricule" title="Code unité: {{app.user.codute}}">{{ app.user.codute }}</span>
                                {% else %}
                                    <span class="matricule" title="Matricule: {{app.user.Matricule}}">{{ app.user.codute }}</span>
                                {% endif %}
                            </div>
                        </div>
                        <div class="user-card-body">
                            <div><strong>Nom d'utilisateur :</strong> {{ app.user.username }}</div>
                            <div><strong>Identifiand du compte :</strong> {{ app.user.id }}</div>
                            <div><strong>Rôles :</strong>
                                {% set roleLabels = {
                                    'ROLE_SUPER_ADMIN': 'Superviseur du site',
                                    'ROLE_ADMIN': 'Medecin',
                                    'ROLE_USER': 'Compte d\'unité'
                                } %}
                                {% for role in app.user.roles %}
                                    <span class="role-badge">{{ roleLabels[role] ?? role }}</span>
                                {% endfor %}
                            </div>
                        </div>
                    </div>

                </span>
                <button 
                    class="btn-theme-toggle" 
                    data-controller="theme" 
                    data-action="click->theme#toggle"
                    data-theme-target="toggle"
                    aria-label="Basculer entre le mode clair et sombre"
                    title="Basculer le thème">
                    <span class="theme-icon" data-theme-target="icon">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
                        </svg>
                    </span>
                </button>

                <a href="{{ path('app_logout') }}"
                   class="btn-logout"
                   onclick="return confirm('Voulez-vous vraiment vous déconnecter ?');"
                   title="Déconnexion de ce compte">
                    Déconnexion
                </a>

            {% else %}
                <a href="{{ path('app_login') }}" class="btn-logout">Se connecter</a>
            {% endif %}
        </div>
    </div>
</nav>

<script>
    (function(){
        function initLogoutHover() {
            const buttons = document.querySelectorAll('.btn-logout');
            if (!buttons || buttons.length === 0) return;

            buttons.forEach((btn) => {
                    const text = btn.textContent ? btn.textContent.trim() : '';
                    const isLogout = /Déconnexion/i.test(text);
                    const isLogin = /Se connecter/i.test(text) || /Se connecter/i.test(text.replace('\u00A0',' '));
                    if (!isLogout && !isLogin) return;

                    if (btn.dataset.authHoverInitialized === 'true') return;

                    if (!btn.dataset.originalContent) btn.dataset.originalContent = btn.innerHTML;

                    if (!btn.dataset.originalWidth) {
                        const measure = () => {
                            const rect = btn.getBoundingClientRect();
                            btn.dataset.originalWidth = String(Math.ceil(rect.width));

                            btn.style.boxSizing = btn.style.boxSizing || 'border-box';
                            btn.style.display = btn.style.display || 'inline-flex';
                            btn.style.alignItems = btn.style.alignItems || 'center';
                            btn.style.justifyContent = btn.style.justifyContent || 'center';
                            btn.style.minWidth = btn.dataset.originalWidth + 'px';
                        };
                        if (window.requestAnimationFrame) requestAnimationFrame(measure); else setTimeout(measure, 50);
                    }

                    const originalContent = btn.dataset.originalContent;
                    const originalWidth = (btn.dataset.originalWidth ? btn.dataset.originalWidth + 'px' : null);

                    const svgLogout = `
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true" width="18" height="18">
                            <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4" />
                            <path d="M16 17l5-5-5-5" />
                            <path d="M21 12H9" />
                        </svg>
                    `;

                    const svgLogin = `
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true" width="18" height="18">
                            <path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4" />
                            <path d="M10 17l5-5-5-5" />
                            <path d="M15 12H3" />
                        </svg>
                    `;

                    const svg = isLogout ? svgLogout : svgLogin;

                    const onEnter = () => {
                        btn.innerHTML = svg;
                    };

                    const onLeave = () => {
                        btn.innerHTML = originalContent;
                    };

                    btn.addEventListener('mouseenter', onEnter);
                    btn.addEventListener('mouseleave', onLeave);

                    btn.dataset.authHoverInitialized = 'true';
                });
        }

        document.addEventListener('DOMContentLoaded', initLogoutHover);
        document.addEventListener('turbo:load', initLogoutHover);
        initLogoutHover();
    })();
</script>
