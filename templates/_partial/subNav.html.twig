<style>
    .subnav {
        position: fixed;
        top: 130px;
        left: .5rem;
        right: .5rem;
        box-shadow:
            5px 5px 10px var(--shadow-dark),
            -5px -5px 10px var(--shadow-light);
        z-index: 900;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.75rem 1rem;
        background: var(--bg-primary);
        border-radius: 16px;
        box-sizing: border-box;
        flex-wrap: wrap;
        gap: 2em;

        transform: translateY(0);
        transition: all .25s ease, background 0.3s ease;
    }

    .subnav:hover {
        transform: translateY(-3px);
        box-shadow:
            8px 8px 16px var(--shadow-dark-hover),
            -8px -8px 16px var(--shadow-light);
    }

    .subnav.subnav-hide {
        transform: translateY(-120%);
    }

    .subnav-form {
        display: flex;
        gap: 1rem;
        flex-grow: 1;
    }

    .subnav-input {
        padding: .4rem .6rem;
        border: none;
        border-radius: 10px;
        font-weight: 600;
        font-size: .9rem;
        color: var(--text-primary);
        background: var(--bg-tertiary);
        min-width: 300px;
        flex-grow: 1;
        box-shadow:
            3px 3px 7px var(--shadow-dark),
            -3px -3px 7px var(--shadow-light);
        transition: all .25s ease, background 0.3s ease, color 0.3s ease;
    }

    .subnav-input:focus {
        outline: none;
        border-color: none;
    }

    .subnav-input:hover {
        transform: translateY(-3px);
        box-shadow:
            5px 5px 10px var(--shadow-dark),
            -5px -5px 10px var(--shadow-light);
    }

    .button-3d {
        padding: 10px 18px;
        background: var(--bg-tertiary);
        border-radius: 10px;
        border: none;
        cursor: pointer;
        font-weight: 600;
        font-size: .9rem;
        color: var(--text-primary);
        transition: .15s ease-in-out, background 0.3s ease, color 0.3s ease;
        box-shadow:
            3px 3px 7px var(--shadow-dark),
            -3px -3px 7px var(--shadow-light);
        text-decoration: none;
        display: inline-block;
    }

    .button-3d:hover{
        transform: translateY(-3px);
    }

    .button-3d:active {
        transform: translateY(2px);
        box-shadow:
            inset 3px 3px 7px var(--shadow-dark),
            inset -3px -3px 7px var(--shadow-light);
    }

    .options {
        width: 100%;
        margin-bottom: .5rem;
        text-align: center;
        color: var(--text-secondary) !important;
        text-decoration: none;
        transition: color 0.3s ease;
    }


    .subnav-dropdown ul {
        display: flex;
        flex-direction: column;
        align-items: center;  
        justify-content: center;
        padding: 0;
        margin: 0;
        width: 100%;
    }

    .subnav-dropdown li {
        list-style-type: none;
        width: 100%;
        display: flex;
        justify-content: center;
    }

    .subnav-actions {
        display: flex;
        flex-direction: row;
        gap: 1rem;
        align-items: center;
        white-space: nowrap;
    }

    .hamburger-menu {
        display: inline-block;
        cursor: pointer;
        width: 35px;
        margin-top: 4px;
    }

    .hamburger-menu span {
        display: block;
        width: 25px;
        height: 4px;
        margin: 4px 0;
        background-color: var(--text-primary);
        border-radius: 2px;
        transition: all 0.4s ease, background-color 0.3s ease;
    }

    .hamburger-menu.open span:nth-child(1) {
        transform: rotate(45deg) translate(5px, 6.5px);
    }

    .hamburger-menu.open span:nth-child(2) {
        opacity: 0;
    }

    .hamburger-menu.open span:nth-child(3) {
        transform: rotate(-45deg) translate(5px, -6.5px);
    }

    .subnav-dropdown {
        position: absolute;
        right: 0;
        top: calc(100% + 8px);
        background: var(--bg-primary);
        border: 1px solid var(--border-color);
        box-shadow: 0 6px 18px var(--shadow-dark);
        border-radius: 6px;
        min-width: 180px;
        padding: 0.4rem 0;
        display: none;
        z-index: 999;
        transition: background 0.3s ease;
    }
    
    .alert-3d {
        margin-top: 140px;
        padding: 1.5rem;
        border-radius: 16px;
        background: var(--bg-tertiary);
        color: var(--text-primary);
        font-size: 1.1rem;
        text-align: center;
        box-shadow:
            4px 4px 12px var(--shadow-dark),
            -4px -4px 12px var(--shadow-light);
        transition: all .25s ease, background 0.3s ease, color 0.3s ease;
    }

    .alert-3d:hover{
        transform: translateY(-3px);
        transition: all .25s ease;
        box-shadow:
            5px 5px 10px var(--shadow-dark),
            -5px -5px 10px var(--shadow-light);
    }

    .subnav-dropdown.open {
        display: block;
        animation: dropdownFade .14s ease-out;
    }

    #search-button {
        width: 120px;
        height: 38px;
        display: flex;
        justify-content: center;
        align-items: center;
        transition: all 0.25s ease;
    }

    .button-svg svg {
        width: 20px;
        height: 20px;
        animation: moveUpDown 0.6s ease-in-out infinite;
    }

    @keyframes moveUpDown {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-4px); }
    }


    @keyframes dropdownFade {
        from { transform: translateY(-4px); opacity: 0 }
        to { transform: translateY(0); opacity: 1 }
    }

    .animations-slideshow {
        width: 400px;
        height: 400px;
        position: relative;
        overflow: hidden;
        border-radius: 12px;
        background: transparent;
        display: block;
    }

    .animations-slideshow .slide {
        width: 100%;
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
        display: none;
    }

    .animations-slideshow .slide.active {
        display: block;
    }

    @media (max-width: 1000px) {
        .subnav {
            justify-content: center;
        }

        .subnav-actions {
            justify-content: right;
            width: 100%;
            margin-top: 10px;
        }
    }

    @media(max-width: 600px) {
        .subnav {
            top: 110px;
        }
    }

    @media (max-width: 480px) {

        .subnav {
            gap: .5rem !important;
            padding: 0.5rem !important;
            place-items: center;
        }

        .subnav-input {
            min-width: 180px !important;
        }

        .subnav-actions {
            flex-wrap: nowrap !important;
        }
        .button-3d {
            padding: 8px 12px !important;
            font-size: .9rem !important;
        }
        h1.page-title {
            margin-top: 14rem !important;
        }
    }
</style>

{% if app.user %}
