<style>
    .subnav {
        position: relative;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: .5rem 0;
        width: 100%;
        margin-top: 140px;
        flex-wrap: wrap;
    }

    .subnav-form {
        display: flex;
        gap: 1rem;
        margin-left: 10px;
        flex-grow: 1;
    }

    .subnav-input {
        padding: .4rem .6rem;
        border: 1px solid #ccc;
        border-radius: 4px;
        min-width: 250px;
        flex-grow: 1;
    }

    .subnav-button {
        padding: .45rem .8rem;
        background: #0366d6;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        margin-right: 1rem;
    }

    /* ===== MENU BURGER OPTIONS CENTRÉES ===== */

    .subnav-dropdown ul {
        display: flex;
        flex-direction: column;
        align-items: center;  /* ← centre tous les items */
        justify-content: center;
        padding: 0;
        margin: 0;
        width: 100%;
    }

    .subnav-dropdown li {
        list-style-type: none;
        width: 100%;
        display: flex;
        justify-content: center; /* ← centre l’item dans la ligne */
    }

    .options{
        margin-bottom: 0.5rem;
        color: #333;
        text-decoration: none;
        display: flex;
        justify-content: center; /* ← centre le texte */
        align-items: center;
        padding: 0.4rem 1.2rem;
        text-align: center;      /* ← évite le texte aligné à gauche */
        width: 100%;             /* ← occupe la largeur du conteneur */
    }

    /* ======================================== */

    .subnav-actions {
        display: flex;
        flex-direction: row;
        gap: 1rem;
        align-items: center;
        white-space: nowrap;
    }

    @media (max-width: 900px) {
        .subnav {
            justify-content: center;
        }

        .subnav-actions {
            justify-content: right;
            width: 100%;
            margin-top: 10px;
        }
    }

    .btn-primary {
        padding: .4rem .7rem;
        background: #28a745;
        color: #fff;
        border-radius: 4px;
        text-decoration: none;
        white-space: nowrap;
    }

    .hamburger-menu {
        display: inline-block;
        cursor: pointer;
        width: 35px;
        margin-top: 4px;
    }

    .hamburger-menu span {
        display: block;
        width: 25px;
        height: 4px;
        margin: 4px 0;
        background-color: #333;
        border-radius: 2px;
    }

    .subnav-dropdown {
        position: absolute;
        right: 0;
        top: calc(100% + 8px);
        background: #fff;
        border: 1px solid rgba(0,0,0,0.08);
        box-shadow: 0 6px 18px rgba(0,0,0,0.12);
        border-radius: 6px;
        min-width: 180px;
        padding: 0.4rem 0;
        display: none;
        z-index: 999;
    }

    .avertissement{
        margin-top: 140px;
        padding: 1rem;
        background-color: #caf0b0ff;
        border: 1px solid #000000ff;
        border-radius: 4px;
        color: #1b1818ff;
        text-align: center;
    }

    .subnav-dropdown.open {
        display: block;
        animation: dropdownFade .14s ease-out;
    }

    @keyframes dropdownFade {
        from { transform: translateY(-4px); opacity: 0 }
        to { transform: translateY(0); opacity: 1 }
    }
</style>


{% if app.user %}
    <div class="subnav">
        <form action="{{ path('app_search') }}" method="get" class="subnav-form">
            <input type="search" name="q" placeholder="Rechercher..." aria-label="Rechercher" class="subnav-input" required/>
            <button type="submit" class="subnav-button">Rechercher</button>
        </form>

        <div class="subnav-actions">

            {# Pour ceux qui font des consultations #}
            <a href="{{ subnav_button_path|default(path('app_list_demande')) }}" class="btn-primary"
               {% if 'ROLE_SUPER_ADMIN' in app.user.roles or 'ROLE_USER' in app.user.roles and 'ROLE_ADMIN' not in app.user.roles %}
                   style="pointer-events: none; opacity: 0.5; cursor: default;"
               {% endif %}
            >
                <strong>+</strong> Nouvel consultation
            </a>

            {# Pour ceux qui font des autorisation de consultation #}
            <a href="{{ subnav_button_path|default(path('app_new_demande')) }}" class="btn-primary"
               {% if 'ROLE_USER' not in app.user.roles %}
                   style="pointer-events: none; opacity: 0.5; cursor: default;"
               {% endif %}
            >
                <strong>+</strong> Nouvel demande
            </a>

            {# Hamburger #}
            <div class="hamburger-menu"
                role="button"
                aria-label="Ouvrir le menu"
                aria-expanded="false"
                tabindex="0"
            >
                <span></span>
                <span></span>
                <span></span>
            </div>

            <div class="subnav-dropdown" id="subnavDropdown" role="menu" aria-hidden="true">
                <ul>
                    <li>
                        <a href="{{ path('app_new_user') }}"
                           role="menuitem"
                           class="options"
                           {% if 'ROLE_SUPER_ADMIN' not in app.user.roles %}
                               style="pointer-events: none; opacity: 0.5; cursor: not-allowed;"
                               aria-disabled="true"
                           {% endif %}
                        >Nouvel utilisateur</a>
                    </li>

                    <li>
                        <a href="{{ path('app_list_user') }}"
                           role="menuitem"
                           class="options"
                           {% if 'ROLE_SUPER_ADMIN' not in app.user.roles and 'ROLE_USER' not in app.user.roles %}
                               style="pointer-events: none; opacity: 0.5; cursor: not-allowed;"
                               aria-disabled="true"
                           {% endif %}
                        >Liste des utilisateurs</a>
                    </li>
                </ul>
            </div>

        </div>
    </div>

{% else %}
    <div class="avertissement">
        Bienvenu sur l'application de gestion des consultations de la gendarmerie national. 
        Veuillez vous connecter pour accéder aux fonctionnalités.
    </div>
{% endif %}
