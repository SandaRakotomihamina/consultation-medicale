<style>

    .subnav {
        position: relative;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: .5rem 0;
        width: 100%;
        margin-top: 140px;
        flex-wrap: wrap;
        gap: 2em;
    }

    .subnav-form {
        display: flex;
        gap: 1rem;
        margin-left: 10px;
        flex-grow: 1;
    }

    .subnav-input {
        padding: .4rem .6rem;
        border: none;
        border-radius: 10px;
        font-weight: 600;
        font-size: .9rem;
        color: #333;
        background: #f5f5f5;
        min-width: 300px;
        flex-grow: 1;
        box-shadow:
            3px 3px 7px rgba(0, 0, 0, 0.16),
            -3px -3px 7px rgba(255, 255, 255, 0.9);
        transition: all .25s ease;
    }

    .subnav-input:focus {
        outline: none;
        border-color: none;
    }

    .subnav-input:hover {
        transform: translateY(-3px);
        box-shadow:
            5px 5px 10px rgba(0,0,0,0.12),
            -5px -5px 10px rgba(255,255,255,1);
    }

    .button-3d {
        padding: 10px 18px;
        background: #f5f5f5;
        border-radius: 10px;
        border: none;
        cursor: pointer;
        font-weight: 600;
        font-size: .9rem;
        color: #333;
        transition: .15s ease-in-out;
        box-shadow:
            3px 3px 7px rgba(0, 0, 0, 0.16),
            -3px -3px 7px rgba(255, 255, 255, 0.9);
        text-decoration: none;
        display: inline-block;
    }

    .button-3d:hover{
        transform: translateY(-3px);
    }

    .button-3d:active {
        transform: translateY(2px);
        box-shadow:
            inset 3px 3px 7px rgba(0, 0, 0, 0.18),
            inset -3px -3px 7px rgba(255, 255, 255, 0.9);
    }

    .options {
        width: 100%;
        margin-bottom: .5rem;
        text-align: center;
        color: #444 !important;
        text-decoration: none;
    }


    .subnav-dropdown ul {
        display: flex;
        flex-direction: column;
        align-items: center;  
        justify-content: center;
        padding: 0;
        margin: 0;
        width: 100%;
    }

    .subnav-dropdown li {
        list-style-type: none;
        width: 100%;
        display: flex;
        justify-content: center;
    }


    .subnav-actions {
        display: flex;
        flex-direction: row;
        gap: 1rem;
        align-items: center;
        white-space: nowrap;
    }

    @media (max-width: 1000px) {
        .subnav {
            justify-content: center;
        }

        .subnav-actions {
            justify-content: right;
            width: 100%;
            margin-top: 10px;
        }
    }

    .hamburger-menu {
        display: inline-block;
        cursor: pointer;
        width: 35px;
        margin-top: 4px;
    }

    .hamburger-menu span {
        display: block;
        width: 25px;
        height: 4px;
        margin: 4px 0;
        background-color: #333;
        border-radius: 2px;
        transition: all 0.4s ease;
    }

    .hamburger-menu.open span:nth-child(1) {
        transform: rotate(45deg) translate(5px, 6.5px);
    }

    .hamburger-menu.open span:nth-child(2) {
        opacity: 0;
    }

    .hamburger-menu.open span:nth-child(3) {
        transform: rotate(-45deg) translate(5px, -6.5px);
    }


    .subnav-dropdown {
        position: absolute;
        right: 0;
        top: calc(100% + 8px);
        background: #fff;
        border: 1px solid rgba(0,0,0,0.08);
        box-shadow: 0 6px 18px rgba(0,0,0,0.12);
        border-radius: 6px;
        min-width: 180px;
        padding: 0.4rem 0;
        display: none;
        z-index: 999;
    }
    
    .alert-3d {
        margin-top: 140px;
        padding: 1.5rem;
        border-radius: 16px;
        background: #f5f5f5;
        color: #222;
        font-size: 1.1rem;
        text-align: center;
        box-shadow:
            4px 4px 12px rgba(0,0,0,0.18),
            -4px -4px 12px rgba(255,255,255,0.9);
    }

    .alert-3d:hover{
        transform: translateY(-3px);
        transition: all .25s ease;
        box-shadow:
            5px 5px 10px rgba(0,0,0,0.12),
            -5px -5px 10px rgba(255,255,255,1);
    }

    .subnav-dropdown.open {
        display: block;
        animation: dropdownFade .14s ease-out;
    }


    #search-button {
        width: 120px;
        height: 38px;
        display: flex;
        justify-content: center;
        align-items: center;
        transition: all 0.25s ease;
    }

    .button-svg svg {
        width: 20px;
        height: 20px;
        animation: moveUpDown 0.6s ease-in-out infinite;
    }

    @keyframes moveUpDown {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-4px); }
    }


    @keyframes dropdownFade {
        from { transform: translateY(-4px); opacity: 0 }
        to { transform: translateY(0); opacity: 1 }
    }

    .animations-slideshow {
        width: 400px;
        height: 400px;
        position: relative;
        overflow: hidden;
        border-radius: 12px;
        background: transparent;
        display: block;
    }

    .animations-slideshow .slide {
        width: 100%;
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
        display: none;
    }

    .animations-slideshow .slide.active {
        display: block;
    }

</style>

{% if app.user %}
    <div class="subnav">

        <form action="{{ path('app_search') }}" method="get" class="subnav-form">
            <input type="search" id="search-input" name="q" placeholder="Rechercher..." class="subnav-input" title="Rechercher par Matricule, par Grade ou par Nom" required />
            <button type="submit" id="search-button" class="button-3d" title="Rechercher">Rechercher</button>
        </form>

        

        <div class="subnav-actions">

            {# Bouton nouvelle consultation #}
            <a href="{{ subnav_button_path|default(path('app_list_demande')) }}"
               class="button-3d"
               {% if 'ROLE_SUPER_ADMIN' in app.user.roles or ('ROLE_USER' in app.user.roles and 'ROLE_ADMIN' not in app.user.roles) %}
                   style="pointer-events: none; opacity: 0.5;"
               {% endif %}
            >
                <strong>+</strong> Nouvelle consultation
            </a>

            {# Bouton nouvelle demande #}
            <a href="{{ subnav_button_path|default(path('app_new_demande')) }}"
               class="button-3d"
               {% if 'ROLE_USER' not in app.user.roles %}
                   style="pointer-events: none; opacity: 0.5;"
               {% endif %}
            >
                <strong>+</strong> Nouvelle demande
            </a>

            {# Hamburger menu #}
            <div class="hamburger-menu" role="button" aria-label="Menu" tabindex="0">
                <span></span>
                <span></span>
                <span></span>
            </div>

            {# Dropdown #}
            <div class="subnav-dropdown" id="subnavDropdown">
                <ul>
                    <li>
                        <a href="{{ path('app_new_user') }}"
                            class="options"
                           {% if 'ROLE_SUPER_ADMIN' not in app.user.roles %}
                               style="pointer-events: none; opacity: 0.5;"
                           {% endif %}
                        >Nouvel utilisateur</a>
                    </li>

                    <li>
                        <a href="{{ path('app_list_user') }}"
                            class="options"
                           {% if 'ROLE_SUPER_ADMIN' not in app.user.roles and 'ROLE_USER' not in app.user.roles %}
                               style="pointer-events: none; opacity: 0.5;"
                           {% endif %}
                        >Liste des utilisateurs</a>
                    </li>
                </ul>
            </div>

        </div>
    </div>

{% else %}

    <div class="alert-3d">
        Bienvenue sur l'application de gestion des consultations médicales de la gendarmerie nationale.
        Veuillez vous connecter pour accéder aux fonctionnalités.
    </div>

    <div style="width: 400px; height: 400px; display: grid; place-items: center; margin: 0 auto;">
        <div class="animations-slideshow" data-controller="animation-slideshow" data-animation-slideshow-interval-value="6000">
            <div class="slide active" data-animation-slideshow-target="slide" aria-hidden="false">
                {% include '_partial/animations/animation1.html.twig' %}
            </div>
            <div class="slide" data-animation-slideshow-target="slide" aria-hidden="true">
                {% include '_partial/animations/animation2.html.twig' %}
            </div>
            <div class="slide" data-animation-slideshow-target="slide" aria-hidden="true">
                {% include '_partial/animations/animation3.html.twig' %}
            </div>
            <div class="slide" data-animation-slideshow-target="slide" aria-hidden="true">
                {% include '_partial/animations/animations4.html.twig' %}
            </div>
        </div>
    </div>

{% endif %}

<script>
    (function(){
        function initSubnav() {
            const input = document.getElementById('search-input');
            const searchButton = document.getElementById('search-button');
            if (!input || !searchButton) return;

            if (searchButton.dataset.subnavInitialized === 'true') return;

            if (!searchButton.dataset.originalContent) {
                searchButton.dataset.originalContent = searchButton.innerHTML;
            }
            const originalContent = searchButton.dataset.originalContent;

            const onInput = () => {
                searchButton.title = `Rechercher "${input.value}"`;
            };

            const onMouseEnter = () => {
                searchButton.innerHTML = `
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                            d="M21 21l-4.35-4.35m0 0A7.5 7.5 0 1110.5 3a7.5 7.5 0 016.15 13.65z"/>
                    </svg>
                `;
                searchButton.classList.add('button-svg');
            };

            const onMouseLeave = () => {
                searchButton.innerHTML = originalContent;
                searchButton.classList.remove('button-svg');
            };

            input.addEventListener('input', onInput);
            searchButton.addEventListener('mouseenter', onMouseEnter);
            searchButton.addEventListener('mouseleave', onMouseLeave);

            searchButton.dataset.subnavInitialized = 'true';
        }

        document.addEventListener('DOMContentLoaded', initSubnav);
        document.addEventListener('turbo:load', initSubnav);
        initSubnav();
    })();
</script>
